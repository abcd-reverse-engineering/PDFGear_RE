<UserControl
	x:Class="pdfconverter.Controls.ImagePreviewControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfconverter.Controls" xmlns:ctrl="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Stretch"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Padding="8">
	<Grid
		x:Name="LayoutRoot"
		IsEnabled="{Binding ElementName=_Image, Path=IsVisible}"
		Margin="{Binding Path=Padding, RelativeSource={RelativeSource AncestorType=local:ImagePreviewControl}}">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Text="Preview"
			HorizontalAlignment="Left" />
		<Grid
			x:Name="_ImageContainer"
			Margin="0,8,0,0"
			Row="1">
			<ctrl:ProgressRing
				x:Name="_LoadingProgressRing"
				Width="36"
				Height="36"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Visibility="Collapsed"
				IsActive="{Binding Path=IsVisible, RelativeSource={RelativeSource Mode=Self}}" />
			<Image
				x:Name="_Image"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Visibility="Collapsed" />
		</Grid>
	</Grid>
</UserControl>
