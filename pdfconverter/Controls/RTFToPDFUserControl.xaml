											FontSize="12"
											VerticalAlignment="Center"
											TextTrimming="CharacterEllipsis"
											Margin="8,0,0,0"
											Text="{Binding FileName}"
											ToolTip="{Binding FilePath, Converter='{StaticResource FilePathDisplayConverter}'}" />
									</StackPanel>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
