														Property="Width"
														Value="20" />
													<Setter
														Property="Height"
														Value="20" />
													<Setter
														Property="Background"
														Value="#00FFFFFF" />
													<Setter
														Property="HorizontalAlignment"
														Value="Right" />
													<Setter
														Property="BorderThickness"
														Value="0" />
													<Setter
														Property="Padding"
														Value="0" />
