<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:PDFLauncher.CustomControl">
	<Style
		x:Key="{x:Type local:LabelButton}"
		TargetType="{x:Type local:LabelButton}">
		<Setter
			Property="UIElement.Opacity"
			Value="1" />
		<Setter
			Property="Width"
			Value="172" />
		<Setter
			Property="Height"
			Value="64" />
		<Setter
			Property="FontSize"
			Value="12" />
		<Setter
			Property="BorderThickness"
			Value="1" />
		<Setter
			Property="Margin"
			Value="0 0 12 0 " />
		<Setter
			Property="local:LabelButton.ImgMargin"
			Value="12 12 6.75 12" />
		<Setter
			Property="Background"
			Value="#FFFFFFFF" />
		<Setter
			Property="VerticalAlignment"
			Value="Top" />
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:LabelButton}">
					<Border
						x:Name="bd"
						CornerRadius="4"
						BorderThickness="{TemplateBinding Control.BorderThickness}"
						BorderBrush="{DynamicResource MainViewRectangle}"
						Background="{TemplateBinding Control.Background}">
						<Grid>
							<StackPanel
								x:Name="stp"
								Orientation="Horizontal">
								<Image
									x:Name="Img"
									VerticalAlignment="Center"
									Opacity="{TemplateBinding UIElement.Opacity}"
									Margin="{TemplateBinding local:LabelButton.ImgMargin}"
									Height="48"
									Width="48"
									HorizontalAlignment="Center"
									Source="{TemplateBinding local:LabelButton.Icon}"
									Stretch="Uniform" />
								<TextBlock
									x:Name="tb"
									Text="{TemplateBinding local:LabelButton.Text}"
									Margin="11 0 0 0"
									FontSize="12"
									TextWrapping="Wrap"
									MaxWidth="92"
									VerticalAlignment="Center" />
							</StackPanel>
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
							<Setter
								TargetName="bd"
								Value="{DynamicResource HotToolPressedBackground}"
								Property="Border.Background" />
						</Trigger>
						<Trigger
							Property="IsPressed"
							Value="True">
							<Setter
								TargetName="bd"
								Value="{DynamicResource HotToolPressedBackground}"
								Property="Border.Background" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
