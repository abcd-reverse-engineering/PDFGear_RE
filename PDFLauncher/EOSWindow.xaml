<Window
	x:Class="PDFLauncher.EOSWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:PDFLauncher"
	Title="PDFgear"
	Height="500"
	Width="700"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize">
	<Grid>
		<Image
			x:Name="uImg"
			Source="images/eos_default.png"
			Height="100"
			VerticalAlignment="Top"
			Margin="0,70,0,0" />
		<TextBlock
			x:Name="uTitle"
			Text="Update needed"
			Height="55"
			HorizontalAlignment="Center"
			Margin="0,200,0,0"
			VerticalAlignment="Top"
			FontSize="36" />
		<TextBlock
			x:Name="uDesc"
			Text="The version is end of service, please download the latest version."
			HorizontalAlignment="Center"
			Margin="100,260,100,0"
			VerticalAlignment="Top"
			FontSize="24"
			TextWrapping="Wrap"
			TextAlignment="Center" />
		<Button
			x:Name="uBtn"
			Content="Download"
			HorizontalAlignment="Center"
			Margin="0,365,0,0"
			VerticalAlignment="Top"
			Width="200"
			Height="50"
			FontSize="22"
			Foreground="#FFFFFFFF"
			Background="#FF50A4FF"
			Click="Button_Click" />
	</Grid>
</Window>
