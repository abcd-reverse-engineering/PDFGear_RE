<Window
	x:Class="pdfeditor.Views.SettingWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Views" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize"
	Title=" AutoSave"
	Height="140"
	Width="350">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="60" />
			<RowDefinition
				Height="40" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="40" />
			<ColumnDefinition
				Width="130" />
			<ColumnDefinition
				Width="60" />
			<ColumnDefinition
				Width="70" />
		</Grid.ColumnDefinitions>
		<CheckBox
			x:Name="ckbisAutoSave"
			Grid.Column="0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			IsChecked="{Binding IsAutoSave, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType={x:Type Window}}}" />
		<Label
			Grid.Column="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Center">AutoSave files every</Label>
		<TextBox
			x:Name="txtFrequrymins"
			Grid.Column="2"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			FontSize="12"
			Width="50"
			Text="{Binding SpanMinutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=1, AncestorType={x:Type Window}}}"
			IsEnabled="{Binding ElementName=ckbisAutoSave, Path=IsChecked}" />
		<Label
			Grid.Column="3"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Margin="-10,0,0,0">minutes</Label>
		<StackPanel
			Grid.Row="1"
			Orientation="Horizontal"
			Grid.ColumnSpan="4"
			Margin="0,0,-25,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
			<Button
				x:Name="btnCancel"
				Style="{StaticResource DialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				IsCancel="True"
				Click="btnCancel_Click" />
			<Button
				x:Name="btnOk"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnOkContent}"
				Margin="10,0,0,0"
				IsDefault="True"
				Click="btnOk_Click" />
		</StackPanel>
	</Grid>
</Window>
