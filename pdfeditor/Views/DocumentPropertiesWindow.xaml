<Window
	x:Class="pdfeditor.Views.DocumentPropertiesWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Views" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters" xmlns:Themes="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	Background="{DynamicResource WindowsBackground}"
	ResizeMode="NoResize"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	SizeToContent="Height"
	Title="{x:Static localprop:Resources.DocumentPropertiesWindowTitle}"
	MinHeight="650"
	Width="480">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<Style
				x:Key="btnStyle"
				TargetType="{x:Type Button}">
				<Setter
					Property="Width"
					Value="80" />
				<Setter
					Property="Height"
					Value="32" />
				<Setter
					Property="BorderBrush"
					Value="#EEEEEE" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type Button}">
							<Border
								x:Name="bborder"
								BorderBrush="{TemplateBinding Control.BorderBrush}"
								CornerRadius="2"
								BorderThickness="{TemplateBinding Control.BorderThickness}"
								Background="{TemplateBinding Control.Background}"
								SnapsToDevicePixels="True">
								<ContentPresenter
									x:Name="contentPresenter"
									Focusable="False"
									HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
									Margin="{TemplateBinding Control.Padding}"
									RecognizesAccessKey="True"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
									VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="bborder"
										Property="Border.BorderBrush"
										Value="#EEEEEE" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style
				x:Key="btnStyle2"
				TargetType="{x:Type Button}">
				<Setter
					Property="BorderBrush"
					Value="#D2D2D2" />
				<Setter
					Property="BorderThickness"
					Value="1" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type Button}">
							<Border
								x:Name="bborder"
								SnapsToDevicePixels="True"
								Background="#00FFFFFF">
								<Grid
									ColumnDefinitions=""
									RowDefinitions="">
									<ContentPresenter
										x:Name="contentPresenter"
										Focusable="False"
										HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
										Margin="{TemplateBinding FrameworkElement.Margin}"
										RecognizesAccessKey="True"
										SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
										VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
									<Rectangle
										Name="rect"
										StrokeDashArray="4 4"
										Opacity="1"
										Stroke="{TemplateBinding Control.BorderBrush}"
										Width="{Binding ElementName=contentPresenter, Path=ActualWidth}" />
								</Grid>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="rect"
										Property="Shape.Stroke"
										Value="#000000" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style
				x:Key="FocusVisual">
				<Setter
					Property="Control.Template">
					<Setter.Value>
						<ControlTemplate>
							<Rectangle
								Margin="2"
								SnapsToDevicePixels="True"
								Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
								StrokeThickness="1"
								StrokeDashArray="1 2" />
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<SolidColorBrush
				x:Key="TextBox.Static.Background"
				Color="#FFFFFFFF" />
			<Style
				x:Key="ComboBoxEditableTextBox"
				TargetType="{x:Type TextBox}">
				<Setter
					Property="FrameworkElement.OverridesDefaultStyle"
					Value="True" />
				<Setter
					Property="UIElement.AllowDrop"
					Value="True" />
				<Setter
					Property="MinWidth"
					Value="0" />
				<Setter
					Property="MinHeight"
					Value="0" />
				<Setter
					Property="FrameworkElement.FocusVisualStyle"
					Value="{x:Null}" />
				<Setter
					Property="ScrollViewer.PanningMode"
					Value="VerticalFirst" />
				<Setter
					Property="Stylus.IsFlicksEnabled"
					Value="False" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type TextBox}">
							<ScrollViewer
								x:Name="PART_ContentHost"
								Background="#00FFFFFF"
								Focusable="False"
								HorizontalScrollBarVisibility="Hidden"
								VerticalScrollBarVisibility="Hidden" />
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<cv:BooleanToVisibilityConverter
				x:Key="BooleanToVisibilityConverter" />
			<cv:TextTrimmingConverter
				x:Key="TextTrimmingConverter" />
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="0.6*" />
			<RowDefinition
				Height="auto" />
			<RowDefinition
				Height="0.1*" />
		</Grid.RowDefinitions>
		<Grid
			Row="0"
			Margin="0 10 0 0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="20" />
				<ColumnDefinition
					Width="130" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="20" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="30" />
				<RowDefinition
					Height="30" />
				<RowDefinition
					Height="30" />
				<RowDefinition
					Height="40" />
				<RowDefinition
					Height="40" />
				<RowDefinition
					Height="40" />
				<RowDefinition
					Height="70" />
				<RowDefinition
					Height="50" />
				<RowDefinition
					MinHeight="40" />
			</Grid.RowDefinitions>
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesFilename}"
				Grid.Row="0"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBlock
				x:Name="Filename"
				Grid.Row="0"
				Text=""
				VerticalAlignment="Center"
				TextWrapping="Wrap"
				TextTrimming="CharacterEllipsis"
				Grid.Column="2"
				HorizontalAlignment="Left" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesTotalPages}"
				Grid.Row="1"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBlock
				x:Name="TotalPages"
				Grid.Row="1"
				Text="0"
				VerticalAlignment="Center"
				Grid.Column="2"
				HorizontalAlignment="Left" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesPageSize}"
				Grid.Row="2"
				VerticalAlignment="Center"
				TextTrimming="CharacterEllipsis"
				Grid.Column="1"
				HorizontalAlignment="Left"
				Padding="0,0,2,0"
				ToolTip="{Binding Source='{x:Static localprop:Resources.DocumentPropertiesPageSize}', Path=., Converter='{StaticResource TextTrimmingConverter}'}" />
			<Grid
				Row="2"
				Column="2"
				ColumnSpan="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<TextBlock
					x:Name="PageSize"
					Grid.Row="2"
					Text="0"
					VerticalAlignment="Center"
					MinWidth="100"
					Grid.Column="0"
					HorizontalAlignment="Left" />
				<ComboBox
					Name="Unit"
					Grid.Row="2"
					Grid.Column="1"
					Width="68"
					Height="22"
					Margin="10 0"
					Style="{StaticResource DefaultComboBoxStyle}"
					SelectionChanged="Unit_SelectionChanged">
					<ComboBoxItem
						Content="{x:Static localprop:Resources.DocumentPropertiesCentimeterUnits}" />
					<ComboBoxItem
						Content="{x:Static localprop:Resources.DocumentPropertiesInchUnits}" />
				</ComboBox>
			</Grid>
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesTitle}"
				Grid.Row="3"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBox
				x:Name="Title"
				Grid.Row="3"
				Text=""
				Style="{DynamicResource DefaultTextBoxStyle}"
				VerticalAlignment="Center"
				Height="25"
				TextWrapping="Wrap"
				VerticalContentAlignment="Center"
				Grid.Column="2"
				HorizontalAlignment="Stretch" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesAuthor}"
				Grid.Row="4"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBox
				x:Name="Author"
				Grid.Row="4"
				Text=""
				Style="{DynamicResource DefaultTextBoxStyle}"
				VerticalAlignment="Center"
				Height="25"
				TextWrapping="Wrap"
				VerticalContentAlignment="Center"
				Grid.Column="2"
				HorizontalAlignment="Stretch" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesSubject}"
				Grid.Row="5"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBox
				x:Name="Subject"
				Grid.Row="5"
				Text=""
				Style="{DynamicResource DefaultTextBoxStyle}"
				VerticalAlignment="Center"
				Height="25"
				TextWrapping="Wrap"
				VerticalContentAlignment="Center"
				Grid.Column="2"
				HorizontalAlignment="Stretch" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesKeyword}"
				Grid.Row="6"
				Margin="0 0 0 30"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBox
				x:Name="Keyword"
				Grid.Row="6"
				Text=""
				Margin="0 0 0 5"
				TextWrapping="Wrap"
				VerticalAlignment="Center"
				Height="60"
				Style="{DynamicResource DefaultTextBoxStyle}"
				Grid.Column="2"
				HorizontalAlignment="Stretch" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesCreator}"
				Grid.Row="7"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBlock
				x:Name="Creator"
				Grid.Row="7"
				Text=""
				VerticalAlignment="Center"
				TextWrapping="Wrap"
				TextTrimming="CharacterEllipsis"
				Grid.Column="2"
				HorizontalAlignment="Left" />
			<TextBlock
				Text="{x:Static localprop:Resources.DocumentPropertiesProducer}"
				Grid.Row="8"
				VerticalAlignment="Center"
				Grid.Column="1"
				HorizontalAlignment="Left" />
			<TextBlock
				x:Name="Producer"
				Grid.Row="8"
				Text=""
				VerticalAlignment="Center"
				TextWrapping="Wrap"
				TextTrimming="CharacterEllipsis"
				Grid.Column="2"
				HorizontalAlignment="Left" />
		</Grid>
		<Grid
			Background="{DynamicResource MainViewListItemSeleted}"
			Margin="20 0"
			Row="1">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="40" />
				<RowDefinition
					Height="25" />
				<RowDefinition
					MinHeight="25" />
				<RowDefinition
					Height="25" />
				<RowDefinition
					Height="25" />
				<RowDefinition
					Height="25" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="10" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<TextBlock
				Grid.Column="1"
				Grid.ColumnSpan="2"
				VerticalAlignment="Center"
				Text="{x:Static localprop:Resources.DocumentPropertiesInfoTitle}"
				FontSize="12"
				FontWeight="Bold" />
			<StackPanel
				Grid.Row="1"
				Grid.Column="1"
				Orientation="Horizontal">
				<TextBlock
					Text="{x:Static localprop:Resources.DocumentPropertiesFileVersion}" />
				<TextBlock
					x:Name="Version"
					Text="" />
			</StackPanel>
			<StackPanel
				Grid.Row="2"
				Grid.Column="1"
				Orientation="Horizontal"
				VerticalAlignment="Stretch">
				<TextBlock
					Text="{x:Static localprop:Resources.DocumentPropertiesLocation}" />
				<TextBlock
					TextWrapping="Wrap"
					TextTrimming="CharacterEllipsis"
					MaxWidth="360"
					MaxHeight="50">
					<Hyperlink
						TextDecorations="None"
						Click="Hyperlink_Click">
						<Run
							x:Name="Location"
							Text="" />
					</Hyperlink>
				</TextBlock>
			</StackPanel>
			<StackPanel
				Grid.Row="3"
				Grid.Column="1"
				Orientation="Horizontal">
				<TextBlock
					Text="{x:Static localprop:Resources.DocumentPropertiesFileSize}" />
				<TextBlock
					x:Name="FileSize"
					Text="" />
			</StackPanel>
			<StackPanel
				Grid.Row="4"
				Grid.Column="1"
				Orientation="Horizontal">
				<TextBlock
					Text="{x:Static localprop:Resources.DocumentPropertiesCreated}" />
				<TextBlock
					x:Name="Created"
					Text="" />
			</StackPanel>
			<StackPanel
				Grid.Row="5"
				Grid.Column="1"
				Orientation="Horizontal">
				<TextBlock
					Text="{x:Static localprop:Resources.DocumentPropertiesModified}" />
				<TextBlock
					x:Name="Modified"
					Text="" />
			</StackPanel>
		</Grid>
		<Grid
			Row="2"
			Margin="20 0">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Center">
				<Button
					x:Name="btnCancel"
					Style="{StaticResource DialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					FontSize="12"
					IsCancel="True"
					Click="btnCancel_Click" />
				<Button
					x:Name="btnOk"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					Margin="10,0,0,0"
					FontSize="12"
					Click="btnOk_ClickAsync" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
