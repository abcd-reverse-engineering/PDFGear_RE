<Window
	x:Class="pdfeditor.Views.AttachmentDescriptionWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	SizeToContent="Height"
	ResizeMode="NoResize"
	Title="{x:Static localprop:Resources.AttachmentPanelBtnEditDescriptionText}"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Width="425" xmlns:views="clr-namespace:pdfeditor.Views">
	<Grid
		Background="#00FFFFFF"
		FocusManager.FocusedElement="{Binding ElementName=TextBox_Description}">
		<StackPanel
			Margin="20">
			<TextBlock
				Text="{x:Static localprop:Resources.AttachmentDescriptionWinText}"
				Height="20" />
			<TextBox
				x:Name="TextBox_Description"
				Margin="0,6,0,0"
				Height="25"
				Background="{DynamicResource SolidBrushWhiteAndBlack}"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				VerticalContentAlignment="Center" />
			<StackPanel
				Orientation="Horizontal"
				Margin="0,15,0,0"
				HorizontalAlignment="Right">
				<Button
					x:Name="btnCancel"
					Width="80"
					FontSize="12"
					Style="{StaticResource DialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					IsCancel="True"
					Click="btnCancel_Click" />
				<Button
					x:Name="btnOk"
					Width="80"
					FontSize="12"
					Margin="10,0,0,0"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					IsDefault="True"
					Click="btnOk_Click" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
