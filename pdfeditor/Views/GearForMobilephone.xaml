<Window
	x:Class="pdfeditor.Views.GearForMobilephone" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Views" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	Title="{StaticResource ApplicationTitle}"
	Height="600"
	Width="550">
	<Grid>
		<Panel.Background>
			<ImageBrush
				ImageSource="/Style/Resources/RateBackground.png" />
		</Panel.Background>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="111" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Image
			Grid.Row="1"
			Source="/Style/Resources/RateLogo.png"
			Height="64"
			Width="64"
			HorizontalAlignment="Center"
			VerticalAlignment="Top" />
		<Grid
			Row="1">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="70" />
				<RowDefinition
					MinHeight="21"
					Height="auto" />
				<RowDefinition
					Height="15" />
				<RowDefinition
					MinHeight="21"
					Height="auto" />
				<RowDefinition
					Height="5" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="1"
				Text="{x:Static localprop:Resources.PhoneWinContentTitle}"
				HorizontalAlignment="Center"
				TextWrapping="Wrap"
				FontWeight="Bold"
				FontSize="18" />
			<TextBlock
				Grid.Row="3"
				Text="{x:Static localprop:Resources.PhoneWinContent}"
				HorizontalAlignment="Center"
				TextWrapping="Wrap"
				Foreground="#555"
				FontSize="14" />
			<Image
				Source="/Style/Resources/GearForPhone.png"
				Width="200"
				Height="200"
				Grid.Row="5" />
		</Grid>
	</Grid>
</Window>
