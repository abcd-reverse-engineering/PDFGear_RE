<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:pdfeditor.Controls">
	<Style
		x:Key="{x:Type local:ResizeView}"
		TargetType="{x:Type local:ResizeView}">
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="VerticalAlignment"
			Value="Top" />
		<Setter
			Property="HorizontalContentAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalContentAlignment"
			Value="Stretch" />
		<Setter
			Property="local:ResizeView.DragPlaceholderFill"
			Value="#33007acc" />
		<Setter
			Property="BorderThickness"
			Value="0" />
		<Setter
			Property="BorderBrush"
			Value="#1892ff" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:ResizeView}">
					<Grid
						x:Name="LayoutRoot">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup
								x:Name="DragStates">
								<VisualState
									x:Name="DragCompleted" />
								<VisualState
									x:Name="Dragging">
									<Storyboard>
										<DoubleAnimation
											Storyboard.TargetName="DraggingPlaceholder"
											Storyboard.TargetProperty="Opacity"
											To="1"
											Duration="0" />
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PlaceholderContentContainer"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState
									x:Name="DragMoving">
									<Storyboard>
										<DoubleAnimation
											Storyboard.TargetName="DraggingPlaceholder"
											Storyboard.TargetProperty="Opacity"
											To="1"
											Duration="0" />
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PlaceholderContentContainer"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
										<DoubleAnimation
											Storyboard.TargetName="LeftTopDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterTopDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightTopDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftCenterDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightCenterDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftBottomDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterBottomDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightBottomDragger"
											Storyboard.TargetProperty="Opacity"
											To="0"
											Duration="0" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup
								x:Name="DragMoveEnabledStates">
								<VisualState
									x:Name="DragMoveEnabled" />
								<VisualState
									x:Name="DragMoveDisabled">
									<Storyboard>
										<BooleanAnimationUsingKeyFrames
											Storyboard.TargetName="MoveDragger"
											Storyboard.TargetProperty="IsHitTestVisible"
											Duration="0">
											<DiscreteBooleanKeyFrame
												KeyTime="0"
												Value="False" />
										</BooleanAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup
								x:Name="DraggerVisibleStates">
								<VisualState
									x:Name="IsDraggerVisible" />
								<VisualState
									x:Name="IsDraggerNotVisible">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftTopDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="CenterTopDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightTopDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftCenterDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightCenterDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftBottomDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="CenterBottomDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightBottomDragger"
											Storyboard.TargetProperty="Fill"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftTopDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="CenterTopDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightTopDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftCenterDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightCenterDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="LeftBottomDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="CenterBottomDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="RightBottomDragger"
											Storyboard.TargetProperty="Stroke"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Brushes.Transparent}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
							<VisualStateGroup
								x:Name="DraggerSizeStateGroup">
								<VisualState
									x:Name="NormalSize" />
								<VisualState
									x:Name="CompactSize">
									<Storyboard>
										<DoubleAnimation
											Storyboard.TargetName="LeftTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightTopDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftCenterDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftCenterDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightCenterDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightCenterDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="LeftBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="CenterBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
											To="0.7"
											Duration="0" />
										<DoubleAnimation
											Storyboard.TargetName="RightBottomDragger"
											Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
											To="0.7"
											Duration="0" />
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<ContentPresenter
							x:Name="ContentPresenter"
							Margin="{TemplateBinding Control.Padding}"
							Content="{TemplateBinding ContentControl.Content}"
							ContentTemplate="{TemplateBinding ContentControl.ContentTemplate}"
							HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
						<AdornerDecorator>
							<Canvas
								x:Name="DraggerCanvas">
								<Border
									x:Name="DraggerContainerBorder"
									BorderBrush="{TemplateBinding Control.BorderBrush}"
									BorderThickness="{TemplateBinding Control.BorderThickness}">
									<Grid
										x:Name="DraggerContainer"
										Background="{TemplateBinding Control.Background}">
										<Canvas
											x:Name="PlaceholderContentContainer"
											IsHitTestVisible="False"
											Visibility="Collapsed">
											<ContentPresenter
												x:Name="PlaceholderContentPresenter"
												Margin="{TemplateBinding Control.Padding}"
												Content="{TemplateBinding local:ResizeView.PlaceholderContent}"
												ContentTemplate="{TemplateBinding local:ResizeView.PlaceholderContentTemplate}"
												HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
												VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
										</Canvas>
										<Rectangle
											x:Name="MoveDragger"
											Cursor="SizeAll"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Stretch"
											Fill="#00FFFFFF" />
										<Rectangle
											x:Name="DraggingPlaceholder"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Stretch"
											IsHitTestVisible="False"
											Fill="{TemplateBinding local:ResizeView.DragPlaceholderFill}"
											Opacity="0" />
										<Rectangle
											x:Name="LeftTopDragger"
											Cursor="SizeNWSE"
											HorizontalAlignment="Left"
											VerticalAlignment="Top"
											Width="8"
											Height="8"
											Margin="-4,-4,0,0"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="CenterTopDragger"
											Cursor="SizeNS"
											HorizontalAlignment="Center"
											VerticalAlignment="Top"
											Width="8"
											Height="8"
											Margin="0,-4,0,0"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="RightTopDragger"
											Cursor="SizeNESW"
											HorizontalAlignment="Right"
											VerticalAlignment="Top"
											Width="8"
											Height="8"
											Margin="0,-4,-4,0"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="LeftCenterDragger"
											Cursor="SizeWE"
											HorizontalAlignment="Left"
											VerticalAlignment="Center"
											Width="8"
											Height="8"
											Margin="-4,0,0,0"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5" />
										<Rectangle
											x:Name="RightCenterDragger"
											Cursor="SizeWE"
											HorizontalAlignment="Right"
											VerticalAlignment="Center"
											Width="8"
											Height="8"
											Margin="0,0,-4,0"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="LeftBottomDragger"
											Cursor="SizeNESW"
											HorizontalAlignment="Left"
											VerticalAlignment="Bottom"
											Width="8"
											Height="8"
											Margin="-4,0,0,-4"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="CenterBottomDragger"
											Cursor="SizeNS"
											HorizontalAlignment="Center"
											VerticalAlignment="Bottom"
											Width="8"
											Height="8"
											Margin="0,0,0,-4"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
										<Rectangle
											x:Name="RightBottomDragger"
											Cursor="SizeNWSE"
											HorizontalAlignment="Right"
											VerticalAlignment="Bottom"
											Width="8"
											Height="8"
											Margin="0,0,-4,-4"
											StrokeThickness="1"
											Stroke="#FF000000"
											Fill="#FFFFFFFF"
											RenderTransformOrigin="0.5,0.5">
											<UIElement.RenderTransform>
												<ScaleTransform />
											</UIElement.RenderTransform>
										</Rectangle>
									</Grid>
								</Border>
							</Canvas>
						</AdornerDecorator>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
