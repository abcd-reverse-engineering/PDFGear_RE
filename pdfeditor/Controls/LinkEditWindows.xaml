<Window
	x:Class="pdfeditor.Controls.LinkEditWindows" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters" xmlns:Themes="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:colorpicker="clr-namespace:CommonLib.Controls.ColorPickers;assembly=CommonLib"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Title="{x:Static localprop:Resources.LinkWinTitleCreate}"
	SizeToContent="WidthAndHeight"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<cv:BooleanReverseConverter
				x:Key="BooleanReverseConverter" />
			<Style
				x:Key="TextBoxStyle1"
				TargetType="{x:Type TextBox}"
				BasedOn="{StaticResource DefaultTextBoxStyle}">
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type TextBox}">
							<Border
								x:Name="border"
								Background="{TemplateBinding Control.Background}"
								BorderBrush="{TemplateBinding Control.BorderBrush}"
								BorderThickness="{TemplateBinding Control.BorderThickness}"
								SnapsToDevicePixels="True">
								<Grid>
									<ScrollViewer
										x:Name="PART_ContentHost"
										Focusable="False"
										HorizontalScrollBarVisibility="Hidden"
										VerticalScrollBarVisibility="Hidden"
										Visibility="Collapsed" />
									<TextBlock
										x:Name="Chrome"
										HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
										VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
										Text="{TemplateBinding TextBox.Text}"
										TextTrimming="CharacterEllipsis" />
								</Grid>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger
									Property="UIElement.IsFocused"
									Value="True">
									<Setter
										TargetName="Chrome"
										Property="Visibility"
										Value="Collapsed" />
									<Setter
										TargetName="PART_ContentHost"
										Property="Visibility"
										Value="Visible" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style
				x:Key="EditComboboxStyle"
				TargetType="{x:Type ComboBox}"
				BasedOn="{StaticResource DefaultComboBoxStyle}">
				<Setter
					Property="Padding"
					Value="6,4" />
				<Setter
					Property="FontSize"
					Value="12" />
				<Setter
					Property="ItemContainerStyle">
					<Setter.Value>
						<Style
							TargetType="{x:Type ComboBoxItem}"
							BasedOn="{StaticResource DefaultComboBoxItemStyle}">
							<Setter
								Property="FontSize"
								Value="12" />
							<Setter
								Property="Padding"
								Value="6,4" />
						</Style>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<Style
					x:Key="WaterMarkColorPickerButtonStyle"
					TargetType="{x:Type colorpicker:ColorPickerButton}">
					<Setter
						Property="Background"
						Value="#00FFFFFF" />
					<Setter
						Property="BorderBrush"
						Value="{DynamicResource MainViewFontSizeBorder}" />
					<Setter
						Property="Foreground"
						Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
					<Setter
						Property="BorderThickness"
						Value="1" />
					<Setter
						Property="Width"
						Value="22" />
					<Setter
						Property="Height"
						Value="22" />
					<Setter
						Property="colorpicker:ColorPickerButton.Placement"
						Value="Bottom" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type colorpicker:ColorPickerButton}">
								<Border
									x:Name="border"
									BorderBrush="{TemplateBinding Control.BorderBrush}"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									Background="{TemplateBinding Control.Background}"
									SnapsToDevicePixels="False"
									ToolTip="{Binding Caption}">
									<Rectangle
										x:Name="Indicator"
										Margin="{TemplateBinding Control.Padding}"
										HorizontalAlignment="Stretch"
										VerticalAlignment="Stretch"
										Tag="{Binding Path=SelectedColor, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
								</Border>
								<ControlTemplate.Triggers>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											TargetName="border"
											Property="Border.Background"
											Value="#00FFFFFF" />
									</Trigger>
									<DataTrigger
										Value="White"
										Binding="{Binding ElementName=Indicator, Path=Tag, Mode=OneWay}">
										<Setter
											TargetName="Indicator"
											Property="Shape.Stroke"
											Value="#D2D2D2" />
										<Setter
											TargetName="Indicator"
											Property="Shape.StrokeThickness"
											Value="1" />
									</DataTrigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="20" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition />
			<RowDefinition
				Height="30" />
			<RowDefinition
				Height="40" />
			<RowDefinition
				Height="20" />
		</Grid.RowDefinitions>
		<Grid
			Row="1"
			Column="1"
			ColumnSpan="2"
			Margin="0,0,20,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="Auto"
					MinWidth="60" />
				<ColumnDefinition
					Width="Auto"
					MinWidth="10" />
				<ColumnDefinition
					Width="Auto"
					MinWidth="76" />
				<ColumnDefinition
					Width="11.537" />
				<ColumnDefinition
					Width="60" />
				<ColumnDefinition
					Width="20" />
				<ColumnDefinition
					Width="60" />
				<ColumnDefinition
					Width="8" />
				<ColumnDefinition
					Width="60" />
				<ColumnDefinition
					Width="20" />
				<ColumnDefinition
					Width="70" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="18" />
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="15" />
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="15" />
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="15" />
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="15" />
				<RowDefinition
					Height="28" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="1"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontSize="12"
				Text="{x:Static localprop:Resources.LinkWinAppearance}"
				Height="16"
				MinWidth="69" />
			<TextBlock
				Grid.Row="1"
				Grid.Column="2"
				Grid.ColumnSpan="2"
				FontSize="12"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Text="{x:Static localprop:Resources.LinkWinStyle}"
				Height="16"
				MinWidth="53" />
			<ComboBox
				x:Name="linkstylyCombobox"
				Grid.Row="1"
				Grid.Column="4"
				Grid.ColumnSpan="7"
				VerticalContentAlignment="Center"
				Style="{StaticResource EditComboboxStyle}"
				Margin="0,0,0,0"
				SelectionChanged="linkstylyCombobox_SelectionChanged">
				<ComboBoxItem
					Content="{x:Static localprop:Resources.LinkWinVisibleRect}"
					Tag="ture"
					IsSelected="True" />
				<ComboBoxItem
					Content="{x:Static localprop:Resources.LinkWinInvisibleRect}"
					Tag="false" />
			</ComboBox>
			<TextBlock
				Grid.Row="3"
				Grid.Column="2"
				FontSize="12"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Text="{x:Static localprop:Resources.LinkWinStrokeStyle}"
				Height="16"
				MinWidth="66" />
			<ComboBox
				x:Name="LinestyleCombobox"
				Grid.Row="3"
				Grid.Column="4"
				Grid.ColumnSpan="5"
				VerticalContentAlignment="Center"
				Style="{StaticResource EditComboboxStyle}"
				Margin="0,0,36,0">
				<ComboBoxItem
					Content="{x:Static localprop:Resources.LinkWinStrokeSolid}"
					Tag="Solid"
					IsSelected="True" />
				<ComboBoxItem
					Content="{x:Static localprop:Resources.LinkWinStrokeDashed}"
					Tag="Dashed" />
				<ComboBoxItem
					Content="{x:Static localprop:Resources.LinkWinStrokeUnderline}"
					Tag="Underline" />
			</ComboBox>
			<ComboBox
				x:Name="BorderstyleCombobox"
				Grid.Row="3"
				Grid.Column="8"
				Grid.ColumnSpan="3"
				VerticalContentAlignment="Center"
				Style="{StaticResource EditComboboxStyle}"
				Margin="29,0,32,0">
				<ComboBoxItem
					Content="0.25 pt"
					Tag="0.25" />
				<ComboBoxItem
					Content="0.5 pt"
					Tag="0.5" />
				<ComboBoxItem
					Content="1 pt"
					Tag="1"
					IsSelected="True" />
				<ComboBoxItem
					Content="2 pt"
					Tag="2" />
				<ComboBoxItem
					Content="3 pt"
					Tag="3" />
				<ComboBoxItem
					Content="4 pt"
					Tag="4" />
				<ComboBoxItem
					Content="5 pt"
					Tag="5" />
				<ComboBoxItem
					Content="6 pt"
					Tag="6" />
				<ComboBoxItem
					Content="7 pt"
					Tag="7" />
				<ComboBoxItem
					Content="8 pt"
					Tag="8" />
				<ComboBoxItem
					Content="9 pt"
					Tag="9" />
				<ComboBoxItem
					Content="10 pt"
					Tag="10" />
				<ComboBoxItem
					Content="11 pt"
					Tag="11" />
				<ComboBoxItem
					Content="12 pt"
					Tag="12" />
			</ComboBox>
			<colorpicker:ColorPickerButton
				x:Name="WatermarkColorPicker"
				Grid.Row="3"
				Grid.Column="9"
				Visibility="Visible"
				Style="{StaticResource WaterMarkColorPickerButtonStyle}"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				Height="28"
				Width="28"
				Grid.ColumnSpan="3"
				Margin="0,0,0,0"
				RecentColorsKey="{Binding RecentColorsKey}" />
			<TextBlock
				Grid.Row="5"
				Grid.ColumnSpan="2"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				FontSize="12"
				Text="{x:Static localprop:Resources.LinkWinNavigate}"
				Height="16"
				MinWidth="67" />
			<RadioButton
				x:Name="ToPageRadioButton"
				Grid.Row="5"
				Grid.Column="2"
				Grid.ColumnSpan="2"
				FontSize="12"
				Style="{StaticResource DefaultRadioButtonStyle}"
				GroupName="pageRangeGroup"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				HorizontalAlignment="Left"
				VerticalContentAlignment="Center"
				IsChecked="True"
				Content="{x:Static localprop:Resources.LinkWinPage}"
				MinWidth="55"
				Click="CurrentPageRadioButton_Click" />
			<TextBox
				x:Name="pagecur"
				Grid.Row="5"
				Grid.Column="4"
				VerticalContentAlignment="Center"
				MaxWidth="60"
				TextAlignment="Center"
				Style="{StaticResource TextBoxStyle1}"
				HorizontalContentAlignment="Center"
				InputMethod.IsInputMethodEnabled="False"
				FontSize="12"
				PreviewKeyDown="textBox_PreviewKeyDown"
				TextChanged="pagecur_TextChanged" />
			<TextBlock
				x:Name="pagenum"
				Grid.Row="5"
				Grid.Column="5"
				Grid.ColumnSpan="2"
				Width="60"
				Text=""
				VerticalAlignment="Center"
				FontSize="13" />
			<RadioButton
				x:Name="ToWebRadioButton"
				Grid.Row="7"
				Grid.Column="2"
				Grid.ColumnSpan="2"
				FontSize="12"
				Style="{StaticResource DefaultRadioButtonStyle}"
				GroupName="pageRangeGroup"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				HorizontalAlignment="Left"
				VerticalContentAlignment="Center"
				Content="{x:Static localprop:Resources.LinkWinUrl}"
				MinWidth="55"
				Click="CurrentPageRadioButton_Click" />
			<TextBox
				x:Name="urlcur"
				Grid.Row="7"
				Grid.Column="4"
				Grid.ColumnSpan="7"
				TextWrapping="NoWrap"
				Style="{StaticResource TextBoxStyle1}"
				VerticalContentAlignment="Center"
				IsEnabled="False">
				<FrameworkElement.Resources>
					<ResourceDictionary>
						<VisualBrush
							x:Key="HintText"
							TileMode="None"
							Opacity="0.5"
							Stretch="None"
							AlignmentX="Left">
							<VisualBrush.Visual>
								<Label
									Content="Type or paste URL"
									Foreground="{DynamicResource TextBrushWhiteAndBlack}"
									Padding="3 0 0 0" />
							</VisualBrush.Visual>
						</VisualBrush>
					</ResourceDictionary>
				</FrameworkElement.Resources>
			</TextBox>
			<RadioButton
				x:Name="ToFileRadioButton"
				Grid.Row="9"
				Grid.Column="2"
				Style="{StaticResource DefaultRadioButtonStyle}"
				GroupName="pageRangeGroup"
				VerticalContentAlignment="Center"
				FontSize="12"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				Content="{x:Static localprop:Resources.LinkWinFilePath}"
				Click="CurrentPageRadioButton_Click" />
			<TextBox
				x:Name="localcur"
				Grid.Row="9"
				Grid.Column="4"
				Grid.ColumnSpan="7"
				Margin="0 0 28 0"
				VerticalContentAlignment="Center"
				IsEnabled="False"
				Style="{StaticResource TextBoxStyle1}" />
			<Button
				x:Name="openfolder"
				Grid.Row="9"
				Grid.Column="10"
				HorizontalAlignment="Right"
				Width="28"
				Background="{DynamicResource SignaturePickerBackground}"
				Style="{StaticResource DefaultButtonStyle}"
				IsEnabled="False"
				Click="openfolder_Click">
				<TextBlock
					Text="..."
					Foreground="{DynamicResource TextBrushWhiteAndBlack}"
					Width="auto"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontSize="18"
					Margin="0 0 0 10" />
			</Button>
		</Grid>
		<Border
			Grid.Row="2"
			Grid.Column="0"
			Grid.ColumnSpan="3"
			BorderThickness="0,1,0,0"
			BorderBrush="{DynamicResource MainViewFontSizeBorder}"
			VerticalAlignment="Center"
			Height="2" />
		<Grid
			Row="3"
			Column="1"
			ColumnSpan="2"
			Margin="0,0,20,0">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Center">
				<Button
					x:Name="btnCancel"
					Style="{StaticResource DialogButtonStyle}"
					Width="80"
					FontSize="12"
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					IsCancel="True" />
				<Button
					x:Name="btnOk"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Margin="10,0,0,0"
					Width="80"
					FontSize="12"
					Content="{x:Static localprop:Resources.WinBtnOkContent}" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
