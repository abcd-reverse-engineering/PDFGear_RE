<Window
	x:Class="pdfeditor.Controls.Stamp.ChangeCategoryNameWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Stamp" xmlns:commonCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Background="{DynamicResource WindowsBackground}"
	Title="PDFgear"
	Height="200"
	Width="340">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="90" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<Grid
			Background="{DynamicResource MainWindowLeftMenuBackground}">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<TextBlock
				Text="{x:Static localprop:Resources.CategoryNameWinTitle}"
				FontSize="12"
				VerticalAlignment="Bottom"
				Margin="17 0 15 5" />
			<TextBox
				x:Name="CategoryName"
				Grid.Row="1"
				Height="25"
				Style="{StaticResource DefaultTextBoxStyle}"
				commonCtrl:UIElementExtension.CornerRadius="4"
				commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.CategoryNameWinPlaceholder}"
				commonCtrl:TextBoxExtensions.PlaceholderPadding="1 2 0 0"
				VerticalContentAlignment="Center"
				VerticalAlignment="Top"
				Margin="15 2 15 0" />
		</Grid>
		<Grid
			Row="1"
			Margin="0 0 20 0"
			Background="{DynamicResource WindowsBackground}">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Center">
				<Button
					x:Name="btnCancel"
					Style="{StaticResource DialogButtonStyle}"
					FontSize="12"
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					IsCancel="True"
					Click="btnCancel_Click" />
				<Button
					x:Name="btnOk"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Margin="10,0,0,0"
					IsDefault="True"
					FontSize="12"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					Click="btnOk_Click" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
