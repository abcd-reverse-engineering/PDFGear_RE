<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:local="clr-namespace:pdfeditor.Controls.Stamp" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="btnstyle"
		TargetType="{x:Type ButtonBase}">
		<Style.Setters>
			<Setter
				Property="HorizontalAlignment"
				Value="Center" />
			<Setter
				Property="Background"
				Value="#00FFFFFF" />
			<Setter
				Property="BorderThickness"
				Value="0" />
			<Setter
				Property="TextBlock.Foreground"
				Value="#3F3F3F" />
			<Setter
				Property="TextBlock.TextAlignment"
				Value="Left" />
			<Setter
				Property="TextBlock.FontSize"
				Value="12" />
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="{x:Type ButtonBase}">
						<Border
							x:Name="bborder"
							BorderBrush="{TemplateBinding Control.BorderBrush}"
							BorderThickness="{TemplateBinding Control.BorderThickness}"
							Background="{TemplateBinding Control.Background}"
							SnapsToDevicePixels="True">
							<ContentPresenter
								x:Name="contentPresenter"
								Focusable="False"
								HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
								Margin="{TemplateBinding Control.Padding}"
								RecognizesAccessKey="True"
								SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
								VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger
								Property="UIElement.IsMouseOver"
								Value="True">
								<Setter
									TargetName="bborder"
									Property="Border.CornerRadius"
									Value="3" />
								<Setter
									TargetName="bborder"
									Value="{DynamicResource SignaturePickerDelBtnBorder}"
									Property="Border.BorderBrush" />
								<Setter
									TargetName="bborder"
									Value="{DynamicResource BtnInfoMouseOverColor}"
									Property="Border.Background" />
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									TargetName="bborder"
									Property="Border.BorderBrush"
									Value="#9F9F9F" />
								<Setter
									Property="TextBlock.Foreground"
									Value="#9F9F9F" />
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="True">
								<Setter
									TargetName="bborder"
									Property="Border.BorderBrush"
									Value="#3F3F3F" />
								<Setter
									Property="TextBlock.Foreground"
									Value="#3F3F3F" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>
	<cv:BooleanToVisibilityConverter
		x:Key="BooleanToVisibilityConverter" />
	<Style
		x:Key="{x:Type local:StampPicker}"
		TargetType="{x:Type local:StampPicker}">
		<Setter
			Property="Background"
			Value="#FFFFFFFF" />
		<Setter
			Property="BorderBrush"
			Value="{DynamicResource SignaturePickerBorderBrush}" />
		<Setter
			Property="BorderThickness"
			Value="1" />
		<Setter
			Property="Padding"
			Value="0" />
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="VerticalAlignment"
			Value="Top" />
		<Setter
			Property="Focusable"
			Value="False" />
		<Setter
			Property="Width"
			Value="234" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
							</Grid.RowDefinitions>
							<ScrollViewer
								VerticalScrollBarVisibility="Auto"
								HorizontalScrollBarVisibility="Hidden"
								Height="Auto"
								MaxHeight="250">
								<ItemsControl
									x:Name="PickerItemContainer"
									Background="{DynamicResource SignaturePickerBackground}">
									<ItemsControl.ItemsPanel>
										<ItemsPanelTemplate>
											<StackPanel
												Orientation="Vertical" />
										</ItemsPanelTemplate>
									</ItemsControl.ItemsPanel>
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<Border>
												<StackPanel>
													<Grid
														x:Name="pickerItem"
														Width="234"
														Height="Auto"
														SnapsToDevicePixels="True">
														<Grid.ColumnDefinitions>
															<ColumnDefinition
																Width="176" />
															<ColumnDefinition
																Width="34" />
															<ColumnDefinition
																Width="20" />
														</Grid.ColumnDefinitions>
														<Border
															Name="Text"
															Background="#00FFFFFF"
															BorderBrush="{DynamicResource MainViewFontSizeBorder}"
															Cursor="Hand"
															Width="165"
															Height="44"
															BorderThickness="1"
															Grid.Column="0"
															Margin="10,4,0,4"
															Padding="10,4,10,4"
															Visibility="{Binding Text}">
															<Grid>
																<local:DynamicStampPreview
																	StampModel="{Binding}" />
															</Grid>
														</Border>
														<Border
															Name="Image"
															BorderBrush="{DynamicResource MainViewFontSizeBorder}"
															Width="165"
															Height="44"
															Cursor="Hand"
															BorderThickness="1"
															Grid.Column="0"
															Margin="10,4,0,4"
															Visibility="{Binding Image}">
															<Grid
																Background="#00FFFFFF">
																<Image
																	HorizontalAlignment="Center"
																	VerticalAlignment="Center"
																	Source="{Binding StampImageSource}" />
															</Grid>
														</Border>
														<Button
															x:Name="EditItemButton"
															Grid.Column="1"
															VerticalAlignment="Center"
															VerticalContentAlignment="Center"
															Background="#00FFFFFF"
															Margin="5,0,5,0"
															BorderThickness="0"
															Height="20"
															Width="20"
															Style="{StaticResource btnstyle}">
															<ContentControl.Content>
																<Image
																	Source="{DynamicResource StampEditImage}"
																	Width="18"
																	Height="18"
																	Stretch="Fill"
																	Cursor="" />
															</ContentControl.Content>
														</Button>
														<Button
															x:Name="DelItemButton"
															Grid.Column="2"
															VerticalAlignment="Center"
															VerticalContentAlignment="Center"
															Background="#00FFFFFF"
															Margin="0,0,0,0"
															BorderThickness="0"
															Height="18"
															Width="16"
															Style="{StaticResource btnstyle}">
															<ContentControl.Content>
																<Image
																	Source="{DynamicResource SignatureDelItemButton}"
																	Width="14"
																	Height="16"
																	Stretch="Fill" />
															</ContentControl.Content>
														</Button>
													</Grid>
												</StackPanel>
											</Border>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</ScrollViewer>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
