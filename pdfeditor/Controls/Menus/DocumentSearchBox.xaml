<UserControl
	x:Class="pdfeditor.Controls.Menus.DocumentSearchBox" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Menus" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters" xmlns:utils="clr-namespace:pdfeditor.Utils" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:model="clr-namespace:pdfeditor.Models.Menus" xmlns:comCtrls="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Focusable="True"
	FocusVisualStyle="{x:Null}">
	<Grid
		x:Name="SearchContainer"
		Width="Auto"
		ColumnSpan="2"
		HorizontalAlignment="Right"
		VerticalAlignment="Top"
		ClipToBounds="True"
		Margin="0,8,24,0"
		DataContext="{Binding Path=SearchModel, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:DocumentSearchBox}}}"
		SizeChanged="SearchContainer_SizeChanged">
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup
				x:Name="SearchVisibleStates">
				<VisualState
					x:Name="SearchVisible" />
				<VisualState
					x:Name="SearchInvisible">
					<Storyboard>
						<DoubleAnimation
							x:Name="HideSearchAnimation2"
							Storyboard.TargetName="SearchTrans"
							Storyboard.TargetProperty="Y"
							To="0"
							Duration="0" />
						<ObjectAnimationUsingKeyFrames
							Storyboard.TargetName="SearchContainer"
							Storyboard.TargetProperty="Visibility"
							Duration="0">
							<DiscreteObjectKeyFrame
								KeyTime="0"
								Value="{x:Static Visibility.Collapsed}" />
						</ObjectAnimationUsingKeyFrames>
						<BooleanAnimationUsingKeyFrames
							Storyboard.TargetName="SearchContainer"
							Storyboard.TargetProperty="IsHitTestVisible"
							Duration="0">
							<DiscreteBooleanKeyFrame
								KeyTime="0"
								Value="False" />
						</BooleanAnimationUsingKeyFrames>
					</Storyboard>
				</VisualState>
				<VisualStateGroup.Transitions>
					<VisualTransition
						From="SearchInvisible"
						To="SearchVisible">
						<Storyboard>
							<DoubleAnimation
								x:Name="ShowSearchAnimation"
								Storyboard.TargetName="SearchTrans"
								Storyboard.TargetProperty="Y"
								From="0"
								To="0"
								Duration="0:0:0.333">
								<DoubleAnimation.EasingFunction>
									<ExponentialEase
										EasingMode="EaseOut"
										Exponent="7" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<ObjectAnimationUsingKeyFrames
								Storyboard.TargetName="SearchContainer"
								Storyboard.TargetProperty="Visibility"
								Duration="0">
								<DiscreteObjectKeyFrame
									KeyTime="0"
									Value="{x:Static Visibility.Visible}" />
							</ObjectAnimationUsingKeyFrames>
							<BooleanAnimationUsingKeyFrames
								Storyboard.TargetName="SearchContainer"
								Storyboard.TargetProperty="IsHitTestVisible"
								Duration="0:0:0.333">
								<DiscreteBooleanKeyFrame
									KeyTime="0"
									Value="False" />
								<DiscreteBooleanKeyFrame
									KeyTime="0:0:0.333"
									Value="True" />
							</BooleanAnimationUsingKeyFrames>
						</Storyboard>
					</VisualTransition>
					<VisualTransition
						From="SearchVisible"
						To="SearchInvisible">
						<Storyboard>
							<DoubleAnimation
								x:Name="HideSearchAnimation"
								Storyboard.TargetName="SearchTrans"
								Storyboard.TargetProperty="Y"
								From="0"
								To="0"
								Duration="0:0:0.167">
								<DoubleAnimation.EasingFunction>
									<ExponentialEase
										EasingMode="EaseOut"
										Exponent="4.5" />
								</DoubleAnimation.EasingFunction>
							</DoubleAnimation>
							<ObjectAnimationUsingKeyFrames
								Storyboard.TargetName="SearchContainer"
								Storyboard.TargetProperty="Visibility"
								Duration="0:0:0.167">
								<DiscreteObjectKeyFrame
									KeyTime="0"
									Value="{x:Static Visibility.Visible}" />
								<DiscreteObjectKeyFrame
									KeyTime="0:0:0.167"
									Value="{x:Static Visibility.Collapsed}" />
							</ObjectAnimationUsingKeyFrames>
							<BooleanAnimationUsingKeyFrames
								Storyboard.TargetName="SearchContainer"
								Storyboard.TargetProperty="IsHitTestVisible"
								Duration="0">
								<DiscreteBooleanKeyFrame
									KeyTime="0"
									Value="False" />
							</BooleanAnimationUsingKeyFrames>
						</Storyboard>
					</VisualTransition>
				</VisualStateGroup.Transitions>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<cv:BooleanToVisibilityConverter
					x:Key="BooleanToVisibilityConverter" />
				<cv:SearchResultVisibilityConverter
					x:Key="SearchResultVisibilityConverter" />
				<Style
					x:Key="ButtonFontStyle"
					TargetType="{x:Type TextBlock}">
					<Setter
						Property="Foreground"
						Value="{DynamicResource TextBrushWhiteAndBlack}" />
					<Setter
						Property="FontSize"
						Value="12" />
					<Setter
						Property="TextBlock.TextAlignment"
						Value="Center" />
					<Setter
						Property="FontSize"
						Value="12" />
					<Setter
						Property="FontStyle"
						Value="Normal" />
					<Setter
						Property="VerticalAlignment"
						Value="Center" />
				</Style>
				<SolidColorBrush
					x:Key="CommandButton.Static.Background"
					Color="#FFFFFFFF" />
				<SolidColorBrush
					x:Key="CommandButton.Static.Border"
					Color="Transparent" />
				<SolidColorBrush
					x:Key="CommandButton.Static.Foreground"
					Color="#FF000000" />
				<SolidColorBrush
					x:Key="CommandButton.Disabled.Background"
					Color="#FFFFFFFF" />
				<SolidColorBrush
					x:Key="CommandButton.Disabled.Border"
					Color="Transparent" />
				<SolidColorBrush
					x:Key="CommandButton.Disabled.Foreground"
					Color="#FF838383" />
				<Style
					x:Key="CommandButtonFocusVisual">
					<Setter
						Property="Control.Template">
						<Setter.Value>
							<ControlTemplate>
								<Rectangle
									Margin="-1"
									SnapsToDevicePixels="False"
									Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
									StrokeThickness="1"
									RadiusX="2"
									RadiusY="2"
									Opacity="0.6" />
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
				<Style
					x:Key="CommandButtonStyle"
					TargetType="{x:Type ButtonBase}">
					<Setter
						Property="Background"
						Value="{DynamicResource SolidBrushWhiteAndBlack}" />
					<Setter
						Property="BorderBrush"
						Value="{DynamicResource SignaturePickerBackground}" />
					<Setter
						Property="Foreground"
						Value="{DynamicResource TextBrushWhiteAndBlack}" />
					<Setter
						Property="BorderThickness"
						Value="1" />
					<Setter
						Property="HorizontalContentAlignment"
						Value="Center" />
					<Setter
						Property="VerticalContentAlignment"
						Value="Center" />
					<Setter
						Property="FrameworkElement.FocusVisualStyle"
						Value="{StaticResource CommandButtonFocusVisual}" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type ButtonBase}">
								<Border
									x:Name="border"
									CornerRadius="2"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									Background="{TemplateBinding Control.Background}"
									BorderBrush="{TemplateBinding Control.BorderBrush}"
									SnapsToDevicePixels="True">
									<Grid>
										<Rectangle
											x:Name="BackgroundBorder"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Stretch"
											Fill="{DynamicResource TextBrushWhiteAndBlack}"
											Opacity="0"
											SnapsToDevicePixels="False"
											RadiusX="2"
											RadiusY="2" />
										<ContentPresenter
											x:Name="contentPresenter"
											RecognizesAccessKey="True"
											Margin="{TemplateBinding Control.Padding}"
											SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
											HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
											VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
											Focusable="False" />
									</Grid>
								</Border>
								<ControlTemplate.Triggers>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											TargetName="BackgroundBorder"
											Property="UIElement.Opacity"
											Value="0.04" />
										<Setter
											Value="{DynamicResource ToolbarSettingStyleMouseOver}"
											TargetName="border"
											Property="Border.Background" />
									</Trigger>
									<Trigger
										Property="IsPressed"
										Value="True">
										<Setter
											TargetName="BackgroundBorder"
											Property="UIElement.Opacity"
											Value="0.12" />
										<Setter
											Value="{DynamicResource ToolbarSettingStyleMouseOver}"
											TargetName="border"
											Property="Border.Background" />
									</Trigger>
									<Trigger
										Property="IsEnabled"
										Value="False">
										<Setter
											Value="{DynamicResource SolidBrushWhiteAndBlack}"
											TargetName="border"
											Property="Border.Background" />
										<Setter
											TargetName="border"
											Property="Border.BorderBrush"
											Value="{StaticResource CommandButton.Disabled.Border}" />
										<Setter
											TargetName="contentPresenter"
											Property="TextElement.Foreground"
											Value="{StaticResource CommandButton.Disabled.Foreground}" />
									</Trigger>
									<Trigger
										Property="ToggleButton.IsChecked"
										Value="True">
										<Setter
											TargetName="BackgroundBorder"
											Property="Shape.Fill"
											Value="#FF6666" />
										<Setter
											Value="{DynamicResource SignaturePickerDelBtnBorder}"
											TargetName="border"
											Property="Border.BorderBrush" />
										<Setter
											Value="{DynamicResource BtnInfoMouseOverColor}"
											TargetName="border"
											Property="Border.Background" />
										<Setter
											Value="{DynamicResource SearchBoxCheckedForeground}"
											TargetName="contentPresenter"
											Property="TextElement.Foreground" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
				<Style
					x:Key="CommandIconButtonStyle"
					TargetType="{x:Type ButtonBase}"
					BasedOn="{StaticResource CommandButtonStyle}">
					<Setter
						Property="BorderThickness"
						Value="0" />
					<Setter
						Property="FontFamily"
						Value="Segoe MDL2 Assets" />
					<Setter
						Property="FontSize"
						Value="12" />
					<Setter
						Property="Width"
						Value="28" />
					<Setter
						Property="VerticalAlignment"
						Value="Stretch" />
					<Setter
						Property="Padding"
						Value="0" />
				</Style>
				<SolidColorBrush
					x:Key="TextBox.Static.Border"
					Color="#FFD2D2D2" />
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid
			x:Name="SearchContentLayoutRoot"
			Background="#00FFFFFF"
			Margin="4"
			MouseUp="SearchContentLayoutRoot_MouseUp">
			<UIElement.RenderTransform>
				<TranslateTransform
					x:Name="SearchTrans" />
			</UIElement.RenderTransform>
			<Rectangle
				Fill="{DynamicResource SolidBrushWhiteAndBlack}"
				RadiusX="2"
				RadiusY="2"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Stretch">
				<UIElement.Effect>
					<DropShadowEffect
						BlurRadius="4"
						ShadowDepth="0" />
				</UIElement.Effect>
			</Rectangle>
			<Rectangle
				x:Name="ProgressBorder"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Bottom"
				Height="4"
				RadiusX="2"
				RadiusY="2">
				<Shape.Fill>
					<LinearGradientBrush
						MappingMode="Absolute"
						StartPoint="0,0"
						EndPoint="0,2">
						<Brush.RelativeTransform>
							<ScaleTransform
								ScaleY="-1"
								CenterY="0.5" />
						</Brush.RelativeTransform>
						<GradientBrush.GradientStops>
							<GradientStop
								Offset="1"
								Color="#DDCA393B" />
							<GradientStop
								Offset="1"
								Color="Transparent" />
						</GradientBrush.GradientStops>
					</LinearGradientBrush>
				</Shape.Fill>
				<UIElement.Clip>
					<RectangleGeometry
						x:Name="ProgressClip" />
				</UIElement.Clip>
			</Rectangle>
			<StackPanel
				Orientation="Vertical"
				Margin="8">
				<Grid>
					<TextBox
						x:Name="SearchTextBox"
						Style="{StaticResource DefaultTextBoxStyle}"
						Width="320"
						BorderBrush="{DynamicResource ContextMenuBorder}"
						comCtrls:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinFindPlaceHolderContent}"
						Padding="4,6,4,6"
						Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
						KeyDown="SearchTextBox_KeyDown" />
					<StackPanel
						x:Name="SearchCommandPanel"
						Orientation="Horizontal"
						HorizontalAlignment="Right"
						VerticalAlignment="Stretch"
						SizeChanged="SearchCommandPanel_SizeChanged">
						<StackPanel
							x:Name="RecordCountContainer"
							Orientation="Horizontal"
							VerticalAlignment="Center"
							Margin="4,0,0,1">
							<TextBlock
								Style="{StaticResource ButtonFontStyle}"
								Text="{Binding Path=CurrentRecord, Mode=OneWay}" />
							<TextBlock
								Style="{StaticResource ButtonFontStyle}"
								Text="/" />
							<TextBlock
								Style="{StaticResource ButtonFontStyle}"
								Text="{Binding Path=TotalRecords, Mode=OneWay}" />
						</StackPanel>
						<Rectangle
							VerticalAlignment="Stretch"
							Width="1"
							Fill="{DynamicResource MainViewFontSizeBorder}"
							Margin="8,0,0,0" />
						<Button
							x:Name="PrevBtn"
							Style="{StaticResource CommandIconButtonStyle}"
							Margin="0,1"
							Content=""
							Command="{Binding Path=SearchUpCmd}">
							<FrameworkElement.ToolTip>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										Text="{x:Static localprop:Resources.PrevBtnTooltipText}"
										FontWeight="Bold"
										Foreground="{DynamicResource ToolBarButtonContextMenu}" />
									<TextBlock
										Text="[Shift + Enter]"
										Margin="10,0,0,0"
										FontWeight="Bold"
										Foreground="{DynamicResource ToolBarButtonContextMenu}" />
								</StackPanel>
							</FrameworkElement.ToolTip>
						</Button>
						<Button
							x:Name="NextBtn"
							Style="{StaticResource CommandIconButtonStyle}"
							Margin="0,1"
							Content=""
							Command="{Binding Path=SearchDownCmd}">
							<FrameworkElement.ToolTip>
								<StackPanel
									Orientation="Horizontal">
									<TextBlock
										Text="{x:Static localprop:Resources.NextBtnTooltipText}"
										FontWeight="Bold"
										Foreground="{DynamicResource ToolBarButtonContextMenu}" />
									<TextBlock
										Text="[Enter]"
										Margin="10,0,0,0"
										FontWeight="Bold"
										Foreground="{DynamicResource ToolBarButtonContextMenu}" />
								</StackPanel>
							</FrameworkElement.ToolTip>
						</Button>
						<Button
							x:Name="CancelBtn"
							Style="{StaticResource CommandIconButtonStyle}"
							Margin="0,1,1,1"
							Content=""
							Click="CancelButton_Click" />
					</StackPanel>
				</Grid>
				<StackPanel
					Orientation="Horizontal"
					Margin="0,8,0,0">
					<ToggleButton
						Content="{x:Static localprop:Resources.WinFindCaseSensitiveBtnContent}"
						Padding="12,6"
						BorderBrush="{DynamicResource DocumentSearchBoxButtonBorderBrush}"
						FontSize="12"
						Style="{StaticResource CommandButtonStyle}"
						IsChecked="{Binding MatchCase, Mode=TwoWay}" />
					<ToggleButton
						Content="{x:Static localprop:Resources.WinFindMatchallwordsBtnContent}"
						Padding="12,6"
						Margin="8,0,0,0"
						BorderBrush="{DynamicResource DocumentSearchBoxButtonBorderBrush}"
						FontSize="12"
						Style="{StaticResource CommandButtonStyle}"
						IsChecked="{Binding MatchWholeWord, Mode=TwoWay}" />
				</StackPanel>
				<Border
					Margin="0,8,0,0"
					Background="{DynamicResource BatchPrintWindowFileListItemMouseOverBackground}"
					BorderBrush="{DynamicResource SignaturebodyBorder}"
					BorderThickness="1"
					HorizontalAlignment="Stretch"
					CornerRadius="2"
					Visibility="{Binding IsOcrTipsVisible, Converter='{StaticResource BooleanToVisibilityConverter}', FallbackValue='{x:Static Visibility.Collapsed}'}">
					<Grid>
						<StackPanel>
							<TextBlock
								Margin="12,12,12,0"
								MaxWidth="296"
								HorizontalAlignment="Center"
								TextAlignment="Center"
								TextWrapping="Wrap"
								Text="{x:Static localprop:Resources.WinFindDocumentNeedOcrTips}" />
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="*" />
								</Grid.ColumnDefinitions>
								<Button
									x:Name="PerformOcrBtn"
									Style="{StaticResource PrimaryDialogButtonStyle}"
									HorizontalAlignment="Right"
									VerticalAlignment="Center"
									Padding="16,10"
									Margin="0,10,5,0"
									MinWidth="102"
									Background="#EF5B52"
									Foreground="#FFFFFF"
									Content="{x:Static localprop:Resources.WinFindPerformOCR}"
									Click="PerformOcrBtn_Click" />
								<Button
									x:Name="CloseRecognitionTipBtn"
									Grid.Column="1"
									Style="{StaticResource PrimaryDialogButtonStyle}"
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									Padding="16,10"
									Margin="10,10,0,0"
									BorderBrush="#EEE"
									Background="#FFFFFF"
									Foreground="#FF000000"
									MinWidth="102"
									Content="{x:Static localprop:Resources.WinBtnCloseContent}"
									Click="CloseRecognitionTipBtn_Click" />
							</Grid>
							<CheckBox
								x:Name="DoNotShowRecognitionTipCheckBox"
								Margin="8,10,8,8"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Style="{StaticResource DefaultCheckBoxStyle}"
								Content="{x:Static localprop:Resources.WinFindOCRNotShowAgain}" />
						</StackPanel>
					</Grid>
				</Border>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
