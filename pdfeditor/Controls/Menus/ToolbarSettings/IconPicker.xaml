<UserControl
	x:Class="pdfeditor.Controls.Menus.ToolbarSettings.IconPicker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Menus.ToolbarSettings">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<StackPanel
			Orientation="Horizontal"
			Grid.Column="0"
			DataContext="{Binding Path=Model, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:IconPicker}}">
			<Border
				Width="48">
				<Image
					Width="24"
					Height="24"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Source="{Binding Icon}"
					ToolTip="{Binding Caption}" />
			</Border>
		</StackPanel>
		<Rectangle
			Width="1"
			Height="52"
			Stroke="{DynamicResource MainViewShapeToolBarRetangle}"
			VerticalAlignment="Stretch"
			Grid.Column="1"
			Margin="0,0,6,0" />
	</Grid>
</UserControl>
