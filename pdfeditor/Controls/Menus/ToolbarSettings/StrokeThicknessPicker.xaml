<UserControl
	x:Class="pdfeditor.Controls.Menus.ToolbarSettings.StrokeThicknessPicker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Menus.ToolbarSettings">
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary
						Source="/Controls/Menus/ToolbarSettings/ToolbarSettingStyles.xaml" />
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<StackPanel
			Orientation="Horizontal"
			Margin="6,0,6,0"
			DataContext="{Binding Path=Model, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:StrokeThicknessPicker}}"
			ToolTip="{Binding Caption}">
			<Border
				BorderThickness="1,1,0,1"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				Width="22"
				Height="22">
				<Image
					x:Name="thicknessIcon"
					Source="{DynamicResource MainViewShapeStrikeThickness}"
					Width="20"
					Height="20"
					Margin="2,0,4,4"
					Stretch="Fill"
					MouseLeftButtonDown="ThicknessIcon_MouseLeftButtonDown" />
			</Border>
			<ComboBox
				x:Name="comboBox"
				Style="{StaticResource ToolbarSettingComboboxStyle}"
				Width="62"
				Height="22">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock
							Text="{Binding Caption}" />
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ComboBox>
		</StackPanel>
	</Grid>
</UserControl>
