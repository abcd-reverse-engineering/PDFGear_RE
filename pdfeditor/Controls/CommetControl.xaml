	<Style
		x:Key="CommetTreeViewExpandCollapseToggleStyle"
		TargetType="{x:Type ToggleButton}">
		<Setter
			Property="Focusable"
			Value="False" />
		<Setter
			Property="Height"
			Value="16" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type ToggleButton}">
					<Border
						Height="16"
						Background="#00FFFFFF"
						HorizontalAlignment="Stretch">
						<Border
							Width="16"
							Height="16"
							Padding="5,5,5,5"
							HorizontalAlignment="Left">
							<Path
								x:Name="ExpandPath"
								Fill="{StaticResource CommetTreeViewItem.TreeArrow.Static.Fill}"
								Stroke="{StaticResource CommetTreeViewItem.TreeArrow.Static.Stroke}"
								Data="{StaticResource CommetTreeArrow}">
								<UIElement.RenderTransform>
									<RotateTransform
										Angle="135"
										CenterX="3"
										CenterY="3" />
								</UIElement.RenderTransform>
							</Path>
						</Border>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger
							Property="ToggleButton.IsChecked"
							Value="True">
							<Setter
								TargetName="ExpandPath"
								Property="RenderTransform">
								<Setter.Value>
									<RotateTransform
										Angle="180"
										CenterX="3"
										CenterY="3" />
								</Setter.Value>
							</Setter>
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Fill"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.Static.Checked.Fill}" />
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Stroke"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.Static.Checked.Stroke}" />
						</Trigger>
						<Trigger
							Property="UIElement.IsMouseOver"
							Value="True">
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Stroke"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.MouseOver.Stroke}" />
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Fill"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.MouseOver.Fill}" />
						</Trigger>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition
									Property="UIElement.IsMouseOver"
									Value="True" />
								<Condition
									Property="ToggleButton.IsChecked"
									Value="True" />
							</MultiTrigger.Conditions>
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Stroke"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.MouseOver.Checked.Stroke}" />
							<Setter
								TargetName="ExpandPath"
								Property="Shape.Fill"
								Value="{StaticResource CommetTreeViewItem.TreeArrow.MouseOver.Checked.Fill}" />
						</MultiTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
