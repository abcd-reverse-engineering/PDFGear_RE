<Window
	x:Class="pdfeditor.Controls.Printer.WinPrinterProgress" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Printer" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonLibCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	WindowStyle="None"
	AllowsTransparency="True"
	ShowInTaskbar="False"
	WindowStartupLocation="CenterOwner"
	Background="#00FFFFFF"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Padding="0"
	Height="160"
	Width="460"
	SizeToContent="Height"
	MouseMove="Window_MouseMove">
	<Border>
		<Grid
			Margin="16,12,16,20">
			<Border
				CornerRadius="8"
				Background="{DynamicResource WindowsBackground}"
				BorderBrush="{DynamicResource WinprintProgressBorder}"
				BorderThickness="1">
				<UIElement.Effect>
					<DropShadowEffect
						BlurRadius="16"
						ShadowDepth="4"
						Direction="270"
						Color="Black"
						Opacity="0.2"
						RenderingBias="Performance" />
				</UIElement.Effect>
			</Border>
			<StackPanel
				Orientation="Vertical"
				Margin="0,20,0,0">
				<TextBlock
					x:Name="DocumentTitle"
					Grid.ColumnSpan="2"
					Margin="20,0,20,2"
					TextTrimming="CharacterEllipsis"
					Visibility="Collapsed"
					ToolTip="{Binding Path=Text, RelativeSource={RelativeSource Mode=Self}}" />
				<commonLibCtrl:ProgressBar
					x:Name="ProgressBar"
					Grid.Row="0"
					Margin="20 10 20 16"
					VerticalAlignment="Top"
					Grid.ColumnSpan="2"
					HorizontalAlignment="Stretch"
					Minimum="0"
					Maximum="1"
					Value="{Binding Path=Value, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:WinPrinterProgress}}}" />
				<Grid
					HorizontalAlignment="Stretch"
					VerticalAlignment="Top"
					Margin="20 0 20 20">
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="Auto" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<TextBlock
						x:Name="ProgressText"
						HorizontalAlignment="Left"
						VerticalAlignment="Top" />
					<Button
						x:Name="CancelButton"
						Grid.Column="1"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Grid.RowSpan="2"
						Style="{StaticResource DialogButtonStyle}"
						Visibility="Visible"
						Content="{x:Static localprop:Resources.WinBtnCancelContent}"
						Width="80"
						Height="32"
						Padding="5"
						Click="CancelButton_Click" />
				</Grid>
			</StackPanel>
		</Grid>
	</Border>
</Window>
