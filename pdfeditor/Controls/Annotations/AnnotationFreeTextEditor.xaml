<UserControl
	x:Class="pdfeditor.Controls.Annotations.AnnotationFreeTextEditor" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Annotations" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:control="clr-namespace:pdfeditor.Controls">
	<Grid
		x:Name="LayoutRoot">
		<Canvas
			x:Name="RichTextBoxContainer"
			Cursor="IBeam"
			MouseDown="RichTextBoxContainer_MouseDown">
			<Border
				x:Name="RichTextBoxBorder"
				IsHitTestVisible="False"
				Panel.ZIndex="1"
				SizeChanged="RichTextBoxBorder_SizeChanged" />
			<Border
				x:Name="TextPlaceholderContainer"
				Visibility="Collapsed"
				Panel.ZIndex="2">
				<TextBlock
					x:Name="TextAnnotionPlaceholder"
					Foreground="#FF808080"
					Margin="6,5,0,0"
					VerticalAlignment="Top"
					Text="{x:Static localprop:Resources.TextBoxDefaultInputTextContent}"
					TextWrapping="Wrap" />
			</Border>
		</Canvas>
		<Canvas
			x:Name="DraggerCanvas">
			<control:ResizeView
				x:Name="DraggerResizeView"
				PreviewMouseLeftButtonDown="DraggerResizeView_PreviewMouseLeftButtonDown"
				MouseDoubleClick="DraggerResizeView_MouseDoubleClick"
				ResizeDragStarted="DraggerResizeView_ResizeDragStarted"
				ResizeDragCompleted="DraggerResizeView_ResizeDragCompleted"
				Width="100"
				Height="100"
				BorderThickness="1"
				BorderBrush="#00FFFFFF"
				CanDragCross="False" />
		</Canvas>
	</Grid>
</UserControl>
