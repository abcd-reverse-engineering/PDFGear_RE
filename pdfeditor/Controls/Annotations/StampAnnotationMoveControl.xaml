<UserControl
	x:Class="pdfeditor.Controls.Annotations.StampAnnotationMoveControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Annotations"
	IsHitTestVisible="False">
	<Canvas
		x:Name="LayoutRoot">
		<Rectangle
			x:Name="DashBorder"
			Stroke="#FF0000FF"
			StrokeThickness="2"
			Width="100"
			Height="100"
			Fill="#00FFFFFF"
			StrokeDashArray="2.5 1.5"
			Opacity="0.6"
			UseLayoutRounding="False"
			SnapsToDevicePixels="False"
			Panel.ZIndex="2" />
		<Border
			x:Name="TextContentBorder"
			Width="{Binding Path=TextWidth}"
			Height="{Binding Path=TextHeight}" />
		<Image
			x:Name="contentImage"
			Stretch="Fill"
			Source="{Binding StampImageSource}"
			Width="{Binding ImageWidth}"
			Height="{Binding ImageHeight}" />
	</Canvas>
</UserControl>
