<UserControl
	x:Class="pdfeditor.Controls.Annotations.AnnotationDragEditControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Annotations" xmlns:control="clr-namespace:pdfeditor.Controls"
	Focusable="True">
	<Canvas
		x:Name="LayoutRoot"
		Background="#00FFFFFF"
		SizeChanged="LayoutRoot_SizeChanged">
		<control:ResizeView
			x:Name="DragResizeView"
			ResizeDragStarted="ResizeView_ResizeDragStarted"
			ResizeDragging="DragResizeView_ResizeDragging"
			ResizeDragCompleted="ResizeView_ResizeDragCompleted"
			CanDragCross="False"
			Width="100"
			Height="100"
			BorderThickness="0"
			DragPlaceholderFill="#00FFFFFF">
			<control:ResizeView.PlaceholderContent>
				<Canvas>
					<Ellipse
						x:Name="ResizePlaceholderEllipse"
						Stroke="#1892ff"
						StrokeThickness="1" />
				</Canvas>
			</control:ResizeView.PlaceholderContent>
		</control:ResizeView>
	</Canvas>
</UserControl>
