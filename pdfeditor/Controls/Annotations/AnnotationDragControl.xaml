<UserControl
	x:Class="pdfeditor.Controls.Annotations.AnnotationDragControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.Annotations" xmlns:control="clr-namespace:pdfeditor.Controls"
	Focusable="True">
	<Canvas
		x:Name="LayoutRoot"
		Background="#00FFFFFF">
		<Rectangle
			x:Name="AnnotationDrag"
			Stroke="#FF0000FF"
			StrokeThickness="2"
			Width="100"
			Height="100"
			Fill="#00FFFFFF"
			StrokeDashArray="2.5 1.5"
			Opacity="0.4"
			UseLayoutRounding="False"
			SnapsToDevicePixels="False"
			Cursor="SizeAll" />
		<control:ResizeView
			x:Name="DragResizeView"
			ResizeDragStarted="ResizeView_ResizeDragStarted"
			ResizeDragCompleted="ResizeView_ResizeDragCompleted"
			DragMode="Move"
			DragPlaceholderFill="#00FFFFFF"
			BorderThickness="0"
			Canvas.Left="1"
			Canvas.Top="1">
			<control:ResizeView.PlaceholderContent>
				<Canvas
					x:Name="AnotationDataCanvas">
					<Rectangle
						Stroke="#331892ff"
						Fill="#00FFFFFF"
						StrokeDashArray="5 3"
						Opacity="1"
						UseLayoutRounding="False"
						SnapsToDevicePixels="False"
						Width="{Binding ElementName=AnnotationDrag, Path=ActualWidth}"
						Height="{Binding ElementName=AnnotationDrag, Path=ActualHeight}" />
				</Canvas>
			</control:ResizeView.PlaceholderContent>
		</control:ResizeView>
	</Canvas>
</UserControl>
