<Window
	x:Class="pdfeditor.Controls.StampEditWin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:local="clr-namespace:pdfeditor.Controls" xmlns:validations="clr-namespace:pdfeditor.Utils.Validations" xmlns:sys="clr-namespace:System;assembly=mscorlib"
	SizeToContent="Height"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Title="{x:Static localprop:Resources.WinCustomizeStampNewTiltle}"
	Width="320"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<Style
				x:Key="ValidationTextBoxStyle"
				TargetType="{x:Type TextBox}">
				<Setter
					Property="Validation.ErrorTemplate">
					<Setter.Value>
						<ControlTemplate>
							<DockPanel
								LastChildFill="True">
								<TextBlock
									DockPanel.Dock="Right"
									VerticalAlignment="Center"
									Foreground="#FFFF0000"
									FontSize="14"
									FontWeight="Bold"
									ToolTip="{Binding ElementName=adornerPlaceholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">*</TextBlock>
								<Border
									BorderBrush="#FFFF0000"
									BorderThickness="0.5">
									<AdornedElementPlaceholder
										Name="adornerPlaceholder" />
								</Border>
							</DockPanel>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
				<Style.Triggers>
					<Trigger
						Property="Validation.HasError"
						Value="True">
						<Setter
							Property="FrameworkElement.ToolTip"
							Value="{Binding Path=(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />
					</Trigger>
				</Style.Triggers>
			</Style>
			<Style
				x:Key="ColorStyle"
				TargetType="{x:Type Rectangle}">
				<Setter
					Property="StrokeThickness"
					Value="1" />
				<Setter
					Property="Stroke"
					Value="#D2D2D2" />
				<Setter
					Property="Width"
					Value="20" />
				<Setter
					Property="Height"
					Value="20" />
				<Setter
					Property="Margin"
					Value="0,0,11,0" />
				<Setter
					Property="Grid.Column"
					Value="1" />
				<Style.Triggers>
					<Trigger
						Property="UIElement.IsMouseOver"
						Value="True">
						<Setter
							Property="Stroke"
							Value="#FF000000" />
						<Setter
							Property="FrameworkElement.Cursor"
							Value="Hand" />
					</Trigger>
				</Style.Triggers>
			</Style>
			<Style
				x:Key="BoxRadioButton"
				TargetType="{x:Type RadioButton}">
				<Setter
					Property="Background"
					Value="#00FFFFFF" />
				<Setter
					Property="Padding"
					Value="3 2 3 2" />
				<Setter
					Property="BorderThickness"
					Value="3" />
				<Setter
					Property="Height"
					Value="auto" />
				<Setter
					Property="UIElement.SnapsToDevicePixels"
					Value="True" />
				<Setter
					Property="BorderBrush"
					Value="{DynamicResource MainViewFontSizeBorder}" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type RadioButton}">
							<Grid
								x:Name="grid">
								<Grid.ColumnDefinitions>
									<ColumnDefinition />
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition />
								</Grid.RowDefinitions>
								<Rectangle
									x:Name="colorout"
									Fill="#00FFFFFF"
									Margin="0,0,9.5,0"
									Width="24"
									Height="24" />
								<Rectangle
									x:Name="colorrect"
									Fill="{TemplateBinding Control.Background}"
									Width="16"
									Height="16"
									Margin="0,0,10,0" />
								<ContentPresenter
									VerticalAlignment="Center"
									HorizontalAlignment="Center"
									Margin="{TemplateBinding Control.Padding}"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
							</Grid>
							<ControlTemplate.Triggers>
								<Trigger
									Property="ToggleButton.IsChecked"
									Value="true">
									<Setter
										TargetName="colorout"
										Value="{DynamicResource MainViewFontSizeBorder}"
										Property="Shape.Stroke" />
									<Setter
										TargetName="colorout"
										Property="Shape.StrokeThickness"
										Value="2" />
								</Trigger>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="colorout"
										Value="{DynamicResource MainViewFontSizeBorder}"
										Property="Shape.Stroke" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid
		x:Name="root">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="Auto"
				MinWidth="20" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="20" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="20" />
		</Grid.RowDefinitions>
		<Grid
			Row="1"
			Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="45" />
				<ColumnDefinition
					Width="10" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="13" />
				<RowDefinition
					Height="28" />
				<RowDefinition
					Height="13" />
				<RowDefinition
					Height="32" />
			</Grid.RowDefinitions>
			<TextBlock
				Grid.Row="0"
				Grid.Column="0"
				FontSize="12"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Text="{x:Static localprop:Resources.LabelTextContent}" />
			<TextBox
				x:Name="txt_Text"
				Grid.Row="0"
				Grid.Column="2"
				FontSize="12"
				VerticalContentAlignment="Center"
				TextChanged="txt_Text_TextChanged">
				<FrameworkElement.Resources>
					<ResourceDictionary>
						<VisualBrush
							x:Key="HintText"
							TileMode="None"
							Opacity="0.5"
							Stretch="None"
							AlignmentX="Left">
							<VisualBrush.Visual>
								<Label
									Content="{x:Static localprop:Resources.WinCustomizeStampPlaceHolderContent}" />
							</VisualBrush.Visual>
						</VisualBrush>
					</ResourceDictionary>
				</FrameworkElement.Resources>
				<FrameworkElement.Style>
					<Style
						BasedOn="{StaticResource DefaultTextBoxStyle}"
						TargetType="{x:Type TextBox}">
						<Setter
							Property="Validation.ErrorTemplate">
							<Setter.Value>
								<ControlTemplate>
									<DockPanel
										LastChildFill="True">
										<TextBlock
											DockPanel.Dock="Right"
											VerticalAlignment="Center"
											Foreground="#FFFF0000"
											FontSize="14"
											FontWeight="Bold"
											ToolTip="{Binding ElementName=adornerPlaceholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}">*</TextBlock>
										<Border
											BorderBrush="#FFFF0000"
											BorderThickness="0.5">
											<AdornedElementPlaceholder
												Name="adornerPlaceholder" />
										</Border>
									</DockPanel>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger
								Property="Text"
								Value="{x:Null}">
								<Setter
									Property="Background"
									Value="{StaticResource HintText}" />
							</Trigger>
							<Trigger
								Property="Text"
								Value="">
								<Setter
									Property="Background"
									Value="{StaticResource HintText}" />
							</Trigger>
							<Trigger
								Property="Validation.HasError"
								Value="True">
								<Setter
									Property="FrameworkElement.ToolTip"
									Value="{Binding Path=(Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</FrameworkElement.Style>
			</TextBox>
			<TextBlock
				Grid.Row="2"
				Grid.Column="0"
				FontSize="12"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Text="{x:Static localprop:Resources.LabelColorContent}" />
			<StackPanel
				x:Name="colorSelecters"
				Orientation="Horizontal"
				Grid.Row="2"
				Grid.Column="2">
				<RadioButton
					Style="{StaticResource BoxRadioButton}"
					Background="#20C48F"
					Cursor="Hand"
					GroupName="StampEditWin_Color" />
				<RadioButton
					Style="{StaticResource BoxRadioButton}"
					Background="#298FEE"
					Cursor="Hand"
					GroupName="StampEditWin_Color" />
				<RadioButton
					Style="{StaticResource BoxRadioButton}"
					Background="#FF6932"
					Cursor="Hand"
					GroupName="StampEditWin_Color" />
				<RadioButton
					Style="{StaticResource BoxRadioButton}"
					Background="#B80000"
					Cursor="Hand"
					GroupName="StampEditWin_Color" />
				<RadioButton
					x:Name="CustomColorRadioButton"
					Style="{StaticResource BoxRadioButton}"
					Background="#FF6932"
					Cursor="Hand"
					GroupName="StampEditWin_Color"
					Visibility="Collapsed" />
			</StackPanel>
			<StackPanel
				Grid.Row="4"
				Grid.Column="2"
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Center">
				<Button
					x:Name="btnCancel"
					Style="{StaticResource DialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					Width="80"
					FontSize="12"
					IsCancel="True" />
				<Button
					x:Name="btnOk"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					Width="80"
					Margin="10,0,0,0"
					IsDefault="True"
					FontSize="12"
					IsEnabled="False" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
