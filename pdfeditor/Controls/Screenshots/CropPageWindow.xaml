<Window
	x:Class="pdfeditor.Controls.Screenshots.CropPageWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:converter="clr-namespace:pdfeditor.Utils.Converters" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Screenshots" xmlns:commonLibCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterOwner"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Title="{x:Static localprop:Resources.ShortcutTextCropPage}"
	Height="620"
	Width="750">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<Style
				x:Key="textIsenabled"
				TargetType="{x:Type TextBlock}">
				<Style.Triggers>
					<Trigger
						Property="IsEnabled"
						Value="True">
						<Setter
							Property="Foreground"
							Value="#FF000000" />
					</Trigger>
					<Trigger
						Property="IsEnabled"
						Value="False">
						<Setter
							Property="Foreground"
							Value="#FF808080" />
					</Trigger>
				</Style.Triggers>
			</Style>
			<converter:UIModeToBorderThicknessConverter
				x:Key="UIModeToBorderThicknessConverter" />
			<converter:CenterBorderGapMaskConverter
				x:Key="CenterBorderGapMaskConverter" />
			<Style
				x:Key="{x:Type GroupBox}"
				TargetType="{x:Type GroupBox}">
				<Setter
					Property="BorderBrush"
					Value="#FFAEAEAE" />
				<Setter
					Property="BorderThickness"
					Value="1" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type GroupBox}">
							<Grid
								SnapsToDevicePixels="True">
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="0" />
									<ColumnDefinition
										Width="30" />
									<ColumnDefinition
										Width="Auto" />
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="4" />
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="*" />
									<RowDefinition
										Height="4" />
								</Grid.RowDefinitions>
								<Border
									Grid.Row="1"
									Grid.Column="0"
									Grid.RowSpan="3"
									Grid.ColumnSpan="5"
									CornerRadius="4"
									BorderBrush="#00FFFFFF"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									Background="{TemplateBinding Control.Background}" />
								<Border
									x:Name="Header"
									Grid.Row="0"
									Grid.Column="2"
									Grid.RowSpan="2"
									Padding="3,1,3,0">
									<ContentPresenter
										ContentSource="Header"
										RecognizesAccessKey="True"
										SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
								</Border>
								<ContentPresenter
									Grid.Row="2"
									Grid.Column="1"
									Grid.ColumnSpan="3"
									Margin="{TemplateBinding Control.Padding}"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
								<Border
									Grid.Row="1"
									Grid.Column="0"
									Grid.RowSpan="3"
									Grid.ColumnSpan="5"
									CornerRadius="4"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									BorderBrush="{DynamicResource {DynamicResource MainViewFontSizeBorder}}">
									<UIElement.OpacityMask>
										<MultiBinding
											Converter="{StaticResource CenterBorderGapMaskConverter}">
											<Binding
												ElementName="Header"
												Path="ActualWidth" />
											<Binding
												Path="ActualWidth"
												RelativeSource="{RelativeSource Self}" />
											<Binding
												Path="ActualHeight"
												RelativeSource="{RelativeSource Self}" />
										</MultiBinding>
									</UIElement.OpacityMask>
									<Border
										BorderThickness="{TemplateBinding Control.BorderThickness}"
										BorderBrush="{TemplateBinding Control.BorderBrush}"
										CornerRadius="3">
										<Border
											BorderThickness="0"
											BorderBrush="#FFFFFFFF"
											CornerRadius="2" />
									</Border>
								</Border>
							</Grid>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style
				x:Key="{x:Type RadioButton}"
				TargetType="{x:Type RadioButton}"
				BasedOn="{StaticResource DefaultRadioButtonStyle}" />
			<Style
				x:Key="{x:Type ComboBox}"
				TargetType="{x:Type ComboBox}"
				BasedOn="{StaticResource DefaultComboBoxStyle}" />
			<Style
				x:Key="{x:Type TextBox}"
				TargetType="{x:Type TextBox}"
				BasedOn="{StaticResource DefaultTextBoxStyle}" />
			<Style
				x:Key="BtnInfoStyle"
				TargetType="{x:Type ButtonBase}">
				<Setter
					Property="Height"
					Value="24" />
				<Setter
					Property="Width"
					Value="24" />
				<Setter
					Property="Background"
					Value="{DynamicResource SolidBrushWhiteAndBlack}" />
				<Setter
					Property="BorderThickness"
					Value="0" />
				<Setter
					Property="TextBlock.Foreground"
					Value="{DynamicResource MainViewBtnInfoStyleText}" />
				<Setter
					Property="TextBlock.FontSize"
					Value="12" />
				<Setter
					Property="TextBlock.TextAlignment"
					Value="Center" />
				<Setter
					Property="TextBlock.FontSize"
					Value="12" />
				<Setter
					Property="TextBlock.FontStyle"
					Value="Normal" />
				<Setter
					Property="HorizontalContentAlignment"
					Value="Stretch" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type ButtonBase}">
							<Border
								x:Name="bborder"
								BorderBrush="{TemplateBinding Control.BorderBrush}"
								BorderThickness="{TemplateBinding Control.BorderThickness}"
								Background="{TemplateBinding Control.Background}"
								SnapsToDevicePixels="True">
								<ContentPresenter
									x:Name="contentPresenter"
									Focusable="False"
									HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
									Margin="{TemplateBinding Control.Padding}"
									RecognizesAccessKey="True"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
									VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="bborder"
										Property="Border.CornerRadius"
										Value="3" />
									<Setter
										TargetName="bborder"
										Value="{DynamicResource SignaturePickerDelBtnBorder}"
										Property="Border.BorderBrush" />
									<Setter
										TargetName="bborder"
										Value="{DynamicResource ColorPicker.Static.TitleBackground}"
										Property="Border.Background" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="False">
									<Setter
										TargetName="bborder"
										Property="Border.BorderBrush"
										Value="#9F9F9F" />
									<Setter
										Property="TextBlock.Foreground"
										Value="#9F9F9F" />
									<Setter
										Property="UIElement.Opacity"
										Value="0.5" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="True">
									<Setter
										TargetName="bborder"
										Property="Border.BorderBrush"
										Value="#3F3F3F" />
									<Setter
										Property="TextBlock.Foreground"
										Value="#3F3F3F" />
									<Setter
										Property="UIElement.Opacity"
										Value="1" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="1.5*" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="60" />
		</Grid.RowDefinitions>
		<Grid
			Column="0"
			Row="1">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="270" />
				<RowDefinition
					Height="0" />
				<RowDefinition
					Height="210" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<GroupBox
				Grid.Row="0"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				BorderThickness="1"
				Margin="20 0 20 0">
				<HeaderedContentControl.Header>
					<Label
						Content="{x:Static localprop:Resources.CropPageWinMarginTitle}"
						Foreground="{DynamicResource TextBrushWhiteAndBlack}" />
				</HeaderedContentControl.Header>
				<Grid
					Row="0">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="240" />
						<RowDefinition />
					</Grid.RowDefinitions>
					<RadioButton
						x:Name="CropControl"
						Content="Crop rectangle control"
						Margin="20 0 0 0"
						Visibility="Collapsed"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						GroupName="Cropsize"
						FontWeight="Black" />
					<Grid
						x:Name="WithoutPagesArea"
						Row="2"
						Visibility="Collapsed">
						<TextBlock
							Text="{x:Static localprop:Resources.CropPageExceedingPageRange}"
							VerticalAlignment="Center"
							TextWrapping="Wrap"
							HorizontalAlignment="Center" />
					</Grid>
					<Grid
						x:Name="CropArea"
						Row="2"
						Visibility="Visible"
						Margin="0 10 0 0"
						IsEnabled="{Binding ElementName=CropControl, Path=IsChecked}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="20" />
							<ColumnDefinition
								MinWidth="70" />
							<ColumnDefinition
								MinWidth="30" />
							<ColumnDefinition
								Width="35" />
							<ColumnDefinition
								Width="90" />
							<ColumnDefinition
								Width="90" />
						</Grid.ColumnDefinitions>
						<Grid.RowDefinitions>
							<RowDefinition
								Height="30" />
							<RowDefinition
								Height="35" />
							<RowDefinition
								Height="35" />
							<RowDefinition
								Height="50" />
							<RowDefinition
								Height="40" />
							<RowDefinition
								Height="40" />
						</Grid.RowDefinitions>
						<CheckBox
							x:Name="mandatoryCheckBox"
							Grid.Row="0"
							Grid.Column="1"
							Grid.ColumnSpan="3"
							Style="{StaticResource DefaultCheckBoxStyle}"
							Content="{x:Static localprop:Resources.CropPageWinMandatoryBox}"
							VerticalAlignment="Center"
							HorizontalAlignment="Left"
							Checked="mandatoryCheckBox_Checked"
							Unchecked="mandatoryCheckBox_Unchecked" />
						<Grid
							Row="1"
							Column="1"
							ColumnSpan="5"
							RowSpan="2"
							Margin="2 0 0 0">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="90" />
								<ColumnDefinition
									Width="35" />
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="90" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="35" />
								<RowDefinition
									Height="35" />
							</Grid.RowDefinitions>
							<TextBlock
								Text="{x:Static localprop:Resources.WinPageMarginTopLabelContent}"
								Grid.Row="0"
								MinWidth="35"
								Grid.Column="0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
							<commonLibCtrl:NumberBox
								x:Name="topNumBox"
								Width="70"
								Height="22"
								Grid.Row="0"
								Grid.Column="1"
								Margin="0,0,0,7"
								IsArrowEnabled="True"
								NumberFormat="{}{0:0.00}"
								SmallChange="0.01"
								Minimum="0"
								HorizontalAlignment="Center"
								VerticalAlignment="Bottom"
								Value="{Binding Path=PageMargin2.TopCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}" />
							<TextBlock
								Text="{x:Static localprop:Resources.WinPageMarginBottomLabelContent}"
								Grid.Row="0"
								MinWidth="35"
								Grid.Column="3"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
							<commonLibCtrl:NumberBox
								x:Name="bottomNumbox"
								Width="70"
								Height="22"
								Grid.Row="0"
								Grid.Column="4"
								Margin="8,0,0,0"
								IsArrowEnabled="True"
								NumberFormat="{}{0:0.00}"
								SmallChange="0.01"
								Minimum="0"
								Value="{Binding Path=PageMargin2.BottomCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}" />
							<TextBlock
								Text="{x:Static localprop:Resources.WinPageMarginLeftLabelContent}"
								Grid.Row="1"
								MinWidth="35"
								Grid.Column="0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
							<commonLibCtrl:NumberBox
								x:Name="leftNumbox"
								Width="70"
								Height="22"
								Grid.Row="1"
								Grid.Column="1"
								HorizontalAlignment="Center"
								Margin="0,0,0,0"
								IsArrowEnabled="True"
								NumberFormat="{}{0:0.00}"
								SmallChange="0.01"
								Minimum="0"
								Value="{Binding Path=PageMargin2.LeftCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}" />
							<TextBlock
								Text="{x:Static localprop:Resources.WinPageMarginRightLabelContent}"
								Grid.Row="1"
								MinWidth="35"
								Grid.Column="3"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
							<commonLibCtrl:NumberBox
								x:Name="rightNumbox"
								Width="70"
								Height="22"
								Grid.Row="1"
								Grid.Column="4"
								Margin="8,0,0,0"
								IsArrowEnabled="True"
								NumberFormat="{}{0:0.00}"
								SmallChange="0.01"
								Minimum="0"
								Value="{Binding Path=PageMargin2.RightCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}" />
						</Grid>
						<CheckBox
							x:Name="ZeroCheckBox"
							Grid.Row="3"
							Grid.Column="1"
							Grid.ColumnSpan="3"
							Content="{x:Static localprop:Resources.CropPageWinRemoveMaigin}"
							Style="{StaticResource DefaultCheckBoxStyle}"
							VerticalAlignment="Center"
							HorizontalAlignment="Left"
							Checked="CheckBox_Checked"
							Unchecked="CheckBox_Unchecked" />
						<Button
							x:Name="SetzeroBtn"
							Grid.Row="4"
							Grid.Column="1"
							Grid.ColumnSpan="3"
							Content="{x:Static localprop:Resources.CropPageWinZeroMarginBtn}"
							Margin="0 0 0 0"
							Foreground="{DynamicResource TextBrushWhiteAndBlack}"
							VerticalAlignment="Center"
							Height="32"
							Style="{StaticResource DefaultButtonStyle}"
							HorizontalAlignment="Left"
							MinWidth="162"
							Click="Button_Click" />
						<Button
							x:Name="ReSetBtn"
							Grid.Row="4"
							Grid.Column="3"
							Grid.ColumnSpan="3"
							Margin="45 0 0 0"
							Foreground="{DynamicResource TextBrushWhiteAndBlack}"
							Style="{StaticResource DefaultButtonStyle}"
							Content="{x:Static localprop:Resources.CropPageWinResetBtn}"
							VerticalAlignment="Center"
							Height="32"
							HorizontalAlignment="Left"
							MinWidth="162"
							Click="ReSetBtn_Click" />
						<Grid
							Row="5"
							Column="1"
							ColumnSpan="9">
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="auto" />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<TextBlock
								Text="{x:Static localprop:Resources.CropPageWinSizeofCropBox}"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
							<TextBlock
								x:Name="BoxSize"
								Grid.Column="1"
								Margin="10 0 0 0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center" />
						</Grid>
						<Rectangle
							Visibility="Collapsed"
							Height="1"
							Width="410"
							Grid.Row="5"
							Grid.Column="0"
							StrokeThickness="1"
							Stroke="#D2D2D2"
							Grid.ColumnSpan="6"
							HorizontalAlignment="Center"
							VerticalAlignment="Top"
							Margin="10 10 0 0" />
					</Grid>
				</Grid>
			</GroupBox>
			<Grid
				Row="1"
				Visibility="Collapsed">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="2*" />
					<ColumnDefinition
						Width="7*" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition
						Height="20" />
					<RowDefinition
						Height="20" />
					<RowDefinition />
				</Grid.RowDefinitions>
				<RadioButton
					x:Name="ResizeControl"
					Content="Resize page size"
					Grid.ColumnSpan="2"
					Margin="20,0,0,0"
					FontWeight="Bold"
					GroupName="Cropsize"
					Checked="ResizeControl_Checked"
					Unchecked="ResizeControl_Unchecked" />
				<TextBlock
					Text="Resize pages to a larger size"
					Margin="20,0,0,0"
					Grid.Row="1"
					Grid.ColumnSpan="2" />
				<Grid
					x:Name="PagesizeArea"
					Row="2"
					ColumnSpan="2"
					IsEnabled="{Binding ElementName=ResizeControl, Path=IsChecked}">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="50" />
						<RowDefinition
							Height="30" />
						<RowDefinition
							Height="35" />
						<RowDefinition />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							MinWidth="70" />
						<ColumnDefinition
							MinWidth="30" />
						<ColumnDefinition
							Width="80" />
						<ColumnDefinition
							MinWidth="80" />
						<ColumnDefinition
							MinWidth="90" />
					</Grid.ColumnDefinitions>
					<RadioButton
						x:Name="fixedSize"
						IsChecked="True"
						Grid.Row="0"
						Grid.ColumnSpan="2"
						Grid.Column="0"
						Margin="20,0,0,18"
						HorizontalAlignment="Left"
						VerticalAlignment="Bottom"
						GroupName="pageSize">
						<TextBlock
							Text="Fixed size" />
					</RadioButton>
					<ComboBox
						x:Name="cropboxPaperSize"
						Grid.Row="0"
						Grid.Column="1"
						Grid.ColumnSpan="4"
						Margin="20 0 0 0"
						SelectedIndex="0"
						Height="20"
						VerticalAlignment="Center"
						Width="315"
						IsEnabled="{Binding ElementName=fixedSize, Path=IsChecked}"
						SelectionChanged="cropboxPaperSize_SelectionChanged">
						<ComboBoxItem
							IsSelected="True">WithOut</ComboBoxItem>
						<ComboBoxItem>A3</ComboBoxItem>
						<ComboBoxItem>A2</ComboBoxItem>
						<ComboBoxItem>A1</ComboBoxItem>
						<ComboBoxItem>A0</ComboBoxItem>
					</ComboBox>
					<Grid
						Row="1"
						Column="0"
						ColumnSpan="8">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="20" />
							<ColumnDefinition
								MinWidth="100"
								Width="auto" />
							<ColumnDefinition
								MinWidth="50" />
							<ColumnDefinition />
							<ColumnDefinition
								MinWidth="50" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<RadioButton
							x:Name="CustomSize"
							Grid.Column="1"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							GroupName="pageSize">
							<TextBlock
								Text="Customize" />
						</RadioButton>
						<TextBlock
							Text="Width(W)"
							Grid.Column="2"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
						<commonLibCtrl:NumberBox
							x:Name="widthNumBox"
							Width="60"
							Height="22"
							Grid.Column="3"
							Margin="8,0,0,0"
							IsArrowEnabled="True"
							NumberFormat="{}{0:0.00}"
							SmallChange="0.01"
							Maximum="999"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}"
							Value="{Binding Path=PageSize2.WidthCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}"
							ValueChanged="widthNumBox_ValueChanged" />
						<TextBlock
							Text="Height(H)"
							Grid.Column="4"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
						<commonLibCtrl:NumberBox
							x:Name="heightNumbox"
							Width="60"
							Height="22"
							Grid.Row="7"
							Grid.Column="5"
							Margin="12,0,0,0"
							IsArrowEnabled="True"
							NumberFormat="{}{0:0.00}"
							SmallChange="0.01"
							Maximum="999"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}"
							Value="{Binding Path=PageSize2.HeightCm, Mode=TwoWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:CropPageWindow}}}"
							ValueChanged="widthNumBox_ValueChanged" />
					</Grid>
					<Grid
						Row="2"
						Column="0"
						ColumnSpan="8"
						IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="20" />
							<ColumnDefinition
								MinWidth="100"
								Width="auto" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<CheckBox
							x:Name="Iscenter"
							Grid.Column="1"
							IsChecked="True"
							Style="{StaticResource DefaultCheckBoxStyle}"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}"
							Checked="Iscenter_Checked"
							Unchecked="Iscenter_Unchecked">
							<TextBlock
								Text="Center" />
						</CheckBox>
						<Grid
							x:Name="XYoffset"
							Column="2"
							ColumnSpan="5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition />
								<ColumnDefinition />
								<ColumnDefinition />
								<ColumnDefinition />
							</Grid.ColumnDefinitions>
							<TextBlock
								Text="X offset"
								Grid.Column="0"
								Style="{StaticResource textIsenabled}"
								HorizontalAlignment="Right"
								VerticalAlignment="Center" />
							<commonLibCtrl:NumberBox
								x:Name="xNumBox"
								IsEnabled="False"
								Width="60"
								Height="22"
								Grid.Column="1"
								Margin="8,0,0,0"
								IsArrowEnabled="True"
								NumberFormat="{}{0:0.00}"
								SmallChange="0.01"
								Minimum="-0.01"
								Maximum="999"
