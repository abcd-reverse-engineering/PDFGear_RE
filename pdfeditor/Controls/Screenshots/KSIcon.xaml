<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:pdfeditor.Controls.Screenshots">
	<Style
		x:Key="{x:Type local:KSIcon}"
		TargetType="{x:Type local:KSIcon}">
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:KSIcon}">
					<Border
						Name="borderOut"
						Width="{TemplateBinding FrameworkElement.Width}"
						Height="{TemplateBinding FrameworkElement.Height}"
						CornerRadius="{TemplateBinding local:KSIcon.CornerRadius}"
						Background="{TemplateBinding Control.Background}"
						BorderBrush="{TemplateBinding Control.BorderBrush}"
						BorderThickness="{TemplateBinding Control.BorderThickness}"
						Padding="{TemplateBinding Control.Padding}">
						<Border
							BorderThickness="0"
							BorderBrush="#FFFF0000">
							<Border.Background>
								<DrawingBrush
									Stretch="Uniform">
									<DrawingBrush.Drawing>
										<GeometryDrawing
											Brush="{Binding RelativeSource='{x:Static RelativeSource.TemplatedParent}', Path=IconBrush, IsAsync=True}"
											Geometry="{Binding RelativeSource='{x:Static RelativeSource.TemplatedParent}', Path=IconGeometry, IsAsync=True}"
											Pen="{Binding RelativeSource='{x:Static RelativeSource.TemplatedParent}', Path=IconPen, IsAsync=True}" />
									</DrawingBrush.Drawing>
								</DrawingBrush>
							</Border.Background>
						</Border>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
