<Window
	x:Class="pdfeditor.Controls.Screenshots.ExtractTextResultDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Screenshots" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters"
	ResizeMode="NoResize"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Title="{x:Static localprop:Resources.WinExtractTextTitle}"
	Height="450"
	Width="800">
	<Grid
		x:Name="LayoutRoot"
		Margin="12,12,12,0">
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<cv:BooleanToVisibilityConverter
					x:Key="BooleanToVisibilityConverter" />
				<Storyboard
					x:Key="ShowToastAnimation">
					<DoubleAnimationUsingKeyFrames
						Storyboard.TargetName="Toast"
						Storyboard.TargetProperty="Opacity"
						Duration="0:0:3.2">
						<DiscreteDoubleKeyFrame
							KeyTime="0"
							Value="0" />
						<LinearDoubleKeyFrame
							KeyTime="0:0:0.1"
							Value="1" />
						<DiscreteDoubleKeyFrame
							KeyTime="0:0:3.1"
							Value="1" />
						<LinearDoubleKeyFrame
							KeyTime="0:0:3.2"
							Value="0" />
					</DoubleAnimationUsingKeyFrames>
				</Storyboard>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				x:Name="ImageColumn"
				Width="Auto" />
			<ColumnDefinition
				Width="12" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="56" />
		</Grid.RowDefinitions>
		<TextBlock
			Text="{x:Static localprop:Resources.WinExtractTextLabelScreenshotContent}"
			Foreground="#757575"
			FontSize="12"
			Margin="0,0,0,8" />
		<Border
			Grid.Row="1"
			BorderBrush="#FF000000"
			BorderThickness="1"
			HorizontalAlignment="Left"
			VerticalAlignment="Stretch">
			<Grid
				VerticalAlignment="Stretch">
				<Image
					x:Name="PagePreviewImage"
					Width="250" />
				<Canvas
					x:Name="GeoCanvas" />
			</Grid>
		</Border>
		<TextBlock
			Grid.Column="2"
			Text="{x:Static localprop:Resources.WinExtractTextLabelExtractedContent}"
			Foreground="#757575"
			FontSize="12"
			Margin="0,0,0,8" />
		<RichTextBox
			x:Name="rtb"
			Grid.Column="2"
			Grid.Row="1"
			Grid.RowSpan="1"
			ScrollViewer.VerticalScrollBarVisibility="Auto"
			Background="{DynamicResource DialogButtonStaticBackground}"
			Foreground="{DynamicResource TextBrushWhiteAndBlack}"
			IsReadOnly="True"
			IsReadOnlyCaretVisible="False"
			Padding="0,4"
			FontSize="12" />
		<Grid
			Column="0"
			Row="2"
			Margin="0,8,0,0"
			Cursor="Hand"
			Height="34">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="Auto" />
				<ColumnDefinition
					Width="Auto" />
			</Grid.ColumnDefinitions>
			<CheckBox
				x:Name="OcrCheckBox"
				Padding="0"
				Style="{StaticResource DefaultCheckBoxStyle}"
				VerticalAlignment="Center"
				Click="OcrCheckBox_Click">
				<StackPanel
					Orientation="Vertical"
					IsEnabled="{Binding ElementName=OcrCheckBox, Path=IsChecked}">
					<TextBlock
						Text="{x:Static localprop:Resources.WinOCRCHBContent}"
						Foreground="{DynamicResource TextBrushWhiteAndBlack}"
						Margin="2,0,0,0" />
				</StackPanel>
			</CheckBox>
			<Border
				Grid.Column="1"
				Margin="12,0,0,0"
				VerticalAlignment="Center">
				<commonCtrl:HyperlinkButton
					x:Name="LanguageButton"
					Grid.Row="1"
					Content="English"
					Foreground="#EB4D44"
					Visibility="{Binding ElementName=OcrCheckBox, Path=IsChecked, Converter='{StaticResource BooleanToVisibilityConverter}'}"
					Click="LanguageButton_Click" />
			</Border>
		</Grid>
		<Rectangle
			Grid.ColumnSpan="3"
			Grid.Row="3"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Bottom"
			Height="1"
			Fill="{DynamicResource MainViewFontSizeBorder}"
			Margin="0,4,0,0" />
		<Grid
			ColumnSpan="3"
			Row="4"
			HorizontalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="152" />
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="Auto"
					MinWidth="192" />
				<ColumnDefinition
					Width="12" />
				<ColumnDefinition
					Width="152" />
			</Grid.ColumnDefinitions>
			<Button
				x:Name="CloseBtn"
				FontSize="12"
				Content="{x:Static localprop:Resources.WinBtnCloseContent}"
				IsCancel="True"
				Style="{StaticResource DialogButtonStyle}"
				Click="CloseBtn_Click" />
			<Button
				x:Name="CopyBtn"
				FontSize="12"
				Grid.Column="2"
				Content="{x:Static localprop:Resources.WinExtractTextBtnCopyContent}"
				Style="{StaticResource DialogButtonStyle}"
				Click="CopyBtn_Click" />
			<Button
				x:Name="DownloadBtn"
				FontSize="12"
				Grid.Column="4"
				Content="{x:Static localprop:Resources.WinBtnSaveContent}"
				IsDefault="True"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Click="DownloadBtn_Click" />
		</Grid>
		<Grid
			x:Name="Toast"
			ColumnSpan="3"
			RowSpan="5"
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center"
			Margin="0,0,0,48"
			Opacity="0">
			<UIElement.RenderTransform>
				<TranslateTransform
					x:Name="ToastTrans" />
			</UIElement.RenderTransform>
			<Border
				BorderBrush="#99000000"
				BorderThickness="1"
				CornerRadius="4"
				Background="{DynamicResource DialogButtonStaticBackground}"
				Padding="20,8">
				<TextBlock
					x:Name="ToastContent"
					Text="{x:Static localprop:Resources.WinExtractTextLabelCopiedContent}" />
			</Border>
		</Grid>
		<Border
			x:Name="ProcessingDismissBorder"
			Grid.ColumnSpan="3"
			Grid.RowSpan="3"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="#CCFFFFFF"
			Panel.ZIndex="2"
			Visibility="Collapsed">
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Orientation="Vertical">
				<commonCtrl:ProgressRing
					x:Name="ProcessingRing"
					Width="32"
					Height="32"
					IsActive="False" />
				<TextBlock
					Text="{x:Static localprop:Resources.WinOCRProgressContent}"
					Margin="0,8,0,0" />
			</StackPanel>
		</Border>
	</Grid>
</Window>
