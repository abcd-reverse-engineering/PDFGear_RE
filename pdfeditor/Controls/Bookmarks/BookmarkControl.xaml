<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:pdfeditor.Controls.Bookmarks">
	<Style
		x:Key="{x:Type local:BookmarkControl}"
		TargetType="{x:Type local:BookmarkControl}">
		<Setter
			Property="HorizontalAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalAlignment"
			Value="Stretch" />
		<Setter
			Property="ScrollViewer.HorizontalScrollBarVisibility"
			Value="Auto" />
		<Setter
			Property="ScrollViewer.VerticalScrollBarVisibility"
			Value="Auto" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:BookmarkControl}">
					<Grid
						x:Name="RootLayout">
						<FrameworkElement.Resources>
							<ResourceDictionary>
								<HierarchicalDataTemplate
									x:Key="BookmarkTreeViewItemTemplate"
									ItemsSource="{Binding Children}">
									<TextBlock
										x:Name="DisplayText"
										HorizontalAlignment="Left"
										TextWrapping="Wrap"
										LineHeight="12"
										Text="{Binding Title, FallbackValue=}" />
								</HierarchicalDataTemplate>
								<Style
									x:Key="BookmarkTreeViewItemStyle"
									TargetType="{x:Type TreeViewItem}">
									<Setter
										Property="TreeViewItem.IsSelected"
										Value="{Binding IsSelected, Mode=TwoWay}" />
									<Setter
										Property="TreeViewItem.IsExpanded"
										Value="{Binding IsExpanded, Mode=TwoWay}" />
									<Setter
										Property="HorizontalContentAlignment"
										Value="Left" />
								</Style>
							</ResourceDictionary>
						</FrameworkElement.Resources>
						<local:BookmarkTreeView
							x:Name="PART_BookmarkTreeView"
							Background="{DynamicResource SolidBrushWhiteAndBlack}"
							VirtualizingPanel.IsVirtualizing="True"
							ScrollViewer.HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
							ScrollViewer.VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
							CanDragItems="True"
							ItemTemplate="{StaticResource BookmarkTreeViewItemTemplate}"
							ItemContainerStyle="{StaticResource BookmarkTreeViewItemStyle}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
