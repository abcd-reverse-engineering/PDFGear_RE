<Window
	x:Class="pdfeditor.Controls.Protection.EncryptWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Views" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib"
	x:Name="window"
	ResizeMode="NoResize"
	Title="{x:Static localprop:Resources.WinPwdSetPwdTitle}"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Height="225"
	Width="425" xmlns:protection="clr-namespace:pdfeditor.Controls.Protection">
	<Grid
		FocusManager.FocusedElement="{Binding ElementName=tbOpenpwd}">
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<Style
					x:Key="CheckBoxStyle"
					TargetType="{x:Type CheckBox}">
					<Setter
						Property="Height"
						Value="16" />
					<Setter
						Property="Background"
						Value="#FFFFFF" />
					<Setter
						Property="Focusable"
						Value="False" />
					<Setter
						Property="FrameworkElement.FocusVisualStyle"
						Value="{x:Null}" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type CheckBox}">
								<Grid>
									<Border
										x:Name="bd"
										BorderBrush="#D2D2D2"
										Width="16"
										HorizontalAlignment="Left"
										CornerRadius="1"
										BorderThickness="1"
										Background="#00FFFFFF" />
									<ContentPresenter
										Margin="20,0,0,0"
										VerticalAlignment="Center"
										HorizontalAlignment="Left"
										RecognizesAccessKey="True" />
									<Path
										x:Name="p"
										Data="M0,3 L3,6 L9,0"
										VerticalAlignment="Center"
										HorizontalAlignment="Left"
										Stroke="#4F5A69"
										StrokeThickness="1.5"
										Margin="4 1 0 0" />
								</Grid>
								<ControlTemplate.Triggers>
									<Trigger
										Property="ToggleButton.IsChecked"
										Value="True">
										<Setter
											TargetName="p"
											Property="Visibility"
											Value="Visible" />
									</Trigger>
									<Trigger
										Property="ToggleButton.IsChecked"
										Value="False">
										<Setter
											TargetName="p"
											Property="Visibility"
											Value="Hidden" />
									</Trigger>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											TargetName="bd"
											Property="Border.BorderBrush"
											Value="#704F5A69" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="96" />
			<RowDefinition
				x:Name="cboxGridRow"
				Height="32" />
			<RowDefinition
				Height="*"
				MinHeight="35" />
		</Grid.RowDefinitions>
		<Grid
			Margin="20 20 20 0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="auto" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<StackPanel
				Margin="0 5 0 0"
				Orientation="Horizontal"
				VerticalAlignment="Top"
				HorizontalAlignment="Left">
				<TextBlock
					x:Name="tbDocmentOpenText"
					FontSize="12"
					TextWrapping="Wrap"
					Text="{x:Static localprop:Resources.WinPwdLabelPasswordContent}"
					MaxWidth="120" />
				<Image
					Height="12"
					Width="12"
					Margin="5 0 0 0"
					Source="/Style/Resources/Protect/passwordNote.png">
					<FrameworkElement.ToolTip>
						<TextBlock
							MaxWidth="276"
							TextWrapping="Wrap"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch"
							Text="{x:Static localprop:Resources.WinPwdPasswordTooltipContent}" />
					</FrameworkElement.ToolTip>
				</Image>
			</StackPanel>
			<TextBlock
				x:Name="tbDocmentConfirmText"
				Grid.Row="1"
				Margin="0 0 0 5"
				FontSize="12"
				VerticalAlignment="Center"
				HorizontalAlignment="Left"
				TextWrapping="Wrap"
				Text="{x:Static localprop:Resources.WinPwdLabelConfrimContent}"
				MaxWidth="120" />
			<Grid
				Column="1">
				<PasswordBox
					x:Name="tbOpenpwd"
					Margin="10 0 0 0"
					Padding="2"
					Height="25"
					Style="{StaticResource DefaultPasswordBoxStyle}"
					Background="{DynamicResource SolidBrushWhiteAndBlack}"
					Foreground="{DynamicResource TextBrushWhiteAndBlack}"
					CaretBrush="{DynamicResource TextBrushWhiteAndBlack}"
					BorderBrush="{DynamicResource MainViewFontSizeBorder}"
					commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
					commonCtrl:TextBoxExtensions.PlaceholderFontSize="14"
					FontSize="14"
					VerticalContentAlignment="Center"
					VerticalAlignment="Top"
					PasswordChanged="PasswordBox_PasswordChanged" />
				<TextBox
					x:Name="PasswordTextBox"
					FontSize="14"
					Height="25"
					Margin="10 0 0 0"
					VerticalAlignment="Top"
					Style="{StaticResource DefaultTextBoxStyle}"
					commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
					Visibility="Collapsed"
					Padding="2"
					TextChanged="PasswordTextBox_TextChanged" />
				<Button
					x:Name="ShowPwdBth"
					Style="{StaticResource DialogButtonStyle}"
					Margin="2"
					Height="20"
					Width="24"
					Padding="4,0"
					MinWidth="0"
					HorizontalAlignment="Right"
					VerticalAlignment="Top"
					PreviewMouseDown="ShowPwdBth_MouseDown"
					PreviewMouseUp="ShowPwdBth_MouseUp">
					<TextBlock
						FontFamily="Segoe MDL2 Assets"
						Text="ïž" />
				</Button>
			</Grid>
			<PasswordBox
				x:Name="tbOpenpwdConfirm"
				Grid.Row="1"
				Grid.Column="1"
				Margin="10 0 0 5"
				Padding="2"
				Height="25"
				FontSize="14"
				Style="{StaticResource DefaultPasswordBoxStyle}"
				Background="{DynamicResource SolidBrushWhiteAndBlack}"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				CaretBrush="{DynamicResource TextBrushWhiteAndBlack}"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				VerticalContentAlignment="Center"
				VerticalAlignment="Center"
				HorizontalAlignment="Stretch" />
		</Grid>
		<CheckBox
			x:Name="ckboxRetainpwd"
			Grid.Row="1"
			Grid.ColumnSpan="5"
			IsChecked="True"
			VerticalAlignment="Center"
			Foreground="{DynamicResource TextBrushWhiteAndBlack}"
			HorizontalAlignment="Left"
			Style="{StaticResource DefaultCheckBoxStyle}"
			Margin="20 0 0 0"
			Content="{x:Static localprop:Resources.WinPwdPasswordKeepPermissionsPwdContent}"
			Checked="ckboxRetainpwd_Checked" />
		<TextBlock
			Name="tbpasswordNotMatch"
			Grid.Row="3"
			Foreground="#FFFF0000"
			FontSize="12"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Visibility="Hidden"
			TextWrapping="Wrap"
			MaxWidth="200"
			Margin="20 15 0 0" />
		<StackPanel
			VerticalAlignment="Stretch"
			HorizontalAlignment="Right"
			Grid.Row="3"
			Grid.ColumnSpan="5"
			Margin="0 0 20 20"
			MinHeight="35"
			Orientation="Horizontal">
			<Button
				x:Name="btnCancel"
				Height="33"
				MinWidth="80"
				Style="{StaticResource DialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				Margin="0 0 10 0"
				Click="Cacel_Click" />
			<Button
				x:Name="btnOK"
				Height="33"
				MinWidth="80"
				IsDefault="True"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnOkContent}"
				Click="Encrypt_Click" />
		</StackPanel>
	</Grid>
</Window>
