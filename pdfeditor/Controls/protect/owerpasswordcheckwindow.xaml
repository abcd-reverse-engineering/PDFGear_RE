<Window
	x:Class="pdfeditor.Controls.Protection.OwerPasswordCheckWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Views" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	Title="{StaticResource ApplicationTitle}"
	Height="188"
	Width="415" xmlns:protection="clr-namespace:pdfeditor.Controls.Protection">
	<Grid
		FocusManager.FocusedElement="{Binding ElementName=passwordBox}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="145*" />
			<ColumnDefinition
				Width="52*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="60" />
			<RowDefinition
				Height="28" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<ScrollViewer
			Margin="20,15,20,0"
			VerticalScrollBarVisibility="Hidden"
			Grid.ColumnSpan="2">
			<TextBlock
				TextWrapping="Wrap"
				VerticalAlignment="Top"
				Text="{x:Static localprop:Resources.WinPwdEnterTipContent}" />
		</ScrollViewer>
		<PasswordBox
			x:Name="passwordBox"
			Grid.Row="1"
			Height="22"
			Margin="20,0,19.6,4"
			InputMethod.IsInputMethodEnabled="False"
			Grid.ColumnSpan="2"
			Style="{StaticResource DefaultPasswordBoxStyle}" />
		<TextBlock
			Name="tbError"
			Foreground="#FFFF0000"
			Text="{x:Static localprop:Resources.WinPwdInvalidTryAgainContent}"
			FontSize="10"
			Visibility="Hidden"
			VerticalAlignment="Center"
			Grid.Row="2"
			Margin="20,0,19.6,0"
			Grid.ColumnSpan="2" />
		<StackPanel
			VerticalAlignment="Bottom"
			HorizontalAlignment="Right"
			Grid.Row="3"
			MinHeight="35"
			Margin="0,0,19.6,19.8"
			Orientation="Horizontal"
			Grid.ColumnSpan="2">
			<Button
				x:Name="btnCancel"
				Height="33"
				Width="80"
				Style="{StaticResource DialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				Click="Cancel_Click" />
			<Button
				x:Name="btnOK"
				Height="33"
				Width="80"
				IsDefault="True"
				Margin="10 0 0 0"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnOkContent}"
				Click="OK_Click" />
		</StackPanel>
	</Grid>
</Window>
