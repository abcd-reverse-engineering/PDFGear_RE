<UserControl
	x:Class="pdfeditor.Controls.PageHeaderFooters.MarginControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.PageHeaderFooters">
	<Grid
		ClipToBounds="True">
		<TextBlock
			x:Name="LeftTextBlock"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}"
			Text="{Binding Path=LeftString, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}" />
		<TextBlock
			x:Name="CenterTextBlock"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}"
			Text="{Binding Path=CenterString, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}" />
		<TextBlock
			x:Name="RightTextBlock"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}"
			Text="{Binding Path=RightString, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:MarginControl}}}" />
		<Line
			x:Name="Line1"
			StrokeDashArray="4 4"
			Stroke="#EF5B52"
			StrokeThickness="2" />
		<Line
			x:Name="Line2"
			StrokeDashArray="4 4"
			Stroke="#EF5B52"
			StrokeThickness="2" />
		<Line
			x:Name="Line3"
			StrokeDashArray="4 4"
			Stroke="#EF5B52"
			StrokeThickness="2" />
	</Grid>
</UserControl>
