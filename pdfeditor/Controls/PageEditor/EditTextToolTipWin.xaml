<Window
	x:Class="pdfeditor.Controls.PageEditor.EditTextToolTipWin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:local="clr-namespace:pdfeditor.Controls.PageEditor"
	Title="{StaticResource ApplicationTitle}"
	SizeToContent="WidthAndHeight"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterOwner">
	<Grid
		MinHeight="207"
		Height="Auto"
		Width="417">
		<Grid.RowDefinitions>
			<RowDefinition
				MinHeight="157"
				Height="Auto" />
			<RowDefinition
				MinHeight="48"
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid
			Row="0"
			Background="#F5F5F5"
			Margin="20,0">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="40" />
				<RowDefinition
					Height="auto" />
				<RowDefinition
					Height="12" />
				<RowDefinition
					Height="auto" />
				<RowDefinition
					Height="12" />
				<RowDefinition
					Height="auto" />
				<RowDefinition
					Height="12" />
				<RowDefinition
					Height="auto" />
				<RowDefinition
					Height="14" />
			</Grid.RowDefinitions>
			<Image
				Source="/Style/Resources/PageEditor/Recommend.png"
				HorizontalAlignment="Left"
				Grid.Column="1"
				Width="26"
				Height="23"
				Margin="-8,5,0,0"
				Stretch="Fill" />
			<TextBlock
				Grid.Row="1"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Margin="34,0,34,0"
				TextWrapping="Wrap"
				FontSize="12">
				<Run
					Text="{x:Static localprop:Resources.WinEditorTipRecommendLeft}" /> <Run
					FontWeight="Bold"
					Text="{x:Static localprop:Resources.WinEditorTipRecommendMiddle}" /> <Run
					Text="{x:Static localprop:Resources.WinEditorTipRecommendRight}" /></TextBlock>
			<TextBlock
				Grid.Row="3"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Margin="40,0,34,0"
				TextWrapping="Wrap"
				FontSize="12">
				<Run
					Text="{x:Static localprop:Resources.WinEditorTipConvertIntroduce1}" />
			</TextBlock>
			<TextBlock
				Grid.Row="5"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				Margin="40,0,34,0"
				TextWrapping="Wrap"
				FontSize="12">
				<Run
					Text="{x:Static localprop:Resources.WinEditorTipConvertIntroduce2}" />
			</TextBlock>
			<StackPanel
				Grid.Row="7"
				Orientation="Horizontal"
				HorizontalAlignment="Center">
				<Button
					x:Name="Btn_Converter"
					Margin="12 0 0 0"
					IsDefault="True"
					IsTabStop="True"
					VerticalAlignment="Center"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Center"
					HorizontalContentAlignment="Center"
					Content="{x:Static localprop:Resources.WinEditorTipBtnUseConverter}"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Click="Btn_Converter_Click" />
			</StackPanel>
		</Grid>
		<CheckBox
			x:Name="ckb_ShowMsg"
			Grid.Row="1"
			Content="{x:Static localprop:Resources.WinPwdPasswordSaveTipNotshowagainContent}"
			Margin="20,0,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			Checked="ckb_ShowMsg_Checked"
			Unchecked="ckb_ShowMsg_Unchecked" />
	</Grid>
</Window>
