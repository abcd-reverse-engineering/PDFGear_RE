<Window
	x:Class="pdfeditor.Controls.PageEditor.PageResizeWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonLibCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:converter="clr-namespace:pdfeditor.Utils.Converters" xmlns:local="clr-namespace:pdfeditor.Controls.PageEditor"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterScreen"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Title="{x:Static localprop:Resources.PageResizeWinTitle}"
	Height="600"
	Width="825">
	<FrameworkElement.Resources>
		<ResourceDictionary>
			<converter:BooleanReverseConverter
				x:Key="BooleanReverseConverter" />
			<converter:PageResizeImageWidthConverter
				x:Key="PageResizeImageWidthConverter" />
			<converter:UIModeToBorderThicknessConverter
				x:Key="UIModeToBorderThicknessConverter" />
			<converter:CenterBorderGapMaskConverter
				x:Key="CenterBorderGapMaskConverter" />
			<Style
				x:Key="{x:Type GroupBox}"
				TargetType="{x:Type GroupBox}">
				<Setter
					Property="BorderBrush"
					Value="#FFAEAEAE" />
				<Setter
					Property="BorderThickness"
					Value="1" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type GroupBox}">
							<Grid
								SnapsToDevicePixels="True">
								<Grid.ColumnDefinitions>
									<ColumnDefinition
										Width="0" />
									<ColumnDefinition
										Width="30" />
									<ColumnDefinition
										Width="Auto" />
									<ColumnDefinition
										Width="*" />
									<ColumnDefinition
										Width="4" />
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="Auto" />
									<RowDefinition
										Height="*" />
									<RowDefinition
										Height="4" />
								</Grid.RowDefinitions>
								<Border
									Grid.Row="1"
									Grid.Column="0"
									Grid.RowSpan="3"
									Grid.ColumnSpan="5"
									CornerRadius="4"
									BorderBrush="#00FFFFFF"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									Background="{TemplateBinding Control.Background}" />
								<Border
									x:Name="Header"
									Grid.Row="0"
									Grid.Column="2"
									Grid.RowSpan="2"
									Padding="3,1,3,0">
									<ContentPresenter
										ContentSource="Header"
										RecognizesAccessKey="True"
										SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
								</Border>
								<ContentPresenter
									Grid.Row="2"
									Grid.Column="1"
									Grid.ColumnSpan="3"
									Margin="{TemplateBinding Control.Padding}"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
								<Border
									Grid.Row="1"
									Grid.Column="0"
									Grid.RowSpan="3"
									Grid.ColumnSpan="5"
									CornerRadius="4"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									BorderBrush="{DynamicResource {DynamicResource MainViewFontSizeBorder}}">
									<UIElement.OpacityMask>
										<MultiBinding
											Converter="{StaticResource CenterBorderGapMaskConverter}">
											<Binding
												ElementName="Header"
												Path="ActualWidth" />
											<Binding
												Path="ActualWidth"
												RelativeSource="{RelativeSource Self}" />
											<Binding
												Path="ActualHeight"
												RelativeSource="{RelativeSource Self}" />
										</MultiBinding>
									</UIElement.OpacityMask>
									<Border
										BorderThickness="{TemplateBinding Control.BorderThickness}"
										BorderBrush="{TemplateBinding Control.BorderBrush}"
										CornerRadius="3">
										<Border
											BorderThickness="0"
											BorderBrush="#FFFFFFFF"
											CornerRadius="2" />
									</Border>
								</Border>
							</Grid>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style
				x:Key="textIsenabled"
				TargetType="{x:Type TextBlock}">
				<Style.Triggers>
					<Trigger
						Property="IsEnabled"
						Value="True">
						<Setter
							Property="Foreground"
							Value="{DynamicResource TextBrushWhiteAndBlack}" />
					</Trigger>
					<Trigger
						Property="IsEnabled"
						Value="False">
						<Setter
							Property="Foreground"
							Value="#FF808080" />
					</Trigger>
				</Style.Triggers>
			</Style>
			<Style
				x:Key="{x:Type RadioButton}"
				TargetType="{x:Type RadioButton}"
				BasedOn="{StaticResource DefaultRadioButtonStyle}" />
			<Style
				x:Key="{x:Type ComboBox}"
				TargetType="{x:Type ComboBox}"
				BasedOn="{StaticResource DefaultComboBoxStyle}" />
			<Style
				x:Key="{x:Type TextBox}"
				TargetType="{x:Type TextBox}"
				BasedOn="{StaticResource DefaultTextBoxStyle}" />
			<Style
				x:Key="BtnInfoStyle"
				TargetType="{x:Type ButtonBase}">
				<Setter
					Property="Height"
					Value="24" />
				<Setter
					Property="Width"
					Value="24" />
				<Setter
					Property="Background"
					Value="{DynamicResource SolidBrushWhiteAndBlack}" />
				<Setter
					Property="BorderThickness"
					Value="0" />
				<Setter
					Property="TextBlock.Foreground"
					Value="{DynamicResource MainViewBtnInfoStyleText}" />
				<Setter
					Property="TextBlock.FontSize"
					Value="12" />
				<Setter
					Property="TextBlock.TextAlignment"
					Value="Center" />
				<Setter
					Property="TextBlock.FontSize"
					Value="12" />
				<Setter
					Property="TextBlock.FontStyle"
					Value="Normal" />
				<Setter
					Property="HorizontalContentAlignment"
					Value="Stretch" />
				<Setter
					Property="Template">
					<Setter.Value>
						<ControlTemplate
							TargetType="{x:Type ButtonBase}">
							<Border
								x:Name="bborder"
								BorderBrush="{TemplateBinding Control.BorderBrush}"
								BorderThickness="{TemplateBinding Control.BorderThickness}"
								Background="{TemplateBinding Control.Background}"
								SnapsToDevicePixels="True">
								<ContentPresenter
									x:Name="contentPresenter"
									Focusable="False"
									HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
									Margin="{TemplateBinding Control.Padding}"
									RecognizesAccessKey="True"
									SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
									VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
									<Setter
										TargetName="bborder"
										Property="Border.CornerRadius"
										Value="3" />
									<Setter
										TargetName="bborder"
										Value="{DynamicResource SignaturePickerDelBtnBorder}"
										Property="Border.BorderBrush" />
									<Setter
										TargetName="bborder"
										Value="{DynamicResource ColorPicker.Static.TitleBackground}"
										Property="Border.Background" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="False">
									<Setter
										TargetName="bborder"
										Property="Border.BorderBrush"
										Value="#9F9F9F" />
									<Setter
										Property="TextBlock.Foreground"
										Value="#9F9F9F" />
									<Setter
										Property="UIElement.Opacity"
										Value="0.5" />
								</Trigger>
								<Trigger
									Property="IsEnabled"
									Value="True">
									<Setter
										TargetName="bborder"
										Property="Border.BorderBrush"
										Value="#3F3F3F" />
									<Setter
										Property="TextBlock.Foreground"
										Value="#3F3F3F" />
									<Setter
										Property="UIElement.Opacity"
										Value="1" />
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</FrameworkElement.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="1.5*" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="60" />
		</Grid.RowDefinitions>
		<Grid
			Row="1"
			Margin="20 0 20 0">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="20" />
				<RowDefinition
					Height="0" />
				<RowDefinition
					Height="180" />
				<RowDefinition
					Height="263" />
			</Grid.RowDefinitions>
			<ScrollViewer />
			<Grid
				Row="0"
				VerticalAlignment="Top"
				Margin="0 0 0 0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="auto" />
					<ColumnDefinition
						Width="auto" />
					<ColumnDefinition
						Width="auto" />
				</Grid.ColumnDefinitions>
				<TextBlock
					Text="{x:Static localprop:Resources.PageResizeWinOriginalContent}"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					FontSize="12"
					Margin="0 0 0 0" />
				<TextBlock
					Grid.Column="1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="8 0 5 0">
					<Run
						Text="{x:Static localprop:Resources.PageResizeWinWidthContent}" /> <Run
						x:Name="Originalwidth"
						Text="123mm" /></TextBlock>
				<TextBlock
					Grid.Column="2"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0 0 10 0">
					<Run
						Text="{x:Static localprop:Resources.PageResizeWinHeightContent}" /> <Run
						x:Name="Originalheight"
						Text="123mm" /></TextBlock>
			</Grid>
			<GroupBox
				Grid.Row="2"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				BorderThickness="1"
				Margin="0 0 0 0">
				<HeaderedContentControl.Header>
					<Label
						Content="{x:Static localprop:Resources.PageResizeWinResizeGroupName}"
						Foreground="{DynamicResource TextBrushWhiteAndBlack}" />
				</HeaderedContentControl.Header>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="50" />
						<RowDefinition
							Height="40" />
						<RowDefinition
							Height="40" />
						<RowDefinition
							Height="20" />
					</Grid.RowDefinitions>
					<Grid
						Row="1"
						Margin="20 0 0 0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="120" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<RadioButton
							x:Name="FixedRadioButton"
							GroupName="PageSize"
							IsChecked="True"
							Content="{x:Static localprop:Resources.PageResizeWinFixedSize}"
							VerticalAlignment="Center"
							HorizontalAlignment="Left"
							Checked="FixedRadioButton_Checked" />
						<ComboBox
							x:Name="cboxPaperSize"
							SelectedIndex="0"
							Grid.Column="1"
							HorizontalAlignment="Stretch"
							VerticalAlignment="Center"
							Margin="5 0 10 0"
							Style="{StaticResource DefaultComboBoxStyle}"
							IsEnabled="{Binding ElementName=FixedRadioButton, Path=IsChecked}"
							SelectionChanged="cboxPaperSize_SelectionChanged" />
					</Grid>
					<Grid
						Row="2"
						Margin="20 0 0 0">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="120" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<TextBlock
							Text="{x:Static localprop:Resources.PageResizeWinOrientation}"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							Margin="19 0 0 0"
							IsEnabled="{Binding ElementName=FixedRadioButton, Path=IsChecked}">
							<FrameworkElement.Style>
								<Style
									TargetType="{x:Type TextBlock}">
									<Style.Triggers>
										<Trigger
											Property="IsEnabled"
											Value="False">
											<Setter
												Property="Foreground"
												Value="{DynamicResource SignaturebodyBorder}" />
										</Trigger>
									</Style.Triggers>
								</Style>
							</FrameworkElement.Style>
						</TextBlock>
						<ComboBox
							x:Name="PaperOrientation"
							Grid.Column="1"
							Margin="5 0 10 0"
							VerticalAlignment="Center"
							SelectedIndex="0"
							IsEnabled="{Binding ElementName=FixedRadioButton, Path=IsChecked}"
							SelectionChanged="PaperOrientation_SelectionChanged">
							<ComboBoxItem
								IsSelected="True"
								Content="{x:Static localprop:Resources.WinPageInsertSettingPagePortrait}" />
							<ComboBoxItem
								Content="{x:Static localprop:Resources.WinPageInsertSettingPageLandscape}" />
						</ComboBox>
					</Grid>
					<Grid
						Row="3">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="20" />
							<ColumnDefinition
								MinWidth="100"
								Width="auto" />
							<ColumnDefinition
								MaxWidth="30" />
							<ColumnDefinition />
							<ColumnDefinition
								MaxWidth="30" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<RadioButton
							x:Name="CustomSize"
							Grid.Column="1"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							GroupName="PageSize"
							Checked="CustomSize_Checked">
							<TextBlock
								Text="{x:Static localprop:Resources.PageResizeWinCustomize}" />
						</RadioButton>
						<TextBlock
							Text="{x:Static localprop:Resources.PageResizeWinWidthContent}"
							Grid.Column="2"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
						<commonLibCtrl:NumberBox
							x:Name="widthNumBox"
							Width="72"
							Height="22"
							Grid.Column="3"
							Margin="8,0,0,0"
							IsArrowEnabled="True"
							NumberFormat="{}{0:0}"
							SmallChange="1"
							Maximum="999"
							Minimum="1"
							Value="1"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}"
							ValueChanged="widthNumBox_ValueChanged" />
						<TextBlock
							x:Name="Widthtunits"
							Text="mm"
							Grid.Column="3"
							Margin="90 0 0 0"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
						<TextBlock
							Text="{x:Static localprop:Resources.PageResizeWinHeightContent}"
							Grid.Column="4"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Right"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
						<commonLibCtrl:NumberBox
							x:Name="heightNumbox"
							Width="72"
							Height="22"
							Grid.Row="7"
							Grid.Column="5"
							Margin="12,0,0,0"
							IsArrowEnabled="True"
							NumberFormat="{}{0:0}"
							SmallChange="1"
							Minimum="1"
							Maximum="999"
							Value="1"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}"
							ValueChanged="widthNumBox_ValueChanged" />
						<TextBlock
							x:Name="Heightunits"
							Text="mm"
							Grid.Column="5"
							Margin="90 0 0 0"
							Style="{StaticResource textIsenabled}"
							HorizontalAlignment="Left"
							VerticalAlignment="Center"
							IsEnabled="{Binding ElementName=CustomSize, Path=IsChecked}" />
					</Grid>
				</Grid>
			</GroupBox>
			<GroupBox
				Grid.Row="3"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				BorderThickness="1">
				<HeaderedContentControl.Header>
					<Label
						Content="{x:Static localprop:Resources.WinPageSplitBtnPagerangeContent}"
						Foreground="{DynamicResource TextBrushWhiteAndBlack}" />
				</HeaderedContentControl.Header>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="0" />
						<RowDefinition />
						<RowDefinition />
						<RowDefinition
							Height="1.2*" />
						<RowDefinition />
						<RowDefinition
							Height="54" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="120" />
						<ColumnDefinition
							Width="210" />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<RadioButton
						x:Name="AllPageBtn"
						Content="{x:Static localprop:Resources.SelectPageAllPagesItem}"
						Grid.Row="1"
						Grid.ColumnSpan="2"
						GroupName="PageRange"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="20 10 0 0"
						IsChecked="True" />
					<RadioButton
						x:Name="CurrentPageBtn"
						Grid.Row="2"
						Grid.ColumnSpan="2"
						GroupName="PageRange"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="20 5 0 0"
						IsChecked="True">
						<ContentControl.Content>
							<TextBlock>
								<Run
									Text="{x:Static localprop:Resources.WinWatermarkCurrentpageContent}" /> <Run
									x:Name="CurrentPage"
									Text="(Page 1)" /></TextBlock>
						</ContentControl.Content>
					</RadioButton>
					<Grid
						Row="3"
						RowSpan="2"
						ColumnSpan="2"
						Margin="0 10 0 0">
						<Grid.RowDefinitions>
							<RowDefinition
								Height="25" />
							<RowDefinition
								Height="20" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="130" />
							<ColumnDefinition
								Width="200" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<RadioButton
							x:Name="CustomBtn"
							Grid.Row="0"
							Grid.RowSpan="2"
							GroupName="PageRange"
							Margin="20 0 0 0"
							VerticalAlignment="Top">
							<TextBlock
								Text="{x:Static localprop:Resources.PageWinCustomPages}"
								TextWrapping="Wrap" />
						</RadioButton>
						<TextBox
							x:Name="CustomTextBox"
							Grid.Row="0"
							Grid.Column="1"
							Height="22"
							Margin="10 0 0 0"
							VerticalContentAlignment="Center"
							IsEnabled="{Binding ElementName=CustomBtn, Path=IsChecked}"
							LostFocus="CustomTextBox_LostFocus" />
						<TextBlock
							Text="/"
							Grid.Row="0"
							Grid.Column="2"
							VerticalAlignment="Center"
							Margin="5 0 0 0" />
						<TextBlock
							x:Name="PageNumber"
							Text="0"
							Grid.Row="0"
							Grid.Column="2"
							VerticalAlignment="Center"
							Margin="15 0 0 0" />
						<TextBlock
							x:Name="CustomTextBolck"
							Grid.Column="1"
							Grid.Row="1"
							Margin="10 0"
							VerticalAlignment="Center"
							Text="eg. 1,8,9-12" />
						<FrameworkElement.Style>
							<Style
								TargetType="{x:Type Grid}">
								<Style.Triggers>
									<Trigger
										Property="IsEnabled"
										Value="False">
										<Setter
											Property="TextBlock.Foreground"
											Value="{DynamicResource SignaturebodyBorder}" />
									</Trigger>
								</Style.Triggers>
							</Style>
						</FrameworkElement.Style>
					</Grid>
					<TextBlock
						Grid.Row="4"
						Margin="20 10 0 0"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						FontSize="12"
						Text="{x:Static localprop:Resources.PageWinSubset}"
						Height="16"
						MinWidth="69" />
					<ComboBox
						x:Name="SubsetComboBox"
						VerticalAlignment="Center"
						Grid.Column="1"
						Margin="20 10 0 0"
						Grid.Row="4"
						Height="24"
						SelectionChanged="SubsetComboBox_SelectionChanged">
						<ComboBoxItem
							x:Name="AllpagesSubset"
							Content="{x:Static localprop:Resources.SelectPageAllPagesItem}"
							Tag="AllPages"
							IsSelected="True" />
						<ComboBoxItem
							x:Name="EvenpagesSubset"
							Content="{x:Static localprop:Resources.SelectPageAllEvenPagesItem}"
							Tag="AllEvenPages" />
						<ComboBoxItem
							Content="{x:Static localprop:Resources.SelectPageAllOddPagesItem}"
							Tag="AllOddPages" />
					</ComboBox>
				</Grid>
			</GroupBox>
		</Grid>
		<Grid
			Column="1"
			Row="1">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="30" />
				<RowDefinition
					Height="25" />
				<RowDefinition
					MinHeight="330" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid
				Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition />
					<ColumnDefinition />
					<ColumnDefinition
						Width="100" />
				</Grid.ColumnDefinitions>
				<TextBlock
					Text="{x:Static localprop:Resources.CropPageWinMeasuresIn}"
					HorizontalAlignment="Right"
					Grid.Column="1"
					Margin="0 0 10 0"
					VerticalAlignment="Center" />
				<ComboBox
					x:Name="UnitComboBox"
					VerticalAlignment="Center"
					Grid.Column="2"
					Margin="0 0 20 0"
					Height="24"
					SelectionChanged="UnitComboBox_SelectionChanged">
					<ComboBoxItem
						x:Name="mm"
						Content="{x:Static localprop:Resources.CropPageWinMillimeterUnits}"
						Tag="MM"
						IsSelected="True" />
					<ComboBoxItem
						x:Name="cm"
						Content="{x:Static localprop:Resources.CropPageWinCentimeterUnits}"
						Tag="CM" />
					<ComboBoxItem
						x:Name="point"
						Content="{x:Static localprop:Resources.CropPageWinPointUnits}"
						Tag="Point" />
					<ComboBoxItem
						x:Name="pica"
						Content="{x:Static localprop:Resources.CropPageWinPicaUnits}"
						Tag="Pica" />
					<ComboBoxItem
						x:Name="inch"
						Content="{x:Static localprop:Resources.CropPageWinInchUnits}"
						Tag="Inch" />
				</ComboBox>
			</Grid>
			<Grid
				Row="0"
				Margin="0 0 0 0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="auto" />
					<ColumnDefinition
						Width="auto" />
					<ColumnDefinition
						Width="auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition />
					<RowDefinition />
				</Grid.RowDefinitions>
				<TextBlock
					Grid.Column="0"
					HorizontalAlignment="Left"
					VerticalAlignment="Top"
					Grid.RowSpan="2"
					TextWrapping="Wrap"
					MaxWidth="180"
					Margin="0 0"
					Text="{x:Static localprop:Resources.PageResizeWinResizedContent}" />
				<TextBlock
					Grid.Row="0"
					Grid.Column="1"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="8 0 5 0">
					<Run
						Text="{x:Static localprop:Resources.PageResizeWinWidthContent}" /> <Run
						x:Name="Resizewidth"
						Text="123mm" /></TextBlock>
				<TextBlock
					Grid.Row="0"
					Grid.Column="2"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					Margin="0 0 10 0">
					<Run
						Text="{x:Static localprop:Resources.PageResizeWinHeightContent}" /> <Run
						x:Name="Resizeheight"
						Text="123mm" /></TextBlock>
			</Grid>
			<GroupBox
				Grid.Row="2"
				Grid.RowSpan="2"
				BorderBrush="{DynamicResource MainViewFontSizeBorder}"
				BorderThickness="1"
				Margin="0 0 20 20"
				MouseWheel="Grid_MouseWheel">
				<HeaderedContentControl.Header>
					<Label
						Content="{x:Static localprop:Resources.WinPagePreviewLabelContent}"
