<Window
	x:Class="pdfeditor.Controls.PageEditor.PageSplitDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.PageEditor" xmlns:control="clr-namespace:pdfeditor.Controls" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors" xmlns:behaviors2="clr-namespace:pdfeditor.Utils.Behaviors"
	ResizeMode="NoResize"
	Title="{x:Static localprop:Resources.WinPageSplitTitle}"
	Height="250"
	Width="500">
	<Grid>
		<Grid
			x:Name="ContentLayout"
			Margin="12">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<StackPanel>
				<Grid
					Margin="0,0,0,12">
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="120" />
						<ColumnDefinition
							Width="Auto" />
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="Auto" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="8" />
						<RowDefinition
							Height="Auto" />
					</Grid.RowDefinitions>
					<TextBlock
						Text="{x:Static localprop:Resources.WinPageSplitLabelSplitModeContent}"
						FontSize="14" />
					<RadioButton
						x:Name="PageRangeRadioButton"
						Grid.Column="1"
						FontSize="14"
						VerticalAlignment="Center"
						GroupName="PageMergeDialog_SplitMode"
						VerticalContentAlignment="Center"
						Content="{x:Static localprop:Resources.WinPageSplitBtnPagerangeContent}"
						Padding="2,0,0,0"
						IsChecked="True" />
					<local:PageRangeTextBox
						x:Name="PageRangeTextBox"
						FontSize="14"
						Margin="8,0"
						Grid.Column="2"
						IsEnabled="{Binding ElementName=PageRangeRadioButton, Path=IsChecked}" />
					<TextBlock
						Grid.Column="3"
						Text="eg. 1,8,9-12"
						FontSize="14"
						Foreground="#33000000" />
					<RadioButton
						x:Name="MaxPageCountRadioButton"
						Grid.Column="1"
						Grid.Row="2"
						FontSize="14"
						VerticalAlignment="Center"
						GroupName="PageMergeDialog_SplitMode"
						VerticalContentAlignment="Center"
						Content="{x:Static localprop:Resources.WinPageSplitBtnMaxpageCountContent}"
						Padding="2,0,0,0" />
					<TextBox
						x:Name="MaxPageCountTextBox"
						Grid.Column="2"
						Grid.Row="2"
						FontSize="14"
						Width="40"
						HorizontalAlignment="Left"
						Margin="8,0"
						IsEnabled="{Binding ElementName=MaxPageCountRadioButton, Path=IsChecked}">
						<behaviors:Interaction.Behaviors>
							<behaviors2:TextBoxEditBehavior
								TextChanged="MaxPageCountTextBehavior_TextChanged"
								x:Name="MaxPageCountTextBehavior" />
						</behaviors:Interaction.Behaviors>
					</TextBox>
				</Grid>
				<TextBlock
					Text="{x:Static localprop:Resources.WinPageSplitLabelOutputlocationContent}"
					FontSize="14"
					Margin="0,0,0,8" />
				<control:SaveFolderTextBox
					x:Name="SavePath"
					FontSize="14" />
			</StackPanel>
			<StackPanel
				Grid.Row="1">
				<Rectangle
					HorizontalAlignment="Stretch"
					Height="1"
					Fill="#D2D2D2"
					Margin="-12,28,-12,16" />
				<StackPanel
					HorizontalAlignment="Right"
					Orientation="Horizontal">
					<Button
						Content="{x:Static localprop:Resources.WinBtnCancelContent}"
						IsCancel="True"
						Margin="0,0,12,0"
						Style="{StaticResource DialogButtonStyle}"
						Click="CancelButton_Click" />
					<Button
						Content="{x:Static localprop:Resources.WinBtnOkContent}"
						Style="{StaticResource PrimaryDialogButtonStyle}"
						Click="OKButton_Click" />
				</StackPanel>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
