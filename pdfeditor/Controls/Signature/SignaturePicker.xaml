<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:local="clr-namespace:pdfeditor.Controls.Signature" xmlns:cv="clr-namespace:pdfeditor.Utils.Converters" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style
		x:Key="btnstyle"
		TargetType="{x:Type ButtonBase}">
		<Style.Setters>
			<Setter
				Property="HorizontalAlignment"
				Value="Center" />
			<Setter
				Property="Background"
				Value="#00FFFFFF" />
			<Setter
				Property="BorderThickness"
				Value="0" />
			<Setter
				Property="TextBlock.Foreground"
				Value="#3F3F3F" />
			<Setter
				Property="TextBlock.TextAlignment"
				Value="Left" />
			<Setter
				Property="TextBlock.FontSize"
				Value="12" />
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="{x:Type ButtonBase}">
						<Border
							x:Name="bborder"
							BorderBrush="{TemplateBinding Control.BorderBrush}"
							BorderThickness="{TemplateBinding Control.BorderThickness}"
							Background="{TemplateBinding Control.Background}"
							SnapsToDevicePixels="True">
							<ContentPresenter
								x:Name="contentPresenter"
								Focusable="False"
								HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
								Margin="{TemplateBinding Control.Padding}"
								RecognizesAccessKey="True"
								SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
								VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger
								Property="UIElement.IsMouseOver"
								Value="True">
								<Setter
									TargetName="bborder"
									Property="Border.CornerRadius"
									Value="3" />
								<Setter
									TargetName="bborder"
									Value="{DynamicResource SignaturePickerDelBtnBorder}"
									Property="Border.BorderBrush" />
								<Setter
									TargetName="bborder"
									Value="{DynamicResource BtnInfoMouseOverColor}"
									Property="Border.Background" />
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									TargetName="bborder"
									Property="Border.BorderBrush"
									Value="#9F9F9F" />
								<Setter
									Property="TextBlock.Foreground"
									Value="#9F9F9F" />
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="True">
								<Setter
									TargetName="bborder"
									Property="Border.BorderBrush"
									Value="#3F3F3F" />
								<Setter
									Property="TextBlock.Foreground"
									Value="#3F3F3F" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>
	<cv:BooleanToVisibilityConverter
		x:Key="BooleanToVisibilityConverter" />
	<Style
		x:Key="{x:Type local:SignaturePicker}"
		TargetType="{x:Type local:SignaturePicker}">
		<Setter
			Property="Background"
			Value="#FFFFFFFF" />
		<Setter
			Property="BorderBrush"
			Value="{DynamicResource SignaturePickerBorderBrush}" />
		<Setter
			Property="BorderThickness"
			Value="1" />
		<Setter
			Property="Padding"
			Value="0" />
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="VerticalAlignment"
			Value="Top" />
		<Setter
			Property="Focusable"
			Value="False" />
		<Setter
			Property="Width"
			Value="220" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Border>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition
									Height="Auto" />
								<RowDefinition
									Height="1" />
								<RowDefinition
									Height="45" />
							</Grid.RowDefinitions>
							<ScrollViewer
								VerticalScrollBarVisibility="Auto"
								HorizontalScrollBarVisibility="Hidden"
								Height="Auto"
								MaxHeight="250">
								<ItemsControl
									x:Name="PickerItemContainer"
									Background="{DynamicResource SignaturePickerBackground}"
									ItemsSource="{Binding Path=ImageSignaturesTemplates, RelativeSource={RelativeSource TemplatedParent}}">
									<ItemsControl.ItemsPanel>
										<ItemsPanelTemplate>
											<StackPanel
												Orientation="Vertical" />
										</ItemsPanelTemplate>
									</ItemsControl.ItemsPanel>
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<Border>
												<StackPanel>
													<Grid
														x:Name="pickerItem"
														Width="220"
														Height="Auto"
														SnapsToDevicePixels="True">
														<Grid.ColumnDefinitions>
															<ColumnDefinition
																Width="176" />
															<ColumnDefinition
																Width="44" />
														</Grid.ColumnDefinitions>
														<Border
															BorderBrush="{DynamicResource MainViewFontSizeBorder}"
															Background="{DynamicResource ToggleSwitchUncheckedBackground}"
															Width="165"
															Height="90"
															BorderThickness="1"
															Grid.Column="0"
															Margin="10,4,0,4">
															<Image
																Width="165"
																Height="90"
																HorizontalAlignment="Center"
																VerticalAlignment="Center"
																Cursor="Hand"
																Source="{Binding StampImageSource}" />
														</Border>
														<Button
															x:Name="DelItemButton"
															Grid.Column="1"
															VerticalAlignment="Center"
															VerticalContentAlignment="Center"
															Background="#00FFFFFF"
															Margin="10,0,7,0"
															BorderThickness="0"
															Height="18"
															Width="16"
															Style="{StaticResource btnstyle}">
															<ContentControl.Content>
																<Image
																	Source="{DynamicResource SignatureDelItemButton}"
																	Width="14"
																	Height="16"
																	Stretch="Fill" />
															</ContentControl.Content>
														</Button>
													</Grid>
												</StackPanel>
											</Border>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</ScrollViewer>
							<Rectangle
								Height="1"
								Fill="{DynamicResource MainViewFontSizeBorder}"
								Grid.Row="1"
								Width="210"
								Margin="10,0,0,0"
								Visibility="{Binding Path=IsExistTemplate, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}" />
							<Button
								x:Name="AddNewButton"
								Grid.Row="2"
								Background="{DynamicResource SignaturePickerBackground}"
								BorderThickness="0"
								Width="220"
								Height="40"
								Margin="0"
								Style="{StaticResource btnstyle}">
								<ContentControl.Content>
									<StackPanel
										Orientation="Horizontal"
										HorizontalAlignment="Left">
										<Image
											Source="{DynamicResource SignatureAddNewButton}"
											Width="16"
											Height="16" />
										<TextBlock
											Text="{x:Static localprop:Resources.MenuSignatureSubAddNew}"
											Foreground="{DynamicResource TextBrushWhiteAndBlack}"
											Margin="10" />
									</StackPanel>
								</ContentControl.Content>
							</Button>
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
