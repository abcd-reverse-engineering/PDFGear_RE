<Window
	x:Class="pdfeditor.Controls.Signature.SignatureSaveNumTipWin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Signature" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	WindowStartupLocation="CenterScreen"
	ResizeMode="NoResize"
	Title="{StaticResource ApplicationTitle}"
	Height="120"
	Width="424">
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<Style
					x:Key="CheckBoxStyle"
					TargetType="{x:Type CheckBox}">
					<Setter
						Property="Height"
						Value="16" />
					<Setter
						Property="Background"
						Value="#FFFFFF" />
					<Setter
						Property="Focusable"
						Value="False" />
					<Setter
						Property="FrameworkElement.FocusVisualStyle"
						Value="{x:Null}" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type CheckBox}">
								<Grid>
									<Border
										x:Name="bd"
										BorderBrush="#D2D2D2"
										Width="16"
										HorizontalAlignment="Left"
										CornerRadius="1"
										BorderThickness="1"
										Background="#00FFFFFF" />
									<ContentPresenter
										Margin="20,0,0,0"
										VerticalAlignment="Center"
										HorizontalAlignment="Left"
										RecognizesAccessKey="True" />
									<Path
										x:Name="p"
										Data="M0,3 L3,6 L9,0"
										VerticalAlignment="Center"
										HorizontalAlignment="Left"
										Stroke="#4F5A69"
										StrokeThickness="1.5"
										Margin="4 1 0 0" />
								</Grid>
								<ControlTemplate.Triggers>
									<Trigger
										Property="ToggleButton.IsChecked"
										Value="True">
										<Setter
											TargetName="p"
											Property="Visibility"
											Value="Visible" />
									</Trigger>
									<Trigger
										Property="ToggleButton.IsChecked"
										Value="False">
										<Setter
											TargetName="p"
											Property="Visibility"
											Value="Hidden" />
									</Trigger>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											TargetName="bd"
											Property="Border.BorderBrush"
											Value="#704F5A69" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="40" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBlock
			Text="{x:Static localprop:Resources.WinSignatureMaxNumLimitTip}"
			TextWrapping="Wrap"
			FontWeight="Bold"
			VerticalAlignment="Center"
			Margin="10,0,0,0" />
		<StackPanel
			Orientation="Horizontal"
			Grid.Row="1"
			Margin="0,0,20,10"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
			<Button
				x:Name="btnOk"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Margin="0,0,0,0"
				IsDefault="True"
				FontSize="12"
				Content="{x:Static localprop:Resources.WinBtnOkContent}"
				Click="btnOk_Click" />
		</StackPanel>
	</Grid>
</Window>
