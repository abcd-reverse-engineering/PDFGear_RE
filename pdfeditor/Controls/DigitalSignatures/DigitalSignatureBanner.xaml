<UserControl
	x:Class="pdfeditor.Controls.DigitalSignatures.DigitalSignatureBanner" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.DigitalSignatures" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonLibControls="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:controls="clr-namespace:pdfeditor.Controls" xmlns:utils="clr-namespace:pdfeditor.Utils"
	HorizontalAlignment="Stretch"
	VerticalAlignment="Top"
	Background="#D8EAFB"
	BorderThickness="1"
	BorderBrush="#803B99FC">
	<Grid
		Height="40">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="248*" />
			<ColumnDefinition
				Width="87*" />
			<ColumnDefinition
				Width="Auto" />
			<ColumnDefinition
				Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid
			HorizontalAlignment="Left"
			Margin="12,0,0,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="Auto" />
			</Grid.ColumnDefinitions>
			<ScrollViewer
				HorizontalAlignment="Center"
				VerticalAlignment="Stretch"
				HorizontalScrollBarVisibility="Auto"
				VerticalScrollBarVisibility="Disabled"
				commonLibControls:ScrollBarHelper.CanExpand="False"
				Focusable="False"
				PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
				<TextBlock
					x:Name="TextPresenter"
					FontSize="14"
					Foreground="#FF000000"
					VerticalAlignment="Center" />
			</ScrollViewer>
		</Grid>
		<StackPanel
			Grid.Column="1"
			Orientation="Horizontal"
			Visibility="Collapsed"
			Margin="86,0,0,0">
			<commonLibControls:NumberBox
				x:Name="CurrentSignNum"
				IsArrowEnabled="False"
				MinWidth="24" />
			<TextBlock
				VerticalAlignment="Center"
				Margin="8,0,0,0">
				<Run
					Text="/" />
				<Run
					x:Name="TotalSignCount"
					Text="14" />
			</TextBlock>
			<Button
				Style="{StaticResource DialogButtonStyle}"
				MinWidth="0"
				Width="20"
				Height="20"
				Padding="4"
				Background="#B8DAFF"
				BorderBrush="#00FFFFFF"
				BorderThickness="0"
				utils:UIElementExtension.CornerRadius="10"
				Margin="8,0,0,0">
				<Viewbox>
					<Path
						Fill="#298FEE"
						Data="M5.00001,0.292847 L9.70712,4.99995 L9.00001,5.70706 L5.00001,1.70706 L1.00001,5.70706 L0.292908,4.99995 L5.00001,0.292847 Z" />
				</Viewbox>
			</Button>
			<Button
				Style="{StaticResource DialogButtonStyle}"
				MinWidth="0"
				Width="20"
				Height="20"
				Padding="4"
				Background="#B8DAFF"
				BorderBrush="#00FFFFFF"
				BorderThickness="0"
				utils:UIElementExtension.CornerRadius="10"
				Margin="8,0,0,0">
				<Viewbox>
					<Path
						Fill="#298FEE"
						Data="M4.99999,5.70715 L0.29288,1.00005 L0.999986,0.292939 L4.99999,4.29294 L8.99999,0.29294 L9.70709,1.00005 L4.99999,5.70715 Z" />
				</Viewbox>
			</Button>
		</StackPanel>
		<StackPanel
			Grid.Column="2"
			Orientation="Horizontal"
			Margin="8,0,0,0"
			Grid.ColumnSpan="2">
			<Button
				x:Name="ShowButton"
				Grid.Column="1"
				Margin="0,0,8,0"
				Content="{x:Static localprop:Resources.DigSignBannerShowSignaturesButton}"
				Style="{StaticResource DialogButtonStyle}"
				Background="#298FEE"
				Foreground="#FFFFFF"
				BorderBrush="#00FFFFFF"
				BorderThickness="0"
				utils:UIElementExtension.CornerRadius="4"
				Click="ShowButton_Click" />
			<Button
				Style="{StaticResource DialogButtonStyle}"
				MinWidth="0"
				Width="30"
				Height="30"
				Padding="10"
				Margin="0,0,6,0"
				Background="#00FFFFFF"
				BorderBrush="#00FFFFFF"
				BorderThickness="0"
				Click="CloseButton_Click">
				<Viewbox>
					<Path
						Fill="#000100"
						Data="M9.91504,0.571289 L5.53516,4.95752 L9.91504,9.34375 L9.34375,9.91504 L4.95752,5.53516 L0.571289,9.91504 L0,9.34375 L4.37988,4.95752 L0,0.571289 L0.571289,0 L4.95752,4.37988 L9.34375,0 L9.91504,0.571289 Z" />
				</Viewbox>
			</Button>
		</StackPanel>
	</Grid>
</UserControl>
