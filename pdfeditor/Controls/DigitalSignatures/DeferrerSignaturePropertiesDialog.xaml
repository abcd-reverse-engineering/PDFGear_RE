<Window
	x:Class="pdfeditor.Controls.DigitalSignatures.DeferrerSignaturePropertiesDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.DigitalSignatures" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	SizeToContent="Height"
	SnapsToDevicePixels="True"
	ResizeMode="NoResize"
	Title="{StaticResource ApplicationTitle}"
	Width="450"
	Background="{DynamicResource BatchPrintSiderbarBackground}"
	TextElement.Foreground="{DynamicResource TextBrushWhiteAndBlack}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid
			Margin="12">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="Auto"
					MinWidth="100" />
				<ColumnDefinition
					Width="12" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="12" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<TextBlock
				Text="{x:Static localprop:Resources.UnsignedDigSignPropLabel_Name}"
				TextAlignment="Right"
				VerticalAlignment="Center" />
			<TextBox
				x:Name="NameTextBox"
				Grid.Column="2"
				Padding="3,3"
				Style="{StaticResource DefaultTextBoxStyle}" />
			<TextBlock
				Text="{x:Static localprop:Resources.UnsignedDigSignPropLabel_Tip}"
				TextAlignment="Right"
				VerticalAlignment="Center"
				Grid.Row="2" />
			<TextBox
				x:Name="TipTextBox"
				Grid.Column="2"
				Padding="3,3"
				Grid.Row="2"
				Style="{StaticResource DefaultTextBoxStyle}" />
		</Grid>
		<Rectangle
			Grid.Row="1"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Top"
			Height="1"
			Fill="{DynamicResource MainViewFontSizeBorder}" />
		<StackPanel
			Grid.Row="1"
			Orientation="Horizontal"
			Margin="12,20"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
			<Button
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				IsCancel="True"
				Margin="0,0,10,0"
				Style="{StaticResource DialogButtonStyle}" />
			<Button
				x:Name="OkBtn"
				Content="{x:Static localprop:Resources.WinBtnOkContent}"
				Grid.Column="1"
				IsDefault="True"
				Style="{StaticResource PrimaryDialogButtonStyle}" />
		</StackPanel>
	</Grid>
</Window>
