<Window
	x:Class="pdfeditor.Controls.DigitalSignatures.AddCertificateWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.DigitalSignatures" xmlns:converters="clr-namespace:pdfeditor.Utils.Converters" xmlns:utils="clr-namespace:pdfeditor.Utils" xmlns:localprop="clr-namespace:pdfeditor.Properties" xmlns:commonCtrl="clr-namespace:CommonLib.Controls;assembly=CommonLib" xmlns:appTheme="clr-namespace:CommonLib.AppTheme;assembly=CommonLib"
	Title="{StaticResource ApplicationTitle}"
	ResizeMode="NoResize"
	Height="600"
	Width="600"
	Background="{DynamicResource SolidBrushWhiteAndBlack}"
	TextElement.Foreground="{DynamicResource TextBrushWhiteAndBlack}">
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary
						Source="/Controls/DigitalSignatures/DigitalSignatureControlStyles.xaml" />
					<appTheme:ThemeResourceDictionary
						FollowMainThemeResourceTheme="True">
						<appTheme:ThemeResourceDictionary.ThemeResources>
							<ResourceDictionary
								x:Key="Light">
								<SolidColorBrush
									x:Key="DescriptionTextForeground"
									Color="#575757" />
							</ResourceDictionary>
							<ResourceDictionary
								x:Key="Dark">
								<SolidColorBrush
									x:Key="DescriptionTextForeground"
									Color="#A8A8A8" />
							</ResourceDictionary>
						</appTheme:ThemeResourceDictionary.ThemeResources>
					</appTheme:ThemeResourceDictionary>
				</ResourceDictionary.MergedDictionaries>
				<converters:BooleanToVisibilityConverter
					x:Key="BooleanToVisibilityConverter" />
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid
			x:Name="StepContainer_Init"
			Visibility="Collapsed">
			<StackPanel
				Orientation="Vertical"
				Margin="20">
				<TextBlock
					Text="{x:Static localprop:Resources.AddCertificateWindow_Welcome_Desc}"
					LineHeight="20"
					TextWrapping="Wrap"
					Foreground="{DynamicResource DescriptionTextForeground}" />
				<RadioButton
					x:Name="SourceRadioButton_ExistingFile"
					Content="{x:Static localprop:Resources.AddCertificateWindow_Welcome_LabelImportFile}"
					Margin="0,20,0,0"
					IsChecked="True"
					Style="{StaticResource DefaultRadioButtonStyle}" />
				<RadioButton
					x:Name="SourceRadioButton_CreateNew"
					Content="{x:Static localprop:Resources.AddCertificateWindow_Welcome_LabelCreateCert}"
					Margin="0,12,0,0"
					Style="{StaticResource DefaultRadioButtonStyle}" />
			</StackPanel>
		</Grid>
		<Grid
			x:Name="StepContainer_CreateNew"
			Visibility="Collapsed">
			<StackPanel
				Orientation="Vertical"
				Margin="20">
				<TextBlock
					Text="{x:Static localprop:Resources.AddCertificateWindow_ImportFile_Desc}"
					LineHeight="20"
					TextWrapping="Wrap"
					Foreground="{DynamicResource DescriptionTextForeground}" />
				<StackPanel
					Margin="0,20,0,0"
					Orientation="Vertical"
					Grid.IsSharedSizeScope="True"
					MaxWidth="512">
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertProps_LabelName}">
						<TextBox
							x:Name="CreateNew_Name"
							Padding="4"
							Style="{StaticResource DefaultTextBoxStyle}" />
					</HeaderedContentControl>
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertProps_OrganizationalUnit}"
						Margin="0,16,0,0">
						<TextBox
							x:Name="CreateNew_OrganizationalUnit"
							Padding="4"
							Style="{StaticResource DefaultTextBoxStyle}" />
					</HeaderedContentControl>
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertProps_OrganizationalName}"
						Margin="0,16,0,0">
						<TextBox
							x:Name="CreateNew_OrganizationalName"
							Padding="4"
							Style="{StaticResource DefaultTextBoxStyle}" />
					</HeaderedContentControl>
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertProps_Email}"
						Margin="0,16,0,0">
						<TextBox
							x:Name="CreateNew_Email"
							Padding="4"
							Style="{StaticResource DefaultTextBoxStyle}" />
					</HeaderedContentControl>
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertProps_CountryRegion}"
						Margin="0,16,0,0">
						<ComboBox
							x:Name="CreateNew_CountryOrRegion"
							Padding="4"
							Style="{StaticResource DefaultComboBoxStyle}">
							<ItemsControl.ItemContainerStyle>
								<Style
									BasedOn="{StaticResource DefaultComboBoxItemStyle}"
									TargetType="{x:Type ComboBoxItem}">
									<Setter
										Property="Padding"
										Value="4" />
								</Style>
							</ItemsControl.ItemContainerStyle>
						</ComboBox>
					</HeaderedContentControl>
				</StackPanel>
			</StackPanel>
		</Grid>
		<Grid
			x:Name="StepContainer_SaveFile"
			Visibility="Collapsed">
			<StackPanel
				Margin="20"
				Orientation="Vertical">
				<TextBlock
					Text="{x:Static localprop:Resources.AddCertificateWindow_CreateCertFile_Desc}"
					LineHeight="20"
					TextWrapping="Wrap"
					Foreground="{DynamicResource DescriptionTextForeground}" />
				<HeaderedContentControl
					Header="{x:Static localprop:Resources.AddCertificateWindow_CreateCertFile_FileName}"
					Margin="0,24,0,0">
					<Grid
						Margin="0,8,0,0"
						HorizontalAlignment="Left">
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="*" />
							<ColumnDefinition
								Width="Auto" />
						</Grid.ColumnDefinitions>
						<TextBox
							x:Name="SaveFile_FilePathTextBox"
							VerticalAlignment="Center"
							Padding="4"
							Width="400"
							Style="{StaticResource DefaultTextBoxStyle}"
							TextChanged="FilePathTextBox_TextChanged" />
						<Button
							x:Name="SaveFile_BrowserButton"
							Grid.Column="1"
							Style="{StaticResource DialogButtonStyle}"
							MinWidth="0"
							Padding="4"
							Margin="4,0,0,0"
							utils:UIElementExtension.CornerRadius="2"
							Content="{x:Static localprop:Resources.CreateDigSignImportCertBrowserBtn}"
							Click="SaveFile_BrowserButton_Click" />
					</Grid>
				</HeaderedContentControl>
				<HeaderedContentControl
					Header="{x:Static localprop:Resources.WinPwdLabelPasswordContent}"
					Margin="0,24,0,0">
					<Grid
						HorizontalAlignment="Left"
						Margin="0,8,0,0"
						Width="400">
						<PasswordBox
							x:Name="SaveFile_PasswordBox"
							FontSize="14"
							Grid.Row="1"
							VerticalAlignment="Top"
							Padding="4"
							Style="{StaticResource DefaultPasswordBoxStyle}"
							commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
							PasswordChanged="PasswordBox_PasswordChanged" />
						<TextBox
							x:Name="SaveFile_PasswordTextBox"
							FontSize="14"
							Grid.Row="1"
							VerticalAlignment="Top"
							Visibility="Collapsed"
							Padding="4"
							Style="{StaticResource DefaultTextBoxStyle}"
							commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
							TextChanged="PasswordTextBox_TextChanged" />
						<Button
							x:Name="SaveFile_ShowPwdBth"
							Style="{StaticResource DialogButtonStyle}"
							Margin="4"
							Height="20"
							Width="24"
							Padding="4,0"
							MinWidth="0"
							HorizontalAlignment="Right"
							VerticalAlignment="Top"
							PreviewMouseDown="ShowPwdBth_MouseDown"
							PreviewMouseUp="ShowPwdBth_MouseUp">
							<TextBlock
								FontFamily="Segoe MDL2 Assets"
								Text="" />
						</Button>
					</Grid>
				</HeaderedContentControl>
				<HeaderedContentControl
					Header="{x:Static localprop:Resources.WinPwdLabelConfrimContent}"
					Margin="0,24,0,0">
					<PasswordBox
						x:Name="SaveFile_ConfirmPasswordBox"
						FontSize="14"
						Grid.Row="1"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Padding="4"
						Margin="0,8,0,0"
						Width="400"
						Style="{StaticResource DefaultPasswordBoxStyle}" />
				</HeaderedContentControl>
			</StackPanel>
		</Grid>
		<Grid
			x:Name="StepContainer_ImportFile">
			<StackPanel
				Margin="20"
				Orientation="Vertical">
				<TextBlock
					Text="{x:Static localprop:Resources.AddCertificateWindow_ImportFile_Desc}"
					LineHeight="20"
					TextWrapping="Wrap"
					Foreground="{DynamicResource DescriptionTextForeground}" />
				<StackPanel
					Orientation="Vertical"
					HorizontalAlignment="Left"
					Grid.IsSharedSizeScope="True"
					Width="512">
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Margin="0,12,0,0"
						Header="{x:Static localprop:Resources.CreateDigSignImportCertFileLabel}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="*" />
								<ColumnDefinition
									Width="Auto" />
							</Grid.ColumnDefinitions>
							<TextBox
								x:Name="ImportFile_FilePathTextBox"
								VerticalAlignment="Center"
								Padding="4"
								Style="{StaticResource DefaultTextBoxStyle}"
								TextChanged="FilePathTextBox_TextChanged" />
							<Button
								x:Name="ImportFile_BrowserButton"
								Grid.Column="1"
								Style="{StaticResource DialogButtonStyle}"
								MinWidth="0"
								Padding="4"
								Margin="4,0,0,0"
								utils:UIElementExtension.CornerRadius="2"
								Content="{x:Static localprop:Resources.CreateDigSignImportCertBrowserBtn}"
								Click="ImportFile_BrowserButton_Click" />
						</Grid>
					</HeaderedContentControl>
					<HeaderedContentControl
						Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
						Margin="0,12,0,0"
						Header="{x:Static localprop:Resources.WinPwdLabelPasswordContent}">
						<Grid>
							<PasswordBox
								x:Name="ImportFile_PasswordBox"
								FontSize="14"
								Grid.Row="1"
								VerticalAlignment="Top"
								Padding="4"
								Style="{StaticResource DefaultPasswordBoxStyle}"
								commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
								PasswordChanged="PasswordBox_PasswordChanged" />
							<TextBox
								x:Name="ImportFile_PasswordTextBox"
								FontSize="14"
								Grid.Row="1"
								VerticalAlignment="Top"
								Visibility="Collapsed"
								Padding="4"
								Style="{StaticResource DefaultTextBoxStyle}"
								commonCtrl:TextBoxExtensions.Placeholder="{x:Static localprop:Resources.WinPwdInputContent}"
								TextChanged="PasswordTextBox_TextChanged" />
							<Button
								x:Name="ImportFile_ShowPwdBth"
								Style="{StaticResource DialogButtonStyle}"
								Margin="4"
								Height="20"
								Width="24"
								Padding="4,0"
								MinWidth="0"
								HorizontalAlignment="Right"
								VerticalAlignment="Top"
								PreviewMouseDown="ShowPwdBth_MouseDown"
								PreviewMouseUp="ShowPwdBth_MouseUp">
								<TextBlock
									FontFamily="Segoe MDL2 Assets"
									Text="" />
							</Button>
						</Grid>
					</HeaderedContentControl>
				</StackPanel>
			</StackPanel>
		</Grid>
		<Grid
			Row="1">
			<Rectangle
				Fill="{DynamicResource SignaturebodyBorder}"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				Height="1" />
			<Button
				x:Name="CommandButton_Cancel"
				Grid.Row="1"
				Style="{StaticResource DialogButtonStyle}"
				IsCancel="True"
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				HorizontalAlignment="Left"
				Height="32"
				MinWidth="80"
				Margin="20"
				Background="{DynamicResource DialogButtonStaticBackground}"
				BorderThickness="1"
				utils:UIElementExtension.CornerRadius="2" />
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				Margin="20">
				<Button
					x:Name="CommandButton_Back"
					Grid.Row="1"
					Style="{StaticResource DialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnBackContent}"
					HorizontalAlignment="Left"
					Height="32"
					MinWidth="80"
					Margin="20,0,0,0"
					Background="{DynamicResource DialogButtonStaticBackground}"
					BorderThickness="1"
					utils:UIElementExtension.CornerRadius="2"
					Click="CommandButton_Back_Click" />
				<Button
					x:Name="CommandButton_Next"
					Grid.Row="1"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnNextContent}"
					HorizontalAlignment="Left"
					Height="32"
					MinWidth="80"
					Margin="20,0,0,0"
					BorderThickness="0"
					utils:UIElementExtension.CornerRadius="2"
					Click="CommandButton_Next_Click" />
				<Button
					x:Name="CommandButton_OK"
					Grid.Row="1"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					HorizontalAlignment="Left"
					Height="32"
					MinWidth="80"
					Margin="20,0,0,0"
					BorderThickness="0"
					utils:UIElementExtension.CornerRadius="2"
					Visibility="Collapsed"
					Click="CommandButton_Next_Click" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
