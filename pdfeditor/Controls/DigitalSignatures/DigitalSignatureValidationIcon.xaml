<UserControl
	x:Class="pdfeditor.Controls.DigitalSignatures.DigitalSignatureValidationIcon" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.DigitalSignatures" xmlns:appTheme="clr-namespace:CommonLib.AppTheme;assembly=CommonLib">
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<appTheme:ThemeResourceDictionary
						FollowMainThemeResourceTheme="True">
						<appTheme:ThemeResourceDictionary.ThemeResources>
							<ResourceDictionary
								x:Key="Light">
								<BitmapImage
									x:Key="UnknownIconSource"
									UriSource="/Style/Resources/DigitalSignature/UnknownIcon.png" />
								<BitmapImage
									x:Key="InvalidIconSource"
									UriSource="/Style/Resources/DigitalSignature/InvalidIcon.png" />
								<BitmapImage
									x:Key="ValidIconSource"
									UriSource="/Style/Resources/DigitalSignature/ValidIcon.png" />
								<BitmapImage
									x:Key="UnsignedIconSource"
									UriSource="/Style/Resources/DigitalSignature/UnsignedIcon.png" />
							</ResourceDictionary>
							<ResourceDictionary
								x:Key="Dark">
								<BitmapImage
									x:Key="UnknownIconSource"
									UriSource="/Style/DarkModeResources/DigitalSignature/UnknownIcon.png" />
								<BitmapImage
									x:Key="InvalidIconSource"
									UriSource="/Style/DarkModeResources/DigitalSignature/InvalidIcon.png" />
								<BitmapImage
									x:Key="ValidIconSource"
									UriSource="/Style/DarkModeResources/DigitalSignature/ValidIcon.png" />
								<BitmapImage
									x:Key="UnsignedIconSource"
									UriSource="/Style/DarkModeResources/DigitalSignature/UnsignedIcon.png" />
							</ResourceDictionary>
						</appTheme:ThemeResourceDictionary.ThemeResources>
					</appTheme:ThemeResourceDictionary>
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Image
			x:Name="UnknownIcon"
			Visibility="Visible"
			Source="{DynamicResource UnknownIconSource}"
			Stretch="Uniform"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
		<Image
			x:Name="InvalidIcon"
			Visibility="Collapsed"
			Source="{DynamicResource InvalidIconSource}"
			Stretch="Uniform"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
		<Image
			x:Name="ValidIcon"
			Visibility="Collapsed"
			Source="{DynamicResource ValidIconSource}"
			Stretch="Uniform"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
		<Image
			x:Name="UnsignedIcon"
			Visibility="Collapsed"
			Source="{DynamicResource UnsignedIconSource}"
			Stretch="Uniform"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />
	</Grid>
</UserControl>
