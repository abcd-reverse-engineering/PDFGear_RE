<Window
	x:Class="pdfeditor.Controls.DigitalSignatures.ImportDigitalIdDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.DigitalSignatures" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	SizeToContent="Height"
	SnapsToDevicePixels="True"
	Title="{x:Static localprop:Resources.CreateDigSignDialogBrowserItem}"
	MinHeight="220"
	Width="500">
	<Grid
		Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel
			Orientation="Vertical"
			Grid.IsSharedSizeScope="True">
			<FrameworkElement.Resources>
				<ResourceDictionary>
					<ResourceDictionary.MergedDictionaries>
						<ResourceDictionary
							Source="/Controls/DigitalSignatures/DigitalSignatureControlStyles.xaml" />
					</ResourceDictionary.MergedDictionaries>
				</ResourceDictionary>
			</FrameworkElement.Resources>
			<TextBlock
				Text="{x:Static localprop:Resources.CreateDigSignImportCertDialogDesc}"
				LineHeight="20"
				Foreground="#3F3F3F"
				TextWrapping="Wrap" />
			<HeaderedContentControl
				Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
				Margin="0,12,0,0"
				Header="{x:Static localprop:Resources.CreateDigSignImportCertFileLabel}">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="Auto" />
					</Grid.ColumnDefinitions>
					<TextBox
						x:Name="FilePathTextBox"
						VerticalAlignment="Center"
						Padding="4"
						BorderBrush="#D2D2D2"
						TextChanged="FilePathTextBox_TextChanged" />
					<Button
						x:Name="BrowserButton"
						Grid.Column="1"
						Style="{StaticResource DialogButtonStyle}"
						MinWidth="0"
						Padding="4"
						Margin="4,0,0,0"
						Content="{x:Static localprop:Resources.CreateDigSignImportCertBrowserBtn}"
						Click="BrowserButton_Click" />
				</Grid>
			</HeaderedContentControl>
			<HeaderedContentControl
				Style="{StaticResource DigitalSignatureHeaderedControlStyle}"
				Margin="0,12,0,0"
				Header="{x:Static localprop:Resources.WinPwdLabelPasswordContent}">
				<Grid>
					<PasswordBox
						x:Name="PasswordBox"
						FontSize="14"
						Grid.Row="1"
						VerticalAlignment="Top"
						BorderBrush="#D2D2D2"
						Padding="4"
						PasswordChanged="PasswordBox_PasswordChanged" />
					<TextBox
						x:Name="PasswordTextBox"
						FontSize="14"
						Grid.Row="1"
						VerticalAlignment="Top"
						BorderBrush="#D2D2D2"
						Visibility="Collapsed"
						Padding="4"
						TextChanged="PasswordTextBox_TextChanged" />
					<TextBlock
						x:Name="Placeholder"
						Text="{x:Static localprop:Resources.WinPwdInputContent}"
						IsHitTestVisible="False"
						Margin="6,7,0,0"
						VerticalAlignment="Top"
						FontSize="11"
						Foreground="#51000000" />
					<Button
						x:Name="ShowPwdBth"
						Style="{StaticResource DialogButtonStyle}"
						Margin="4"
						Height="20"
						Width="24"
						Padding="4,0"
						MinWidth="0"
						HorizontalAlignment="Right"
						VerticalAlignment="Top"
						PreviewMouseDown="ShowPwdBth_MouseDown"
						PreviewMouseUp="ShowPwdBth_MouseUp">
						<TextBlock
							FontFamily="Segoe MDL2 Assets"
							Text="ïž" />
					</Button>
				</Grid>
			</HeaderedContentControl>
		</StackPanel>
		<StackPanel
			Grid.Row="1"
			Margin="0,20,0,0"
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			VerticalAlignment="Center">
			<Button
				x:Name="btnCancel"
				Style="{StaticResource DialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinBtnCancelContent}"
				Width="80"
				FontSize="12"
				IsCancel="True" />
			<Button
				x:Name="btnOk"
				Style="{StaticResource PrimaryDialogButtonStyle}"
				Content="{x:Static localprop:Resources.WinViewToolSaveTooltipText}"
				Width="80"
				Margin="10,0,0,0"
				IsDefault="True"
				FontSize="12"
				Click="btnOk_Click" />
		</StackPanel>
	</Grid>
</Window>
