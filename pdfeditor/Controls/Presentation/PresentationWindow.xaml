<Window
	x:Class="pdfeditor.Controls.Presentation.PresentationWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Presentation" xmlns:control="clr-namespace:pdfeditor.Controls" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	WindowStyle="None"
	Title="PresentationWindow"
	Height="1"
	Width="1">
	<Grid>
		<Grid
			x:Name="MainGrid"
			Background="#FF000000">
			<Border>
				<UIElement.RenderTransform>
					<TranslateTransform
						x:Name="ImageViewTrans" />
				</UIElement.RenderTransform>
				<local:PdfImageFlipView
					x:Name="ImageView"
					Opacity="0"
					Visibility="Collapsed" />
			</Border>
			<Grid
				x:Name="TopToolbarContainer"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				Background="#CC000000">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="Auto" />
				</Grid.ColumnDefinitions>
				<Button
					x:Name="ExitButton"
					Style="{StaticResource DialogButtonStyle}"
					Padding="0"
					BorderThickness="0"
					MinWidth="0"
					Background="#00FFFFFF"
					BorderBrush="#00FFFFFF"
					Foreground="#FFFFFF">
					<StackPanel
						Orientation="Horizontal"
						Margin="0,0,12,0">
						<Border
							Width="32"
							Height="32">
							<Viewbox
								Width="6"
								Height="12"
								HorizontalAlignment="Center"
								VerticalAlignment="Center">
								<Path
									Data="M7,1 L1,7 L7,13"
									Stroke="#FFFFFFFF"
									StrokeThickness="1" />
							</Viewbox>
						</Border>
						<TextBlock
							Text="{x:Static localprop:Resources.PresentationWindowExitText}"
							VerticalAlignment="Center"
							FontSize="12" />
					</StackPanel>
				</Button>
				<TextBlock
					x:Name="FileNameText"
					Grid.ColumnSpan="2"
					FontSize="12"
					Foreground="#FFFFFFFF"
					HorizontalAlignment="Center"
					VerticalAlignment="Center" />
				<Button
					x:Name="ExitButton2"
					Grid.Column="2"
					Width="44"
					Height="32">
					<FrameworkElement.Style>
						<Style
							TargetType="{x:Type ButtonBase}">
							<Setter
								Property="Background"
								Value="#00FFFFFF" />
							<Setter
								Property="BorderBrush"
								Value="#00FFFFFF" />
							<Setter
								Property="Foreground"
								Value="#FFFFFF" />
							<Setter
								Property="BorderThickness"
								Value="0" />
							<Setter
								Property="HorizontalContentAlignment"
								Value="Center" />
							<Setter
								Property="VerticalContentAlignment"
								Value="Center" />
							<Setter
								Property="VerticalAlignment"
								Value="Center" />
							<Setter
								Property="Padding"
								Value="0" />
							<Setter
								Property="MinWidth"
								Value="0" />
							<Setter
								Property="FrameworkElement.FocusVisualStyle"
								Value="{StaticResource DialogButtonFocusVisual}" />
							<Setter
								Property="Template">
								<Setter.Value>
									<ControlTemplate
										TargetType="{x:Type ButtonBase}">
										<Border
											x:Name="border"
											BorderThickness="{TemplateBinding Control.BorderThickness}"
											Background="{TemplateBinding Control.Background}"
											BorderBrush="{TemplateBinding Control.BorderBrush}"
											SnapsToDevicePixels="True">
											<Grid>
												<Rectangle
													x:Name="BackgroundBorder"
													HorizontalAlignment="Stretch"
													VerticalAlignment="Stretch"
													Fill="#C42B1C"
													Opacity="0"
													SnapsToDevicePixels="False" />
												<Path
													x:Name="path"
													Data="M0,0 L10,10 M10,0 L0,10"
													Width="10"
													Height="10"
													Stroke="{TemplateBinding Control.Foreground}"
													StrokeThickness="1"
													HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
													VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
											</Grid>
										</Border>
										<ControlTemplate.Triggers>
											<Trigger
												Property="UIElement.IsMouseOver"
												Value="True">
												<Setter
													TargetName="BackgroundBorder"
													Property="UIElement.Opacity"
													Value="1" />
											</Trigger>
											<Trigger
												Property="IsPressed"
												Value="True">
												<Setter
													TargetName="BackgroundBorder"
													Property="UIElement.Opacity"
													Value="0.91" />
											</Trigger>
											<Trigger
												Property="IsEnabled"
												Value="False">
												<Setter
													TargetName="border"
													Property="Border.Background"
													Value="#00FFFFFF" />
												<Setter
													TargetName="border"
													Property="Border.BorderBrush"
													Value="#00FFFFFF" />
												<Setter
													TargetName="path"
													Property="Shape.Stroke"
													Value="#999999" />
											</Trigger>
										</ControlTemplate.Triggers>
									</ControlTemplate>
								</Setter.Value>
							</Setter>
						</Style>
					</FrameworkElement.Style>
				</Button>
			</Grid>
			<Border
				x:Name="BottomFloatToolbarContainer"
				HorizontalAlignment="Center"
				VerticalAlignment="Bottom"
				Margin="0,0,0,20"
				Background="#CC000000"
				MinWidth="100"
				MinHeight="32"
				CornerRadius="16">
				<Grid
					Margin="4,0">
					<FrameworkElement.Resources>
						<ResourceDictionary>
							<Style
								x:Key="NoStyleButtonStyle"
								TargetType="{x:Type Button}">
								<Setter
									Property="Background"
									Value="#00FFFFFF" />
								<Setter
									Property="Padding"
									Value="0" />
								<Setter
									Property="MinWidth"
									Value="0" />
								<Setter
									Property="MinHeight"
									Value="0" />
								<Setter
									Property="HorizontalAlignment"
									Value="Center" />
								<Setter
									Property="VerticalAlignment"
									Value="Center" />
								<Setter
									Property="HorizontalContentAlignment"
									Value="Stretch" />
								<Setter
									Property="VerticalContentAlignment"
									Value="Stretch" />
								<Setter
									Property="Template">
									<Setter.Value>
										<ControlTemplate
											TargetType="{x:Type Button}">
											<Border
												Padding="{TemplateBinding Control.Padding}"
												Background="{TemplateBinding Control.Background}">
												<ContentPresenter
													ContentSource="Content"
													HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
													VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
											</Border>
										</ControlTemplate>
									</Setter.Value>
								</Setter>
							</Style>
						</ResourceDictionary>
					</FrameworkElement.Resources>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="Auto" />
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="Auto" />
					</Grid.ColumnDefinitions>
					<TextBlock
						x:Name="PageText"
						Grid.Column="1"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Foreground="#FFFFFFFF" />
					<Button
						x:Name="FloatPrevButton"
						Style="{StaticResource NoStyleButtonStyle}"
						Width="20">
						<Viewbox
							Width="6"
							Height="12"
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
							<Path
								Data="M7,1 L1,7 L7,13"
								Stroke="#FFFFFFFF"
								StrokeThickness="1" />
						</Viewbox>
					</Button>
					<Button
						x:Name="FloatNextButton"
						Grid.Column="2"
						Style="{StaticResource NoStyleButtonStyle}"
						Width="20">
						<Viewbox
							Width="6"
							Height="12"
							HorizontalAlignment="Center"
							VerticalAlignment="Center">
							<Path
								Data="M1,13 L7,7 L1,1"
								Stroke="#FFFFFFFF"
								StrokeThickness="1" />
						</Viewbox>
					</Button>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</Window>
