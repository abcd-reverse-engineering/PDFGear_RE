<UserControl
	x:Class="pdfeditor.Controls.ImageControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls" xmlns:localprop="clr-namespace:pdfeditor.Properties">
	<Grid>
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<DropShadowEffect
					x:Key="ButtonShadowEffect"
					Color="Black"
					ShadowDepth="2"
					Opacity="0.5"
					BlurRadius="5" />
				<Style
					x:Key="BtnInfoStyle"
					TargetType="{x:Type ButtonBase}">
					<Setter
						Property="Height"
						Value="32" />
					<Setter
						Property="Background"
						Value="{DynamicResource SolidBrushWhiteAndBlack}" />
					<Setter
						Property="BorderThickness"
						Value="0" />
					<Setter
						Property="TextBlock.Foreground"
						Value="{DynamicResource MainViewBtnInfoStyleText}" />
					<Setter
						Property="TextBlock.FontSize"
						Value="12" />
					<Setter
						Property="TextBlock.TextAlignment"
						Value="Center" />
					<Setter
						Property="TextBlock.FontSize"
						Value="12" />
					<Setter
						Property="TextBlock.FontStyle"
						Value="Normal" />
					<Setter
						Property="HorizontalContentAlignment"
						Value="Stretch" />
					<Setter
						Property="Padding"
						Value="0,0" />
					<Setter
						Property="BorderBrush"
						Value="{DynamicResource ImageControlBtnBorder}" />
					<Setter
						Property="Template">
						<Setter.Value>
							<ControlTemplate
								TargetType="{x:Type ButtonBase}">
								<Border
									x:Name="bborder"
									BorderBrush="{TemplateBinding Control.BorderBrush}"
									BorderThickness="{TemplateBinding Control.BorderThickness}"
									Background="{TemplateBinding Control.Background}"
									SnapsToDevicePixels="True">
									<ContentPresenter
										x:Name="contentPresenter"
										Focusable="False"
										HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
										Margin="{TemplateBinding Control.Padding}"
										RecognizesAccessKey="True"
										SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}"
										VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}" />
								</Border>
								<ControlTemplate.Triggers>
									<Trigger
										Property="UIElement.IsMouseOver"
										Value="True">
										<Setter
											TargetName="bborder"
											Property="Border.CornerRadius"
											Value="0" />
										<Setter
											TargetName="bborder"
											Value="{DynamicResource SignaturePickerDelBtnBorder}"
											Property="Border.BorderBrush" />
										<Setter
											TargetName="bborder"
											Value="{DynamicResource BtnInfoMouseOverColor}"
											Property="Border.Background" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="auto" />
			<ColumnDefinition
				Width="8" />
			<ColumnDefinition
				Width="32" />
		</Grid.ColumnDefinitions>
		<Grid
			x:Name="selectedBoder"
			Visibility="Visible">
			<Rectangle
				x:Name="Imageborder2"
				StrokeThickness="1"
				VerticalAlignment="Top"
				Stroke="#FF808080" />
		</Grid>
		<Grid
			x:Name="editorBoder"
			Visibility="Collapsed">
			<Rectangle
				x:Name="Imageborder"
				StrokeThickness="2"
				VerticalAlignment="Top"
				Stroke="#FF000000" />
			<Rectangle
				x:Name="Topleft"
				Cursor="SizeNWSE"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="-4 -4 0 0"
				RenderTransformOrigin="0.5,0.5"
				VerticalAlignment="Top"
				HorizontalAlignment="Left"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Topright"
				Cursor="SizeNESW"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="0 -4 -4 0"
				VerticalAlignment="Top"
				HorizontalAlignment="Right"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Bottomleft"
				Cursor="SizeNESW"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="-4 0 0 -4"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Left"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Bottomright"
				Cursor="SizeNWSE"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="0 0 -4 -4"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Right"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Topcenter"
				Cursor="SizeNS"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="0 -4 0 4"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Leftcenter"
				Cursor="SizeWE"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="-4 0 4 0"
				VerticalAlignment="Center"
				HorizontalAlignment="Left"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Bottomcenter"
				Cursor="SizeNS"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="0 4 0 -4"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Center"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
			<Rectangle
				x:Name="Rightcenter"
				Cursor="SizeWE"
				Width="8"
				Height="8"
				Stroke="#FF000000"
				Fill="#FFFFFFFF"
				Margin="4 0 -4 0"
				VerticalAlignment="Center"
				HorizontalAlignment="Right"
				MouseDown="MouseButtonDown"
				MouseUp="Topleft_MouseUp" />
		</Grid>
		<Grid
			x:Name="Siderbar"
			Column="2"
			Height="auto"
			VerticalAlignment="Top">
			<Border
				x:Name="SiderAcitonbar"
				Effect="{StaticResource ButtonShadowEffect}">
				<Grid
					x:Name="SiderEditorActionBtn"
					VerticalAlignment="Top"
					Visibility="Visible">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
					</Grid.RowDefinitions>
					<Button
						Name="editorImagebtn"
						Grid.Row="0"
						Height="32"
						Width="32"
						Padding="3 0"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						BorderThickness="1 1 1 0"
						ToolTip="{x:Static localprop:Resources.ImageControlEditor}"
						Cursor="Arrow"
						Style="{StaticResource BtnInfoStyle}"
						Click="editorImagebtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlEditBtn}" />
						</StackPanel>
					</Button>
					<Button
						Name="exprobtn"
						Grid.Row="2"
						Height="32"
						Width="32"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						BorderThickness="1 0"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationSave}"
						Cursor="Arrow"
						Style="{StaticResource BtnInfoStyle}"
						Click="exprotbtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlExportBtn}" />
						</StackPanel>
					</Button>
					<Button
						Name="OcrBtn"
						Height="32"
						Width="32"
						Grid.Row="4"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationOCR}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 0"
						Padding="2 0"
						Style="{StaticResource BtnInfoStyle}"
						Click="ocrBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlOCRBtn}" />
						</StackPanel>
					</Button>
					<Button
						Height="32"
						Width="32"
						Grid.Row="6"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationDelete}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 0 1 1"
						Style="{StaticResource BtnInfoStyle}"
						Click="DeleteBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlDeleteBtn}" />
						</StackPanel>
					</Button>
				</Grid>
			</Border>
			<Border
				x:Name="SiderEditorbar"
				Visibility="Collapsed"
				Effect="{StaticResource ButtonShadowEffect}">
				<Grid
					VerticalAlignment="Top">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="0" />
						<RowDefinition
							Height="32" />
					</Grid.RowDefinitions>
					<Button
						Name="ReplaceBtn"
						Height="32"
						Width="32"
						Grid.Row="0"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationReplace}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 1 1 0"
						Style="{StaticResource BtnInfoStyle}"
						Click="ReplaceBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlReplaceBtn}" />
						</StackPanel>
					</Button>
					<Button
						Name="TopHierarchyBtn"
						Height="32"
						Width="32"
						Grid.Row="2"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						Margin="0"
						BorderThickness="1 0"
						ToolTip="{x:Static localprop:Resources.ImageHierarchyTop}"
						Style="{StaticResource BtnInfoStyle}"
						Click="TopHierarchyBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlTopHierarchy}" />
						</StackPanel>
					</Button>
					<Button
						Name="BottomHierarchyBtn"
						Height="32"
						Width="32"
						Grid.Row="4"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						Margin="0"
						BorderThickness="1 0"
						ToolTip="{x:Static localprop:Resources.ImageHierarchyBottom}"
						Style="{StaticResource BtnInfoStyle}"
						Click="BottomHierarchyBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlBottomHierarchy}" />
						</StackPanel>
					</Button>
					<Button
						Name="RotateBtn"
						Height="32"
						Width="32"
						Grid.Row="6"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationRotate}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 0"
						Style="{StaticResource BtnInfoStyle}"
						Click="rotate_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlRotateBtn}" />
						</StackPanel>
					</Button>
					<Button
						Name="Flip_HorizontalBtn"
						Height="32"
						Width="32"
						Grid.Row="8"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						Margin="0"
						BorderThickness="1 0"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationFilpHor}"
						Style="{StaticResource BtnInfoStyle}"
						Click="Flip_HorizontalBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlFlip_Horizontal}" />
						</StackPanel>
					</Button>
					<Button
						Name="Flip_VerticalBtn"
						Height="32"
						Width="32"
						Grid.Row="10"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						Margin="0"
						BorderThickness="1 0"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationFilpVer}"
						Style="{StaticResource BtnInfoStyle}"
						Click="Flip_VerticalBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlFlip_Vertical}" />
						</StackPanel>
					</Button>
					<Button
						Name="DeleteBtn"
						Height="32"
						Width="32"
						Margin="0 0 0 0"
						Grid.Row="11"
						ToolTip="{x:Static localprop:Resources.ImagemanipulationDelete}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 0"
						Style="{StaticResource BtnInfoStyle}"
						Click="DeleteBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlDeleteBtn}" />
						</StackPanel>
					</Button>
					<Button
						Name="quitBtn"
						Height="32"
						Width="32"
						Grid.Row="13"
						ToolTip="{x:Static localprop:Resources.ToolbarExitEditButtonContent}"
						Background="{DynamicResource SolidBrushWhiteAndBlack}"
						BorderBrush="{DynamicResource ImageControlBtnBorder}"
						Cursor="Arrow"
						BorderThickness="1 0 1 1"
						Style="{StaticResource BtnInfoStyle}"
						Click="quitBtn_Click">
						<StackPanel
							VerticalAlignment="Center"
							HorizontalAlignment="Center">
							<Image
								Source="{DynamicResource ImageControlExitBtn}" />
						</StackPanel>
					</Button>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>
