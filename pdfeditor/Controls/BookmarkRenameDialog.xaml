<Window
	x:Class="pdfeditor.Controls.BookmarkRenameDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	ResizeMode="NoResize"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	Background="{DynamicResource WindowsBackground}"
	Title="{StaticResource ApplicationTitle}"
	Height="190"
	Width="400">
	<Grid
		FocusManager.FocusedElement="{Binding ElementName=TitleTextBox}">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel
			Margin="20">
			<TextBlock
				x:Name="RenameTips"
				Text="{x:Static localprop:Resources.BookmarkRenameWindowContent}"
				TextWrapping="Wrap" />
			<TextBlock
				x:Name="CreateNewTips"
				Text="{x:Static localprop:Resources.BookmarkRenameWindowContent}"
				TextWrapping="Wrap"
				Visibility="Collapsed" />
			<TextBox
				x:Name="TitleTextBox"
				Margin="0,12,0,0"
				Height="22"
				VerticalAlignment="Center"
				VerticalContentAlignment="Center"
				Style="{StaticResource DefaultTextBoxStyle}"
				TextChanged="TitleTextBox_TextChanged" />
		</StackPanel>
		<Grid
			Row="1"
			Margin="20,0,20,20">
			<StackPanel
				Orientation="Horizontal"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom">
				<Button
					Content="{x:Static localprop:Resources.WinBtnCancelContent}"
					IsCancel="True"
					Margin="0,0,10,0"
					Style="{StaticResource DialogButtonStyle}" />
				<Button
					x:Name="OkBtn"
					Content="{x:Static localprop:Resources.WinBtnOkContent}"
					Grid.Column="1"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Click="OKButton_Click" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
