																		<ExponentialEase
																			Exponent="7"
																			EasingMode="EaseOut" />
																	</VisualTransition.GeneratedEasingFunction>
																	<Storyboard>
																		<DoubleAnimation
																			Storyboard.TargetName="UncheckedBackground"
																			Storyboard.TargetProperty="Opacity"
																			To="1"
																			Duration="0:0:0.15" />
																		<DoubleAnimation
																			Storyboard.TargetName="CheckedBackground"
																			Storyboard.TargetProperty="Opacity"
																			To="0"
																			Duration="0:0:0.15" />
																		<ObjectAnimationUsingKeyFrames
																			Storyboard.TargetName="Toggle"
																			Storyboard.TargetProperty="Fill"
																			Duration="0">
																			<DiscreteObjectKeyFrame
																				KeyTime="0"
																				Value="{StaticResource ToggleSwitchUncheckedToggleBrush}" />
																		</ObjectAnimationUsingKeyFrames>
																	</Storyboard>
																</VisualTransition>
																<VisualTransition
																	From="Checked"
																	To="Indeterminate"
																	GeneratedDuration="0:0:0.3">
																	<VisualTransition.GeneratedEasingFunction>
