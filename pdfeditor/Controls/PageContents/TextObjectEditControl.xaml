<UserControl
	x:Class="pdfeditor.Controls.PageContents.TextObjectEditControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:pdfeditor.Controls.PageContents" xmlns:control="clr-namespace:pdfeditor.Controls">
	<Grid>
		<Canvas>
			<control:ResizeView
				x:Name="ResizeControl"
				PreviewMouseDoubleClick="ResizeControl_PreviewMouseDoubleClick"
				PreviewMouseUp="ResizeControl_PreviewMouseUp"
				ResizeDragStarted="ResizeControl_ResizeDragStarted"
				ResizeDragCompleted="ResizeControl_ResizeDragCompleted"
				Background="#00FFFFFF"
				DragPlaceholderFill="#00FFFFFF"
				BorderThickness="1"
				DragMode="Move"
				UseLayoutRounding="False"
				SnapsToDevicePixels="False">
				<control:ResizeView.PlaceholderContent>
					<Rectangle
						x:Name="PlaceholderRect"
						Fill="#66000000"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						SnapsToDevicePixels="False"
						UseLayoutRounding="False" />
				</control:ResizeView.PlaceholderContent>
			</control:ResizeView>
		</Canvas>
	</Grid>
</UserControl>
