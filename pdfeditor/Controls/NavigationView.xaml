<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:local="clr-namespace:pdfeditor.Controls">
	<local:TransitionAnimationConverter
		x:Key="TransitionAnimationConverter" />
	<SolidColorBrush
		x:Key="NavigationView.Static.Background"
		Color="#FFFFFFFF" />
	<SolidColorBrush
		x:Key="NavigationView.Static.Border"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationView.Disabled.Background"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationView.Disabled.Border"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationViewItem.Static.Background"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationViewItem.Static.Border"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationViewItem.MouseOver.Background"
		Color="#66BCC1D0" />
	<SolidColorBrush
		x:Key="NavigationViewItem.MouseOver.Border"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationViewItem.SelectedActive.Background"
		Color="#99BCC1D0" />
	<SolidColorBrush
		x:Key="NavigationViewItem.SelectedActive.Border"
		Color="Transparent" />
	<SolidColorBrush
		x:Key="NavigationViewItem.SelectedInactive.Background"
		Color="#FFBCC1D0" />
	<SolidColorBrush
		x:Key="NavigationViewItem.SelectedInactive.Border"
		Color="Transparent" />
	<Style
		x:Key="NavigationViewItemFocusVisual">
		<Setter
			Property="Control.Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Margin="0"
						SnapsToDevicePixels="True"
						RadiusX="4"
						RadiusY="4"
						Stroke="#FF000000"
						StrokeThickness="1" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style
		x:Key="{x:Type local:NavigationView}"
		TargetType="{x:Type local:NavigationView}">
		<Setter
			Property="local:NavigationView.PaneBackground"
			Value="{DynamicResource NavigationViewStaticBackground}" />
		<Setter
			Property="BorderBrush"
			Value="{DynamicResource MainViewSideBarBorder}" />
		<Setter
			Property="BorderThickness"
			Value="0" />
		<Setter
			Property="Padding"
			Value="0,8" />
		<Setter
			Property="local:NavigationView.MinContentWidth"
			Value="140" />
		<Setter
			Property="local:NavigationView.MaxContentWidth"
			Value="400" />
		<Setter
			Property="Foreground"
			Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
		<Setter
			Property="ScrollViewer.HorizontalScrollBarVisibility"
			Value="Disabled" />
		<Setter
			Property="ScrollViewer.VerticalScrollBarVisibility"
			Value="Auto" />
		<Setter
			Property="ScrollViewer.CanContentScroll"
			Value="True" />
		<Setter
			Property="ScrollViewer.PanningMode"
			Value="Both" />
		<Setter
			Property="Stylus.IsFlicksEnabled"
			Value="False" />
		<Setter
			Property="HorizontalContentAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalContentAlignment"
			Value="Center" />
		<Setter
			Property="VirtualizingPanel.ScrollUnit"
			Value="Pixel" />
		<Setter
			Property="HorizontalAlignment"
			Value="Left" />
		<Setter
			Property="VerticalAlignment"
			Value="Stretch" />
		<Setter
			Property="local:NavigationView.NavigationListWidth"
			Value="52" />
		<Setter
			Property="ListBox.SelectionMode"
			Value="Single" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:NavigationView}">
					<Border
						Name="Bd"
						SnapsToDevicePixels="True">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup
								x:Name="DisplayModeStates">
								<VisualState
									x:Name="Close" />
								<VisualState
									x:Name="LeftInline">
									<Storyboard>
										<Int32Animation
											Storyboard.TargetName="ItemsBorder"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="0" />
										<Int32Animation
											Storyboard.TargetName="ContentBorder"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="1" />
										<Int32Animation
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="1" />
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="HorizontalAlignment"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static HorizontalAlignment.Right}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="ContentContainer"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualState
									x:Name="RightInline">
									<Storyboard>
										<Int32Animation
											Storyboard.TargetName="ItemsBorder"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="1" />
										<Int32Animation
											Storyboard.TargetName="ContentBorder"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="0" />
										<Int32Animation
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="(Grid.Column)"
											Duration="0"
											To="0" />
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="HorizontalAlignment"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static HorizontalAlignment.Left}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="ContentContainer"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames
											Storyboard.TargetName="PART_ResizeDragger"
											Storyboard.TargetProperty="Visibility"
											Duration="0">
											<DiscreteObjectKeyFrame
												KeyTime="0"
												Value="{x:Static Visibility.Visible}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
								<VisualStateGroup.Transitions>
									<VisualTransition
										From="Close"
										To="LeftInline">
										<Storyboard>
											<Int32Animation
												Storyboard.TargetName="ItemsBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<Int32Animation
												Storyboard.TargetName="ContentBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<Int32Animation
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="HorizontalAlignment"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static HorizontalAlignment.Right}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
											</ObjectAnimationUsingKeyFrames>
											<DoubleAnimation
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Opacity"
												From="0"
												To="1"
												Duration="0:0:0.08" />
											<DoubleAnimationUsingKeyFrames
												Storyboard.TargetName="PART_LayoutRoot"
												Storyboard.TargetProperty="Tag"
												Duration="0:0:0.35">
												<DiscreteDoubleKeyFrame
													KeyTime="0:0:0"
													Value="-1" />
												<SplineDoubleKeyFrame
													KeyTime="0:0:0.35"
													KeySpline="0.1,0.9 0.2,1.0"
													Value="0" />
											</DoubleAnimationUsingKeyFrames>
										</Storyboard>
									</VisualTransition>
									<VisualTransition
										From="LeftInline"
										To="Close">
										<Storyboard>
											<Int32Animation
												Storyboard.TargetName="ItemsBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<Int32Animation
												Storyboard.TargetName="ContentBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<Int32Animation
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="HorizontalAlignment"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static HorizontalAlignment.Right}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Visibility"
												Duration="0:0:0.12">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
												<DiscreteObjectKeyFrame
													KeyTime="0:0:0.12"
													Value="{x:Static Visibility.Collapsed}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Collapsed}" />
											</ObjectAnimationUsingKeyFrames>
											<DoubleAnimation
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Opacity"
												From="1"
												To="0"
												BeginTime="0:0:0.04"
												Duration="0:0:0.08" />
											<DoubleAnimationUsingKeyFrames
												Storyboard.TargetName="PART_LayoutRoot"
												Storyboard.TargetProperty="Tag"
												Duration="0:0:0.12">
												<DiscreteDoubleKeyFrame
													KeyTime="0:0:0"
													Value="0" />
												<SplineDoubleKeyFrame
													KeyTime="0:0:0.12"
													KeySpline="0.1,0.9 0.2,1.0"
													Value="-1" />
											</DoubleAnimationUsingKeyFrames>
										</Storyboard>
									</VisualTransition>
									<VisualTransition
										From="Close"
										To="RightInline">
										<Storyboard>
											<Int32Animation
												Storyboard.TargetName="ItemsBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<Int32Animation
												Storyboard.TargetName="ContentBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<Int32Animation
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="HorizontalAlignment"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static HorizontalAlignment.Left}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
											</ObjectAnimationUsingKeyFrames>
											<DoubleAnimation
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Opacity"
												From="0"
												To="1"
												Duration="0:0:0.08" />
											<DoubleAnimationUsingKeyFrames
												Storyboard.TargetName="PART_LayoutRoot"
												Storyboard.TargetProperty="Tag"
												Duration="0:0:0.35">
												<DiscreteDoubleKeyFrame
													KeyTime="0:0:0"
													Value="1" />
												<SplineDoubleKeyFrame
													KeyTime="0:0:0.35"
													KeySpline="0.1,0.9 0.2,1.0"
													Value="0" />
											</DoubleAnimationUsingKeyFrames>
										</Storyboard>
									</VisualTransition>
									<VisualTransition
										From="RightInline"
										To="Close">
										<Storyboard>
											<Int32Animation
												Storyboard.TargetName="ItemsBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="1" />
											<Int32Animation
												Storyboard.TargetName="ContentBorder"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<Int32Animation
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="(Grid.Column)"
												Duration="0"
												To="0" />
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="HorizontalAlignment"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static HorizontalAlignment.Left}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Visibility"
												Duration="0:0:0.12">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Visible}" />
												<DiscreteObjectKeyFrame
													KeyTime="0:0:0.12"
													Value="{x:Static Visibility.Collapsed}" />
											</ObjectAnimationUsingKeyFrames>
											<ObjectAnimationUsingKeyFrames
												Storyboard.TargetName="PART_ResizeDragger"
												Storyboard.TargetProperty="Visibility"
												Duration="0">
												<DiscreteObjectKeyFrame
													KeyTime="0"
													Value="{x:Static Visibility.Collapsed}" />
											</ObjectAnimationUsingKeyFrames>
											<DoubleAnimation
												Storyboard.TargetName="ContentContainer"
												Storyboard.TargetProperty="Opacity"
												From="1"
												To="0"
												BeginTime="0:0:0.04"
												Duration="0:0:0.08" />
											<DoubleAnimationUsingKeyFrames
												Storyboard.TargetName="PART_LayoutRoot"
												Storyboard.TargetProperty="Tag"
												Duration="0:0:0.12">
												<DiscreteDoubleKeyFrame
													KeyTime="0:0:0"
													Value="0" />
												<SplineDoubleKeyFrame
													KeyTime="0:0:0.12"
													KeySpline="0.1,0.9 0.2,1.0"
													Value="1" />
											</DoubleAnimationUsingKeyFrames>
										</Storyboard>
									</VisualTransition>
								</VisualStateGroup.Transitions>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>
						<Grid
							x:Name="PART_LayoutRoot">
							<FrameworkElement.Tag>
								<sys:Double>0.0</sys:Double>
							</FrameworkElement.Tag>
							<Grid.ColumnDefinitions>
								<ColumnDefinition
									Width="Auto" />
								<ColumnDefinition
									Width="Auto" />
							</Grid.ColumnDefinitions>
							<Border
								x:Name="ItemsBorder"
								Panel.ZIndex="1"
								Width="{TemplateBinding local:NavigationView.NavigationListWidth}"
								BorderBrush="{DynamicResource MainViewSideBarBorder}"
								BorderThickness="{TemplateBinding Control.BorderThickness}"
								Background="{DynamicResource NavigationViewStaticBackground}">
								<Grid>
									<Grid.RowDefinitions>
										<RowDefinition
											Height="Auto" />
										<RowDefinition
											Height="*" />
										<RowDefinition
											Height="Auto" />
									</Grid.RowDefinitions>
									<ContentPresenter
										x:Name="HeaderContentPresenter"
										Content="{TemplateBinding local:NavigationView.Header}"
										ContentTemplate="{TemplateBinding local:NavigationView.HeaderTemplate}" />
									<ContentPresenter
										x:Name="FooterContentPresenter"
										Grid.Row="2"
										Content="{TemplateBinding local:NavigationView.Footer}"
										ContentTemplate="{TemplateBinding local:NavigationView.FooterTemplate}" />
									<ScrollViewer
										Grid.Row="1"
										Padding="{TemplateBinding Control.Padding}"
										Focusable="False">
										<ItemsPresenter
											SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
									</ScrollViewer>
								</Grid>
							</Border>
							<Border
								x:Name="ContentBorder"
								Grid.Column="1"
								ClipToBounds="True"
								Background="{TemplateBinding Control.Background}">
								<Border
									x:Name="ContentContainer"
									Visibility="Collapsed">
									<UIElement.RenderTransform>
										<TranslateTransform
											x:Name="ContentPresenterTrans">
											<TranslateTransform.X>
												<MultiBinding
													Converter="{StaticResource TransitionAnimationConverter}">
													<Binding
														ElementName="PART_LayoutRoot"
														Path="Tag" />
													<Binding
														Path="ContentWidth"
														RelativeSource="{RelativeSource Mode=TemplatedParent}" />
												</MultiBinding>
											</TranslateTransform.X>
										</TranslateTransform>
									</UIElement.RenderTransform>
									<ContentPresenter
										x:Name="ContentPresenter"
										Content="{TemplateBinding local:NavigationView.Content}"
										ContentTemplate="{TemplateBinding local:NavigationView.ContentTemplate}"
										MaxWidth="{TemplateBinding local:NavigationView.MaxContentWidth}"
										MinWidth="{TemplateBinding local:NavigationView.MinContentWidth}"
										Width="{Binding Path=ContentWidth, Mode=TwoWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
								</Border>
							</Border>
							<Thumb
								x:Name="PART_ResizeDragger"
								Grid.Column="1"
								HorizontalAlignment="Right"
								VerticalAlignment="Stretch"
								Width="4"
								Visibility="Collapsed"
								Opacity="0"
								Focusable="False"
								Cursor="SizeWE"
								Panel.ZIndex="2" />
						</Grid>
					</Border>
					<ControlTemplate.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition
									Property="ItemsControl.IsGrouping"
									Value="True" />
								<Condition
									Property="VirtualizingPanel.IsVirtualizingWhenGrouping"
									Value="False" />
							</MultiTrigger.Conditions>
							<Setter
								Property="ScrollViewer.CanContentScroll"
								Value="False" />
						</MultiTrigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
		<Setter
			Property="ItemsPanel">
			<Setter.Value>
				<ItemsPanelTemplate>
					<VirtualizingStackPanel
						Orientation="Vertical" />
				</ItemsPanelTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style
		x:Key="{x:Type local:NavigationViewItem}"
		TargetType="{x:Type local:NavigationViewItem}">
		<Setter
			Property="MinHeight"
			Value="36" />
		<Setter
			Property="UIElement.SnapsToDevicePixels"
			Value="True" />
		<Setter
			Property="Padding"
			Value="4,4" />
		<Setter
			Property="Margin"
			Value="4,4,4,0" />
		<Setter
			Property="HorizontalAlignment"
			Value="Stretch" />
		<Setter
			Property="VerticalAlignment"
			Value="Center" />
		<Setter
			Property="HorizontalContentAlignment"
			Value="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter
			Property="VerticalContentAlignment"
			Value="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" />
		<Setter
			Property="Background"
			Value="#00FFFFFF" />
		<Setter
			Property="BorderBrush"
			Value="#00FFFFFF" />
		<Setter
			Property="BorderThickness"
			Value="0" />
		<Setter
			Property="FrameworkElement.FocusVisualStyle"
			Value="{StaticResource NavigationViewItemFocusVisual}" />
		<Setter
			Property="Template">
			<Setter.Value>
				<ControlTemplate
					TargetType="{x:Type local:NavigationViewItem}">
					<Border
						x:Name="Bd"
						BorderBrush="{TemplateBinding Control.BorderBrush}"
						BorderThickness="{TemplateBinding Control.BorderThickness}"
						Background="{TemplateBinding Control.Background}"
						Padding="{TemplateBinding Control.Padding}"
						CornerRadius="4"
						SnapsToDevicePixels="True">
						<ContentPresenter
							HorizontalAlignment="{TemplateBinding Control.HorizontalContentAlignment}"
							VerticalAlignment="{TemplateBinding Control.VerticalContentAlignment}"
							SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
					</Border>
					<ControlTemplate.Triggers>
						<MultiTrigger>
							<MultiTrigger.Conditions>
								<Condition
									Property="UIElement.IsMouseOver"
									Value="True" />
							</MultiTrigger.Conditions>
							<Setter
								TargetName="Bd"
								Value="{DynamicResource NavigationViewItemMouseOverBackground}"
								Property="Border.Background" />
							<Setter
								TargetName="Bd"
								Property="Border.BorderBrush"
								Value="{StaticResource NavigationViewItem.MouseOver.Border}" />
						</MultiTrigger>
						<Trigger
							Property="IsEnabled"
							Value="False">
							<Setter
								TargetName="Bd"
								Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
								Property="TextElement.Foreground" />
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
