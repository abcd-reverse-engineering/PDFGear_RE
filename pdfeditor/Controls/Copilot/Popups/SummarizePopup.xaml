<local:PopupWindow
	x:Class="pdfeditor.Controls.Copilot.Popups.SummarizePopup" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Copilot.Popups"
	Title="SummarizePopup"
	Height="600"
	Width="450">
	<Grid>
		<Grid />
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<TextBox
				x:Name="SourceText"
				AcceptsReturn="True"
				TextWrapping="Wrap"
				IsReadOnly="True"
				VerticalScrollBarVisibility="Auto"
				HorizontalScrollBarVisibility="Disabled" />
			<TextBlock
				x:Name="Test"
				Grid.Row="1" />
			<TextBox
				x:Name="ResultText"
				Grid.Row="2"
				AcceptsReturn="True"
				TextWrapping="Wrap"
				IsReadOnly="True"
				VerticalScrollBarVisibility="Auto"
				HorizontalScrollBarVisibility="Disabled" />
		</Grid>
	</Grid>
</local:PopupWindow>
