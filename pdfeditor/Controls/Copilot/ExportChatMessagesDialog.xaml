<Window
	x:Class="pdfeditor.Controls.Copilot.ExportChatMessagesDialog" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:pdfeditor.Controls.Copilot" xmlns:localprop="clr-namespace:pdfeditor.Properties"
	Title="{x:Static localprop:Resources.CopilotExportHistoryWindowTitle}"
	Height="450"
	Width="650"
	Background="{DynamicResource WindowsBackground}"
	TextBlock.Foreground="{DynamicResource TextBrushWhiteAndBlack}"
	MinHeight="300"
	MinWidth="576">
	<Grid
		x:Name="LayoutRoot">
		<FrameworkElement.Resources>
			<ResourceDictionary>
				<Storyboard
					x:Key="ShowToastAnimation">
					<DoubleAnimationUsingKeyFrames
						Storyboard.TargetName="Toast"
						Storyboard.TargetProperty="Opacity"
						Duration="0:0:3.2">
						<DiscreteDoubleKeyFrame
							KeyTime="0"
							Value="0" />
						<LinearDoubleKeyFrame
							KeyTime="0:0:0.1"
							Value="1" />
						<DiscreteDoubleKeyFrame
							KeyTime="0:0:3.1"
							Value="1" />
						<LinearDoubleKeyFrame
							KeyTime="0:0:3.2"
							Value="0" />
					</DoubleAnimationUsingKeyFrames>
				</Storyboard>
			</ResourceDictionary>
		</FrameworkElement.Resources>
		<Grid
			Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<RichTextBox
				x:Name="ContentTextBox"
				IsReadOnly="True"
				Margin="0,0,0,12"
				Padding="0"
				FontSize="12"
				Foreground="{DynamicResource TextBrushWhiteAndBlack}"
				Background="{DynamicResource SolidBrushWhiteAndBlack}"
				BorderBrush="{DynamicResource SignaturebodyBorder}"
				SelectionBrush="{DynamicResource SignaturebodyBorder}"
				ScrollViewer.VerticalScrollBarVisibility="Auto" />
			<Grid
				ColumnSpan="3"
				Row="4"
				HorizontalAlignment="Stretch">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="152" />
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="Auto"
						MinWidth="192" />
					<ColumnDefinition
						Width="12" />
					<ColumnDefinition
						Width="152" />
				</Grid.ColumnDefinitions>
				<Button
					x:Name="CloseBtn"
					FontSize="12"
					Content="{x:Static localprop:Resources.WinBtnCloseContent}"
					IsCancel="True"
					Style="{StaticResource DialogButtonStyle}" />
				<Button
					x:Name="CopyBtn"
					FontSize="12"
					Grid.Column="2"
					Content="{x:Static localprop:Resources.WinExtractTextBtnCopyContent}"
					Style="{StaticResource DialogButtonStyle}"
					Click="CopyBtn_Click" />
				<Button
					x:Name="DownloadBtn"
					FontSize="12"
					Grid.Column="4"
					Content="{x:Static localprop:Resources.WinBtnSaveContent}"
					Style="{StaticResource PrimaryDialogButtonStyle}"
					Click="DownloadBtn_Click" />
			</Grid>
			<Grid
				x:Name="Toast"
				RowSpan="2"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Center"
				Margin="0,0,0,48"
				Opacity="0">
				<UIElement.RenderTransform>
					<TranslateTransform
						x:Name="ToastTrans" />
				</UIElement.RenderTransform>
				<Border
					BorderBrush="#99000000"
					BorderThickness="1"
					CornerRadius="4"
					Background="{DynamicResource NavigationViewStaticBackground}"
					Padding="20,8">
					<TextBlock
						x:Name="ToastContent"
						Text="{x:Static localprop:Resources.WinExtractTextLabelCopiedContent}" />
				</Border>
			</Grid>
		</Grid>
	</Grid>
</Window>
