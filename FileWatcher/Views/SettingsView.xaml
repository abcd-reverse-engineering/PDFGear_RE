<Window
	x:Class="FileWatcher.Views.SettingsView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:FileWatcher.Views"
	Title="SettingsView"
	Height="450"
	Width="500">
	<Grid>
		<StackPanel
			x:Name="Panel"
			Margin="20"
			ButtonBase.Click="StackPanel_Click">
			<CheckBox
				Content="Desktop"
				IsChecked="True"
				Margin="0,0,0,12" />
			<CheckBox
				Content="Download"
				IsChecked="True"
				Margin="0,0,0,12" />
			<CheckBox
				Content="Documents"
				IsChecked="True"
				Margin="0,0,0,12" />
		</StackPanel>
	</Grid>
</Window>
